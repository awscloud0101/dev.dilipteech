@model List<AsteriskBrowserAL.Models.KittingViewModel>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        int nsno = 1;
        <div class="row">
            <div class="col-xs-12">
                <div class="widget-header widget-header-flat widget-header-small">
                    <h5 class="widget-title"></h5><span style="color:#3c8dbc" class="pull-right" id="msg"></span>

                    <div class="widget-toolbar no-border">
                        <div class="inline dropdown-hover">
                        </div>
                    </div>
                </div>
                <div class="table-header">
                    Kits (Select for items)
                </div>
                <div style="overflow:auto;height:500px;">
                    <!-- form start -->
                    <table class="table tbhover table-striped table-bordered dynamic-table" id="Tab1">
                        <thead>

                            <tr>
                                <th>
                                   S.No.
                                </th>
                                <th>
                                    @Html.DisplayName("Kit Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Price/Kit")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @Html.Hidden("KitId", item.InventoryKitId)
                                    <td>
                                        @(nsno++)
                                    </td>
                                    <td>
                                        @item.KitName
                                    </td>
                                    <td>
                                        @item.KitPrice
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    </div>


                </div>
        </div>


    }

    else
    {
        <span style="color: red;"><b>No records to display</b></span>
    }

}


