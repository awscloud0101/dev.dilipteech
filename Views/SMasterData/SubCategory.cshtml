@model AsteriskBrowserAL.Models.SubCategoryViewModel

@{
    ViewBag.Title = "Sub Category";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Master Data
        </li>
        <li class="active">Sub Category</li>
    </ul><!-- /.breadcrumb -->
}


<section class="content">
    <br/>
    <div class="row">
        <div class=col-xs-12>
            @using (Html.BeginForm("SubCategory", "SMasterData", FormMethod.Post))
            {
                if (null != Model)
                {
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                Sub Categories
                            </h5>

                            <div class="widget-toolbar no-border">
                                <div class="inline action-buttons">
                                    <a class="blue P2" id="New" name="New"><i class="fa fa-plus-circle bigger-200"></i></a>
                                </div>
                            </div>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <label class="col-xs-4">Category</label>
                                            <div class="col-xs-6">
                                                @if (null != Model.lstCategory)
                                                {
                                                    @Html.DropDownListFor(model => model.InventoryCategoryId, new SelectList(Model.lstCategory, "InventoryCategoryId", "CategoryName"), "--- Select ---", new { @class = "form-control", id = "CategoryId" })
                                                }
                                                else
                                                {
                                                    <select class="form-control"></select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div id="SubCategoryDetails"></div>
            }
        </div>
    </div>

</section>

<script>

    $(document).ready(function () {

        var CategoryId = $('#CategoryId').val();

        if (CategoryId > 0) {
            GetData();
        }

    });

    $('#CategoryId').change(function () {
        document.getElementById("Validation").innerHTML = "";

        var CategoryId = $('#CategoryId').val();
        if (CategoryId > 0) {
            GetData();
        }
        else {
            $('#SubCategoryDetails').html("");
        }
    });

    function GetData() {
        $.ajax({

            url: '/SMasterData/GetSubCategories',
            data: { CategoryId: $('#CategoryId').val() },
            beforeSend: function () {
                $('#imagemodal').show();
            },
            success: function (data) {
                $('#imagemodal').hide();
                $('#SubCategoryDetails').html(data);
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

    $('#New').click(function () {

        var CategoryId = $('#CategoryId').val();

        if (CategoryId < 1) {
            document.getElementById("Validation").innerHTML = "Please select category"
        }
        else {
            window.location.href = "/SMasterData/SubCategoryC?CategoryId=" + CategoryId
        }

    });


</script>


