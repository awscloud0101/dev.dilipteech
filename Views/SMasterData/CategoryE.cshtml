@model AsteriskBrowserAL.InventoryCategory

@{
    ViewBag.Title = "Edit Category";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Master Data
        </li>
        <li class="active">Category</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
    @*<div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Category Details", "Category")</h3>
        </div>
    </div>*@


    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("CategoryE", "SMasterData", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="box">

                    <div class="box-header">
                        <div class="page-header">
                            <br />
                            <h1>
                           Category
                                <small style="float:right;">
                                    @Html.ActionLink("Back to details", "Category")
                                </small>
                            </h1>
                        </div>

                    </div>
                    <span style="color:red;font-weight:bold;">@Html.ValidationMessage("Category")</span>

                    @*<div class="box-header">
                        <h3 class="box-title">Category</h3>
                            <button class="btn btn-primary pull-right" type="submit" style="width:80px;" onclick="return submitForm();">
                                Save
                            </button>

                    </div>*@
         

                    <div class="box-body">
                       
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Code")</label>

                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control textlength", @id = "Desc",@maxlength="2", placeholder = "Code" })
                            </div>

                            <div class="col-sm-3" style="display:none;" id="Des">
                                <label style="color:red;font-weight:bold;"> Please enter code </label>
                            </div>


                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Category Name")</label>

                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control textlength", @maxlength = "40",@id = "CategoryName", placeholder = "Category Name" })
                            </div>

                            <div class="col-sm-3" style="display:none;" id="descrCategoryName">
                                <label style="color:red;font-weight:bold;"> Please enter category name </label>
                            </div>

                        </div>

                        <div class="hr hr-18 dotted hr-double"></div>
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                <i class="ace-icon fa fa-check bigger-50"></i>
                                Save
                            </button>

                            &nbsp; &nbsp; &nbsp;
                            <button class="btn btn-sm" type="reset">
                                <i class="ace-icon fa fa-undo bigger-50"></i>
                                Reset
                            </button>

                        </div>
                    </div>
                </div>
    <input type="hidden" id="InventoryCategoryId" name="InventoryCategoryId" value="@Model.InventoryCategoryId" />
            }
        </div>

    </div>
    <input type="hidden" id="count" name="count" value="0" />

</section>

<script type="text/javascript">
    function validateCategory() {

         document.getElementById("count").value = "1";
         var CategoryName = document.getElementById("CategoryName").value;
        var Code = document.getElementById("Desc").value;

        validate = true;

        if (CategoryName == "") {
            document.getElementById("descrCategoryName").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("descrCategoryName").style.display = "none";
        }

        if (Code == "") {
            document.getElementById("Des").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("Des").style.display = "none";
        }


        return validate;
    };

    function submitForm() {

        var validatestatus = validateCategory();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };

    $('#CategoryName').focus(function () {
        $('#descrCategoryName').hide();
    });
    $('#Desc').focus(function () {
        $('#Des').hide();
    });



</script>






