@model AsteriskBrowserAL.Models.ItemModel

@{
    ViewBag.Title = "Delete Item";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Master Data
        </li>
        <li class="active">Item</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
  
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ItemD", "SMasterData", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.CategoryId)
                @Html.HiddenFor(model => model.SubCategoryId)
    @Html.HiddenFor(model => model.InventorySubCategoryItemId)
                @Html.HiddenFor(model => model.InventorySubCategoryItemTypeId)
                <input type="hidden" name="id" id="id" value="@Model.InventorySubCategoryItemId" />
             
                <br />
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>
                <div class="box">
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                   
                    <div class="box-header">
                        <div class="page-header">
                            <br />
                            <h1>
                                Item
                                <small style="float:right;">
                                    @Html.ActionLink("Back to details", "Item", new { CategoryId = (null != Model) ? Model.CategoryId : 0, SubCategoryId = (null != Model) ? Model.SubCategoryId : 0, ItemGroupId = (null != Model) ? (Model.InventorySubCategoryItemTypeId.HasValue ? Model.InventorySubCategoryItemTypeId.Value : 0) : 0 })
                                </small>
                            </h1>
                        </div>

                    </div>

                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Code")</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.SKUCode, new { @class = "form-control textlength", @readonly = "readonly", @id = "Code", placeholder = "Code" })
                            </div>
                            <span class="col-sm-3" style="color:red;font-weight:bold;" id="CodeVal">
                            </span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Item Name")</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control textlength", @id = "ItemName", @maxlength = "40", placeholder = "Item Name" })
                            </div>
                            <span class="col-sm-3" style="color:red;font-weight:bold;" id="ItemNameVal">
                            </span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("UOM")</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.UOM, new { @class = "form-control textlength txtboxNum", @id = "UOM", @maxlength = "3", placeholder = "UOM" })
                            </div>
                            <span class="col-sm-3" style="color:red;font-weight:bold;" id="UOMVal">
                            </span>
                        </div>
                        <div class="hr hr-18 dotted hr-double"></div>
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info btn-sm" onclick="return submitForm();" type="submit">
                                <i class="ace-icon fa fa-check bigger-50"></i>
                                Submit
                            </button>


                        </div>

                    </div>
                </div>

            }
        </div>
    </div>
</section>

<script>
    function submitForm()
    {
        var valid = true;

        var Id = $('#id').val();

        if(Id > 0)
        {
            $.ajax({

                url: '/SMasterData/ValidationForItemD',
                data: { Id: Id },
                success: function (data) {
                    if (data != "") {
                        document.getElementById('Validation').innerHTML = data;
                        valid = false;
                    }
                },
                async: false
            });
        }

        return valid;
    }
</script>

