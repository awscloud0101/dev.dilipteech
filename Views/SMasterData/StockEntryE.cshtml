@model List<AsteriskBrowserAL.Models.StockEntryViewModel>

@{
    ViewBag.Title = "Stock Entry Edit";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Master Data
        </li>
        <li class="active">Stock Entry</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <div class="page-header">
        <h1>
            Stock Entry
            <small style="float:right;">
                @Html.ActionLink("Back to details", "StockEntry")
            </small>
        </h1>
    </div>

    <div class="row">
        <div class=col-xs-12>
            @using (Html.BeginForm("StockEntryE", "SMasterData", FormMethod.Post))
            {
                if (null != Model)
                {

                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                Stock Entry Edit
                            </h5>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <label class="col-xs-4">Lot Number</label>
                                            <div class="col-xs-6">
                                                @if (null != Model)
                                                {
                                                    @Html.DropDownList("LotNumber", new SelectList(Model, "SelLotNumber", "LotNumber"), "--- Select ---", new { @class = "form-control", id = "LotNumber" })
                                                }
                                                else
                                                {
                                                    <select class="form-control"></select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                }

                <div id="LotDetails"></div>
            }
        </div>

    </div>

</section>

<script>

    $('#LotNumber').change(function () {
        var LotNumber = $('#LotNumber').val();
        if (LotNumber != "") {
            GetData();
        }
        else {
            $('#LotDetails').html("");
        }
    });

    function GetData() {
        $.ajax({

            url: '/SMasterData/GetItemsForStockEntryEdit',
            data: { LotNumber: $('#LotNumber').val() },
            beforeSend: function () {
                $('#imagemodal').show();
            },
            success: function (data) {
                $('#LotDetails').html(data);
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

</script>
