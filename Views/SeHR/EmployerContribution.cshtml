@model IEnumerable<AsteriskBrowserAL.Models.EmployerContributionData>
@{
    ViewBag.Title = "EmployeeContribution";
}
@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Employee Contribution</li>
    </ul><!-- /.breadcrumb -->
}

<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div><!-- #dialog-confirm -->

<section class="content">

    <br />

        @if (null != Model)
        {
            if (Model.Count() > 0)
            {
                int nsno = 1;
                <div class="table-header">
                    Employer Contribution
                    <a class="view-header-btn  btn btn-info btn-xs P2" href="@Url.Action("EmployerContributionC", "SeHR")" role="button"   style="float:right" id="New" name="New"><i class="fa fa-plus-circle bigger-180"></i></a>

                </div>
                     
                <div class="box-body table-responsive no-padding">
                    <table class="table tbhover table-striped table-bordered dynamic-table">
                        <thead>

                            <tr>
                                <th>
                                   S.No.
                                </th>
                                <th>
                                    @Html.DisplayName("Contribution To")
                                </th>
                                <th>
                                    @Html.DisplayName("Percentage (%)")
                                </th>
                                <th>
                                    @Html.DisplayName("Percentage On")
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(nsno++)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContributionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Percentage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PayrollCategoryName)
                                    </td>

                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            <a class="green P2" href="@Url.Action("EmployerContributionE", "SeHR", new { id = item.EmployerContributionId })">
                                                <i class="ace-icon fa fa-pencil  bigger-130"></i>

                                            </a>
                                            <a class="red P2" onclick="btnConfirm(@item.EmployerContributionId)">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>

                                            </a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>



                </div>


                }

                else
                {
                  <div class="table-header">
                    Employee Contribution
                      <a class="view-header-btn  btn btn-info btn-xs" href="@Url.Action("EmployerContributionC", "SeHR")" role="button" style="float:right" id="New" name="New"><i class="fa fa-plus-circle bigger-180"></i></a>
                    </div>
                    <span style="color: red;"><b>No records found </b></span>
                    }
                    }
</section>
@Html.Action("DataTableScripts", "Base")


<script>

    function btnConfirm(Value) {
        if (Value > 0) {
            $.ajax({
                url: '/SeHR/ValidationForEmployerContributionD',
                data: { Id: Value },
                success: function (data) {
                    debugger
                    var url = '/SeHR/EmployerContributionD?id=' + Value;
                    var title = "Employer Contribution";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }

</script>
