@model AsteriskBrowserAL.EmployeeGrade

@{
    ViewBag.Title = "Delete EmployeeGrade";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Employee Grade</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< EmployeeGrade Details", "EmployeeGrade")</h3>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">

            @using (Html.BeginForm("EmployeeGradeD", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>
                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("EmployeeGrade")</span>
                        <div class="box-header">
                            <h3 class="box-title">Employee Grade</h3>
                            <button class="btn btn-primary pull-right" type="submit" style="width:80px;">
                                Delete
                            </button>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover table-hover table-striped table-bordered">
                                <tbody>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Grade Name")
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Priority)
                                        </th>
                                        <th>
                                            @Html.DisplayName("Periods Per Week")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Periods Per Day")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                    </tr>

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.GradeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Priority)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.PeriodsPerWeek)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.PeriodsPerDay)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Status)
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                </div>
            }
        </div>


    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


