@model AsteriskBrowserAL.PayrollCategoryComponents

@{
    ViewBag.Title = "Delete Payroll Category Components";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Payroll Components</li>
    </ul><!-- /.breadcrumb -->
}








<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Payroll Component Details", "PayrollCategoryComponents")</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("PayrollCategoryComponentsD", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>

                </div>
    <span style="color: red;font-weight:bold;">@Html.ValidationMessage("PayrollCategoryComponents")</span>

                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                  
                    <div class="box-header">
                        <h3 class="box-title">Payroll Code</h3>
                       
                    <button class="btn btn-primary pull-right" type="submit" style="width:80px;float:right;">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                   
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <th>
                                       S.No.
                                    </th>
                                    <th>
                                        @Html.DisplayName("Category Name")
                                    </th>
                                    
                                </tr>

                                <tr>
                                    <td>1</td>
                                    <td>
                                        @Html.DisplayFor(model => model.CategoryName)
                                    </td>
                                   
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>



</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
