@model IEnumerable<AsteriskBrowserAL.PayrollCategoryCodeNumbers>

@{
    ViewBag.Title = "Payroll Category Codes";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Payroll Codes</li>
    </ul><!-- /.breadcrumb -->
}




<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div><!-- #dialog-confirm -->


<section class="content">
   
    <br />

    @if (null != TempData["PayrollCategoryCodes"])
    {
        @Html.Raw(TempData["PayrollCategoryCodes"])
    }
    @if (null != Model)
    {
        int nsno = 1;
        <div class="table-header">
            Payroll Codes
            <div style="float:right">
                <a class="btn btn-info btn-xs P2" href="@Url.Action("PayrollCategoryCodesC", "SeHR")" role="button" id="New" name="New"><i class="fa fa-plus-circle bigger-200 pull-right"></i></a>
                </div>
            </div>

    <table class="table tbhover table-striped table-bordered dynamic-table">
        <thead>
            <tr>
                <th>
                   S.No.
                </th>
                <th>
                    @Html.DisplayName("Payroll Code")
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(nsno++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayrollCategoryCode)
                    </td>

                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a class="green P2" href="@Url.Action("PayrollCategoryCodesE", "SeHR", new { id = item.PayrollCategoryCodeNumbersId })">
                                <i class="ace-icon fa fa-pencil  bigger-130"></i>
                            </a>
                            <a class="red P2" onclick="btnConfirm(@item.PayrollCategoryCodeNumbersId)">
                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                            </a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Action("DataTableScripts", "Base", new { IsPaging = false, allowScroll = true })

    }
    else
    {
        <div class="table-header">
            Payroll Codes
            <a class="view-header-btn btn btn-info btn-xs P2" href="@Url.Action("PayrollCategoryCodesC", "SeHR")" role="button" id="New" name="New"><i class="fa fa-plus-circle bigger-200"></i></a>
        </div>
        <span style="color: red;"><b>   Records Found (0) </b></span>
      
    }
</section>

<script>
    function btnConfirm(Value) {
        if (Value > 0) {
            $.ajax({
                url: '/SeHR/ValidationForPayrollCategoryCodesD',
                data: { id: Value },
                success: function (data) {
                    var url = '/SeHR/PayrollCategoryCodesD?id=' + Value;
                    var title = "Payroll Codes";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }
</script>
