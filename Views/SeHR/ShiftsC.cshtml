        </div>
    </div>
    <input type="hidden" id="count" name="count" value="0" />
</section>


<script type="text/javascript">
    function validateiImportantdays() {

        document.getElementById("count").value = "1";
        var StaffShiftName = document.getElementById("StaffShiftName").value;
        var IHours = document.getElementById("IHours").value;
        var OHours = document.getElementById("OHours").value;

        validate = true;

        if (StaffShiftName == "") {
            document.getElementById("staffshiftname").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("staffshiftname").style.display = "none";
        }

        if (IHours < 0) {
            document.getElementById("iHours").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("iHours").style.display = "none";
        }

        if (OHours < 0) {
            document.getElementById("oHours").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("oHours").style.display = "none";
        }
        if (IHours > OHours) {
            document.getElementById("error").innerHTML = "In time is greator then Out Time"
            validate = false;
        }

        if (IHours < 0 && OHours < 0) {
            if (OHours < IHours) {
                document.getElementById("ESValidateoHours").style.display = "inline";
                validate = false;
            } else {
                document.getElementById("ESValidateoHours").style.display = "none";
            }
        }


        return validate;
    };

    function submitForm() {

        var validatestatus = validateiImportantdays();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };

    $('#StaffShiftName').click(function () {
        document.getElementById('staffshiftname').style.display = "none"
    })


    $('#IHours').click(function () {
        document.getElementById('iHours').style.display = "none"
    })

    $('#OHours').click(function () {
        document.getElementById('oHours').style.display = "none"
    })

</script>


