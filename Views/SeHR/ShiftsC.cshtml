<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<<Shifts Details", "Shifts")</h3>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            <!-- form start -->
            @using (Html.BeginForm("ShiftsC", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <span style="color:red" id="error"></span>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title ">Shifts</h3>
                        <br />
                        <br />
                        <button class="btn btn-primary" type="submit" style="width:80px;" onclick="return submitForm();">
                            Create
                        </button>
                    </div><!-- /.box-header -->

                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Name")</label>

                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.StaffShiftName, new { @class = "form-control textlength", placeholder = "StaffShiftName", @id = "StaffShiftName" })
                            </div>

                            <div class="col-sm-3" style="display:none;" id="staffshiftname">
                                <label style="color:red;font-weight:bold;"> Please Enter The Shift Name </label>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("In Time")</label>

                            <div class="col-sm-8">
                                <div class="col-sm-2">
                                    @Html.DropDownList("IHours", new SelectList(IHours, "Value", "Text"), new { @class = "form-control", @style = "width:100px", @id = "IHours", placeholder = "IHours" })
                                </div>
                                <div class="col-sm-2">
                                    @Html.DropDownList("IMinutes", new SelectList(IMinutes, "Value", "Text"), new { @class = "form-control", @style = "width:100px" })
                                </div>
                                <div class="col-sm-5" style="display:none;" id="iHours">
                                    <label style="color:red;font-weight:bold;">Please select In Hours</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Out Time")</label>
                            <div class="col-sm-8">
                                <div class="col-sm-2">
                                    @Html.DropDownList("OHours", new SelectList(OHours, "Value", "Text"), new { @class = "form-control", @style = "width:100px", @id = "OHours", placeholder = "OHours" })
                                </div>
                                <div class="col-sm-2">
                                    @Html.DropDownList("OMinutes", new SelectList(OMinutes, "Value", "Text"), new { @class = "form-control", @style = "width:100px" })
                                </div>

                                <div class="col-sm-5" style="display:none;" id="oHours">
                                    <label style="color:red;font-weight:bold;">Please select Out Time</label>
                                </div>
                                <div class="col-sm-4" style="display:none;" id="ESValidateoHours">
                                    <label style="color:red;font-weight:bold;"> Out Time should be greater than In Time</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Is Study Hour")</label>

                            <div class="col-sm-6">
                                @Html.CheckBoxFor(model => model.IsStudyHour.Value, new { Name = "IsStudyHour" })
                                <input name="IsStudyHour" type="hidden" value="false" />
                            </div>

                            <div class="col-sm-3">
                                <span style="color: red;font-weight:bold;">  @Html.ValidationMessage("IsStudyHour")</span>
