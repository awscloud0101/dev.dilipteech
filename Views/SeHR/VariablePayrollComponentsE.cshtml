@model AsteriskBrowserAL.VariablePayrollComponents
@{
    ViewBag.Title = "VariablePayrollComponentsE";
}


<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Variable Payroll Components</li>
    </ul><!-- /.breadcrumb -->
}








<section class="content">
    @*<div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Variable Payroll Component Details", "VariablePayrollComponents")</h3>
        </div>
    </div>*@
    <br />
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- form start -->
                @using (Html.BeginForm("VariablePayrollComponentsE", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("PayrollCategoryCodes")</span>
                    <div class="box-header">
                        <div class="page-header">

                            <h1>
                                 Variable Payroll Components
                                <small style="float:right;">
                                    @Html.ActionLink("Back to details", "VariablePayrollComponents" )
                                </small>
                            </h1>
                        </div><!-- /.page-header -->
                        @*<h3 class="box-title">Variable Payroll Components</h3>

                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;float:right" onclick="return ValidateForm();">
                            Save
                        </button>
                    </div> /.box-header*@ 
                        </div>
                    @Html.HiddenFor(model => model.VariablePayrollComponentId)

                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Variable Payroll Component")</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.ComponentName, new { @class = "form-control", placeholder = "Component Name"})
                            </div>
                            <div class="col-sm-3" style="display:none;" id="vComponentName">
                                <label style="color:red;font-weight:bold;">required</label>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Is Deduction")</label>
                            <div class="col-sm-3">
                                @if (Model.IsDeduction.HasValue)
                                {
                                    if (Model.IsDeduction.Value == true)
                                    {
                                        <input type="checkbox" name="IsDeduction" checked="checked" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" name="IsDeduction" />
                                    }
                                }
                                else
                                {
                                    <input type="checkbox" name="IsDeduction" />
                                }
                            </div>
                            <div class="col-sm-3" style="display:none;" id="vIsDeduction">
                                <label style="color:red;font-weight:bold;">required</label>
                            </div>
                            <br/>
                            <div class="hr hr-18 dotted hr-double"></div>
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-success btn-sm" onclick="return ValidateForm();" type="submit">
                                    <i class="ace-icon fa fa-check bigger-50"></i>
                                    Save
                                </button>

                                &nbsp; &nbsp; &nbsp;
                                <button class="btn btn-sm" type="reset">
                                    <i class="ace-icon fa fa-undo bigger-50"></i>
                                    Reset
                                </button>
                              
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <input type="hidden" id="count" name="count" value="0" />
</section>

<script type="text/javascript">
    function ValidateForm() {
        var validate = true;

        var CategoryName = $('#ComponentName').val();
        var IsDeduction = $('#IsDeduction').val();

        if (CategoryName == undefined || CategoryName == "" || categoryname.length < 1) {
            validate = false;
            $('#vComponentName').show();
        }
        if (IsDeduction == "") {
            validate = false;
            $('#vIsDeduction').show();
        }

        return validate;
    }


</script>

