 @model AsteriskBrowserAL.PayrollCategoryCodeNumbers

@{
    ViewBag.Title = "Edit Payroll Category Code Numbers";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>
@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Payroll Codes</li>
    </ul><!-- /.breadcrumb -->
}






<section class="content">
  
                <br />
 
                @using (Html.BeginForm("PayrollCategoryCodesE", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <span style="color: red;">@Html.ValidationMessage("PayrollCategoryCodes")</span>
                <div class="page-header">
                    <br />
                <h1>
               Payroll Code Details
                <small style="float:right;">
                @Html.ActionLink("Back to details", "PayrollCategoryCodes", new { CategoryId = Model.PayrollCategoryCodeNumbersId })
               </small>
           </h1>
           </div><!-- /.page-header -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title col-xs-11"></h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" role="form">
            @Html.HiddenFor(model => model.PayrollCategoryCodeNumbersId)
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Payroll Codes")</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.PayrollCategoryCode, new { @class = "form-control col-sm-5 textlength", placeholder = "Payroll Code", @id = "PayrollCategoryCode", @onchange = "removeError();" })
                </div>
                <div class="col-sm-3" style="display:none;" id="vPayrollCategoryCode">
                    <label style="color:red;font-weight:bold;"> Please Enter The Payroll Codes </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"></label>
            </div>
            
            <div class="hr hr-18 dotted hr-double"></div>
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-success btn-sm" onclick="return subitForm();" type="submit">
                    <i class="ace-icon fa fa-check bigger-50"></i>
                    Save
                </button>

                &nbsp; &nbsp; &nbsp;
                <button class="btn btn-sm" type="reset">
                    <i class="ace-icon fa fa-undo bigger-50"></i>
                    Reset
                </button>
            </div>
        </form>
    </div>
                }
           

            <input type="hidden" id="count" name="count" value="0" />
</section>

<script type="text/javascript">
    function validatePayrollCategoryCodes() {

        document.getElementById("count").value = "1";
        var PayrollCategoryCodes = document.getElementById("PayrollCategoryCodes").value;
        

        validate = true;

        if (PayrollCategoryCodes == "") {
            document.getElementById("vPayrollCategoryCode").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("vPayrollCategoryCode").style.display = "none";
        }

      


        return validate;
    };

    function submitForm() {

        var validatestatus = validatePayrollCategoryCodes();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };

    $('#PayrollCategoryCodes').click(function () {
        document.getElementById('vPayrollCategoryCode').style.display = "none"
    })


  

</script>



