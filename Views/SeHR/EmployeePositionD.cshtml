@model AsteriskBrowserAL.EmployeePosition

@{
    ViewBag.Title = " Delete EmployeePosition";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Employee Position</li>
    </ul><!-- /.breadcrumb -->
}






<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Employee Position Details", "EmployeePosition")</h3>
        </div>
    </div>
    <br />
    <span style="color: red;">
        <b>Are you sure you want to delete this?</b>
    </span>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("EmployeePositionD", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <span style="color: red;">@Html.ValidationMessage("EmployeePosition")</span>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Designations</h3>
                      
                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;">
                            Delete
                        </button>


                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Position Name")
                                    </th>

                                    <th>
                                        @Html.DisplayName("Status")
                                    </th>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.PositionName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.Status)
                                    </td>


                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>


</section>




