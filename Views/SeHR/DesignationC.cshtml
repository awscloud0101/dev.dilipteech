@model AsteriskBrowserAL.Models.EmployeeDesignationData


@{
    ViewBag.Title = "Create Designation";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-gears"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            HR
        </li>
        <li class="active">Designation</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">


    <div class="col-xs-12">
        @using (Html.BeginForm("DesignationC", "SeHR", FormMethod.Post, new { @class = "form-horizontal" }))
            {

            <div class="box">
                <span style="color:red;font-weight:bold;">@Html.ValidationMessage("Designation")</span>



                <div class="box">
                    <span style="color:red;font-weight:bold;">@Html.ValidationMessage("AccessLevels")</span>



                    <div class="table-header">
                        <span style="font-family:calibri;">Access Levels</span>
                        <small style="float:right;" class="textheader">
                            @Html.ActionLink("Back to details", "Designations")
                        </small>

                    </div>
                 
                    <!-- form start -->


                    <div class="widget-box row" style="padding:10px;">
                        <form class="form-horizontal" role="form">
                            <div class="box-body">

                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">@Html.Label("Access Level Name")</label>

                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.DesignationName, new { @class = "form-control textlength", @id = "DesignationId", placeholder = "Designation Name" })
                                        
                                            <div class="" style="display:none;" id="nameNull">
                                                <label style="color:red;font-weight:bold;">  Please Enter Access Level Name </label>
                                            </div>
                                        </div>

                                        

                                    </div>
                                </div>

                                
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">@Html.Label("Reporting Manager")</label>

                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(model => model.EmployeeDesignationId, new SelectList(Model.lstDesignations, "EmployeeDesignationId", "DesignationName"), new { @class = "form-control", id = "EmployeeDesignationId" })
                                       
                                            <div class="" style="display:none;" id="designationNull">
                                                <label style="color:red;font-weight:bold;">  Please Select Report Manager </label>
                                            </div>
                                        </div>

                                 


                                    </div>


                                </div>
                                

                                
                                <div class="col-md-9" align="left">
                                    <div class="hr hr-18 dotted hr-double"></div>
                                    <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                        <i class="ace-icon fa fa-check bigger-50"></i>
                                        Save
                                    </button>
                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn btn-sm" type="reset">
                                        <i class="ace-icon fa fa-undo bigger-50"></i>
                                        Reset
                                    </button>
                                </div>

                            </div>
                        </form>



                    </div>
                </div>


                
            </div>
        }
        </div>
            <input type="hidden" id="count" name="count" value="0" />
        </section>

        <script type="text/javascript">
            function validateDesgination() {

                document.getElementById("count").value = "1";
                var Name = $('#DesignationId').val();
                var empDesignation = $('#EmployeeDesignationId').val();

                validate = true;

                if (Name == "") {
                    document.getElementById("nameNull").style.display = "inline";
                    validate = false;
                } else {
                    document.getElementById("nameNull").style.display = "none";
                }

                if (empDesignation == "-1") {
                    document.getElementById("designationNull").style.display = "inline";
                    validate = false;
                } else {
                    document.getElementById("designationNull").style.display = "none";
                }

                return validate;
            };

            function submitForm() {

                var validatestatus = validateDesgination();
                if (validatestatus == false) {
                    return false;
                } else {
                    return true;
                }
            };

            $('#Name').focus(function () {
                $('#Nameval').hide();
            });


        </script>









