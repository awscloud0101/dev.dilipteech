@model  IEnumerable<AsteriskBrowserAL.Models.PagesData>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        int SNo = 1;
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Records Found(@Model.Count())</h3>
            </div>

            <div class="box-body">
                <table id="mytab1" class="table table-bordered table-striped table-hover nowrap" style="font-size:14px;">
                    <tbody>
                        <tr>
                            <th>
                               S.No.
                            </th>
                            <th>
                                @Html.DisplayName("Page Name")
                            </th>
                            <th>
                                @Html.DisplayName("Unique Name")
                            </th>
                            <th>
                                @Html.DisplayName("PBURL")
                            </th>
                            <th>
                                @Html.DisplayName("POrderId")
                            </th>
                            @*<th>
                                    @Html.DisplayName("IsBrowser")
                                </th>*@

                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(SNo++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UniqueName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PBURL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.POrderId)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.IsBrowser)
                                    </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "PagesE", new { id = item.PageId },new {Class="P2"}) |
                                    @Html.ActionLink("Delete", "PagesD", new { id = item.PageId },new {Class="P2"})
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    }

    else
    {
        <span style="color:red;font-weight:bold">Data is not available</span>
    }
}