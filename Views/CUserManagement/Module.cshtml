
@model List<Module>

<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Controller
        </li>
        <li>
            <i class=""></i>
            CUserManagement
        </li>
        <li class="active">Module</li>
    </ol>
  
</section>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-primary P2" style="width:80px;" onclick="location.href='@Url.Action("ModuleC","CUserManagement")'">New</button>
        </div>
    </div>
    <br />

    @if (null != Model)
    {
        int nsno = 1;
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Modules</h3>
                    </div>
                    <div>
                        <div class="box-body">
                            <table class="table table-hover table-bordered table-striped nowrap">
                                <tbody>
                                    <tr>
                                        <th>
                                           S.No.
                                        </th>
                                        <th>
                                            @Html.DisplayName("Module Name")
                                        </th>
                                        <th>@Html.DisplayName("MIcon")</th>
                                        <th>@Html.DisplayName("OrderId")</th>
                                        <th></th>
                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @(nsno++)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.ModuleName)

                                            </td>
                                            <td>
                                                &nbsp;
                                                @Html.DisplayFor(modelItem => item.MIcon)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MOrderId)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "ModuleE", new { id = item.ModuleId },new {Class="P2"})|
                                                @Html.ActionLink("Delete", "ModuleD", new { id = item.ModuleId },new {Class="P2"})
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
    else
    {
        <span style="color: red;"><b>Data is not available </b></span>
    }
</section>




