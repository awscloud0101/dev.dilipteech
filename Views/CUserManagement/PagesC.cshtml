        if (strUniqueName == "" || strUniqueName == null || strUniqueName == undefined) {
            bValidationPass = false;
            $('#vUniqueName').show();
       

        if (strPageURI == "" || strPageURI == null || strPageURI == undefined) {
            bValidationPass = false;
            $('#vPageURI').show();
        }
        }
        if (strPOrderId == "" || strSectionName == null || strSectionName == undefined) {
            bValidationPass = false;
            $('#vPOrderId').show();
        }
        if (strPBURL == "" || strPBURL == null || strPBURL == undefined) {
            bValidationPass = false;
            $('#vPBURL').show();
        }
       
        if (strPIcon == "" || strPIcon == null || strPIcon == undefined) {
            bValidationPass = false;
            $('#vPIcon').show();
        }
        if (strModuleId == "" || strModuleId == null || strModuleId == undefined) {
