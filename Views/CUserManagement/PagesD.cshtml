@model Pages
@{
    ViewBag.Title = "Delete Pages";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

<!-- #section:basics/content.breadcrumbs -->
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Controls
        </li>
        <li>
            <i class=""></i>
            UserManagement
        </li>
        <li class="active">Pages</li>
    </ol>
    <!-- /section:basics/content.breadcrumbs -->
</section>


<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Page Details", "Pages")</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("PagesD", "CUserManagement", new { nModuleId = Model.ModuleId }, FormMethod.Post))
            {
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>

                </div>
                <span style="color: red;font-weight:bold;">@Html.ValidationMessage("ValidationMsg")</span>

                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="box-header">
                        @*<h3 class="box-title">Program </h3>*@

                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;float:right;">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <th>
                                       S.No.
                                    </th>
                                    <th>
                                        @Html.DisplayName("Page Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Unique Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("PBURL")
                                    </th>
                                    <th>
                                        @Html.DisplayName("POrderId")
                                    </th>
                                    @*<th>
                                            @Html.DisplayName("IsBrowser")
                                        </th>*@

                                </tr>

                                <tr>
                                    <td>1</td>
                                    <td>
                                        @Html.DisplayFor(model => model.PageName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.UniqueName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.PBURL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.POrderId)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(model => model.IsBrowser)
                                        </td>*@

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>



</section>




