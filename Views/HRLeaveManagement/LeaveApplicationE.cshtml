@model AsteriskBrowserAL.StaffLeaves

@{
    ViewBag.Title = "LeaveApplicationE";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Transactions
        </li>
        <li>
            <i class=""></i>
            Staff
        </li>
        <li class="active">Leave Application</li>
    </ul><!-- /.breadcrumb -->
}




@Html.Action("DatePickerScripts", "Base")

<section class="content">
    @*<div class="row">
            <div class=col-xs-12>
                <h3>@Html.ActionLink("<< Leave Application Details", "LeaveApplication", new { StaffId = ViewBag.Sel_StaffId })</h3>
            </div>
        </div>
