                                </th>
                                <th>
                                    @Html.DisplayName("Rating")
                                </th>



                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {

                                <tr>
                                    <td>
                                        @Html.Hidden("lstStudents.Index", (@i + 10))
                                        @Html.Hidden("lstStudents[" + (@i + 10) + "].CategoryId", Model.ElementAt(i).CategoryId)
                                        @Html.Hidden("lstStudents[" + (@i + 10) + "].DisplayName", Model.ElementAt(i).DisplayName)
                                        @(nsno++)
                                    </td>
                                    <td>
                                        @Model.ElementAt(i).DisplayName
                                    </td>

                                    <td>
                                        @if (Model.ElementAt(i).IsChecked == true)
                                        {
                                            @Html.TextBox("lstStudents[" + (@i + 10) + "].SportsRank", Model.ElementAt(i).SportsRank, new { @id = "Rating", @type = "number", @min = "0", @max = "10", @title = "Please enter proper rating" })
                                        }
                                        else
                                        {
                                          @Model.ElementAt(i).SportsRank
                                        }
                                    </td>



                                </tr>

                            }
                        </tbody>

                    </table>
                }

            </div>
        </div>

        @Html.Action("DataTableScripts", "Base", new { IsPaging = false, AllowScroll = true })

    }
    else
    {
        <h2>data is not available</h2>
    }





</section>
