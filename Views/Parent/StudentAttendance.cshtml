@model IEnumerable<AsteriskBrowserAL.Models.StudentAttendanceViewModel>
@{
    Layout = "~/Views/Shared/Parent_Layout.cshtml";
}
@{
    ViewBag.Title = "Attendance";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
        </div>
    </div>
    <br />
    @if (Model != null)
    {
        int nsno = 1;
        <div class="row">
            <div class="col-xs-12">
                <div class="table-header">
                    <div class="txtTableHeader">
                        Student Attendance
                    </div>
                </div>

                <table class="table tbhover table-striped table-bordered dynamic-table">
                    <thead>

                        <tr>
                            <th>
                                @*@Html.DisplayName("SNo")*@
                                S.No.
                            </th>
                            <th>
                                @Html.DisplayName("Month")
                            </th>
                            <th>
                                @Html.DisplayName("Working Days")
                            </th>
                            <th>
                                @Html.DisplayName("Present Days")
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(nsno++)
                                </td>
                                <td>
                                    @item.MonthName
                                </td>
                                <td>
                                    @item.NoOfWorkingDays
                                </td>
                                <td>
                                    @item.NoOfPresentDays
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>

    }
    else
    {
        <span style="color: red;"><b>There are no Holidays</b></span>
    }
</section>

@Html.Action("DataTableScripts", "Base")