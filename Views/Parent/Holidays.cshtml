
@model IEnumerable<AsteriskBrowserAL.Holidays>
@{
    Layout = "~/Views/Shared/Parent_Layout.cshtml";
}
@{
    ViewBag.Title = "Holidays";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">
        </div>
    </div>
    <br />
    @if (Model != null)
    {
        int nsno = 1;
        <div class="row">
            <div class="col-xs-12">

                <div class="table-header">
                    <div class="txtTableHeader">
                        Holidays (@Model.Count())
                    </div>
                </div>
                <table class="table tbhover table-striped table-bordered dynamic-table">
                    <thead>

                        <tr>
                            <th>
                                S.No.
                            </th>
                            <th>
                                @Html.DisplayName("Holiday Date")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>


                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(nsno++)
                                </td>
                                <td>
                                    @if (null == item.HolidayDate)
                                    {

                                    }
                                    else
                                    {
                                        @item.HolidayDate.Value.ToString("dd - MMM - yyyy")
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>

                    </div>
                </div>
        
    }
    else
    {
        <span style="color: red;"><b>There are no Holidays</b></span>
    }
</section>

@Html.Action("DataTableScripts", "Base")