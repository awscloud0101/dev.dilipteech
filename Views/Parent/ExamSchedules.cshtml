@model IEnumerable<AsteriskBrowserAL.Models.ExamShedulesData>
@{
    Layout = "~/Views/Shared/Parent_Layout.cshtml";
}
@{
    ViewBag.Title = "ExamSchedulesPartialView";

    int nSNo = 1;
}


@if (null != Model && Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="table-header">
            <div class="txtTableHeader">
                Examination Schedules (@Model.Count())
            </div>
        </div>
        <table class="table tbhover table-striped table-bordered dynamic-table">
            <thead>
                <tr>
                    <th>
                        S.No.
                    </th>
                    <th>
                        @Html.DisplayName("Exam Code")
                    </th>
                    <th>
                        @Html.DisplayName("Exam Name")
                    </th>
                    <th>
                        @Html.DisplayName("Start Date")
                    </th>
                    <th>
                        @Html.DisplayName("End Date")
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(nSNo++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamName)
                        </td>
                        <td>
                            @if (item.StartDate.HasValue)
                            {
                                @item.StartDate.Value.ToString("dd-MMM-yyyy")
                            }
                        </td>
                        <td>
                            @if (item.EndDate.HasValue)
                            {
                                @item.EndDate.Value.ToString("dd-MMM-yyyy")
                            }
                        </td>
                        <td><a href="/Parent/ExamMarks?ExamId=@item.ExamId" target="_blank">View Marks</a></td>
                    </tr>
                }
            </tbody>
</table>
    </div>

}
else
{
        <div class="col-xs-12">
            <span style="font-weight:bold;color:red">Data not available to display</span>
        </div>
        }
        @Html.Action("DataTableScripts", "Base")
