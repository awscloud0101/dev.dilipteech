<section class="content">
    <br />
    <span style="font-weight:bold;color:red" id="Validation"></span>
    @using (Html.BeginForm("ExcelStudentResultReportDT", "AOnlineExamination", FormMethod.Post))
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="widget-box">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <h5 class="widget-title">
                            Online Exam Schedules
                        </h5>
                    </div>
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right">@Html.Label("Class")</label>

                                            <div class="col-sm-6">
                                                @Html.DropDownListFor(model => model.ClassNumber, new SelectList(Model.lstClassNumbers, "ClassNumber", "ClassNumberDisplay"), "-- Select --", new { @class = "form-control", id = "ClassNumber" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right">@Html.Label("Branch")</label>

                                            <div class="col-sm-6">
                                                @Html.DropDownListFor(model => model.SubscriptionId, new SelectList(Model.lstSubscriptions, "SubscriptionId", "Institute"), "-- Select --", new { @class = "form-control", id = "SubscriptionId" })
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right">@Html.Label("Select Subject")</label>
                                            <div class="col-sm-6">
                                                <select id="Subject" name="SubjectName" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="SearchData" class="row">
        </div>
    }
</section>
<script type="text/javascript">
