        debugger;
        var SelClass = $('#SelClass').val();
        var SelSubId = $('#SelSubId').val();

        if (SelClass > 0) {
            GetExamandSubject();
        }
    });
    $('#ClassNumber').change(function () {
        debugger;
        $("#SearchData").html("");
        $("#Subject").html("");
        var ClassNumber = $('#ClassNumber').val();
        var SubscriptionId = $('#SubscriptionId').val();
        if (ClassNumber > 0) {
            document.getElementById("Validation").innerHTML = "";
        }
        if (ClassNumber > 0 && SubscriptionId >= 0 && SubscriptionId != "") {
            GetExamandSubject();
        }
    })


    $('#SubscriptionId').change(function () {
        
        $("#SearchData").html("");
        $("#Subject").html("");
        var SubscriptionId = $('#SubscriptionId').val();
        if (SubscriptionId >= 0 && SubscriptionId != "") {
            GetExamandSubject();
        }

    });
    function GetExamandSubject() {
        var SubscriptionId = $('#SubscriptionId').val();
        var ClassNumber = $('#ClassNumber').val();
        if (ClassNumber > 0 && SubscriptionId >= 0 && SubscriptionId != "") {
            $.ajax({
                url: '/AOnlineExamination/GetExams',
                data: { ClassNumber: ClassNumber, SubscriptionId: SubscriptionId },
                success: function (data) {
                    var SubjectItems = $('#Subject');

                    SubjectItems.children().remove();

                    SubjectItems.append($("<option>").val("null").text("--- Select Subject ---"));

                    $.each(data, function (i, record) {
                        SubjectItems.append($("<option>").val(record.OnlineQuestionPaper_ExaminerId).text(record.BatchId));
                    });

                    $('#Subject').append(SubjectItems);


                },
                aync: false
            });
        }
    }
