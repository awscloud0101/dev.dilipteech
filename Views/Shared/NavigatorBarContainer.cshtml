@using AsteriskBrowserAL.Helpers
@{
    AsteriskBrowserAL.sp_GetUserInformation_Result Userinfo = new AsteriskBrowserAL.sp_GetUserInformation_Result();

    Userinfo = Utility.GetUserDetails();
    string strSchoolName = "CampusWhiz App";
}
<script type="text/javascript">
    try { ace.settings.check('navbar', 'fixed') } catch (e) { }
</script>
<div class="navbar-container" id="navbar-container">
    <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
        <span class="sr-only">Toggle sidebar</span>

        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <div class="navbar-header pull-left" style="margin-left:10px;">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            <small>
                <strong>  @strSchoolName</strong>
            </small>
        </a>
    </div>
    <div >
        <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            <small style="font-size:15px;margin-left:35px;">
                @AsteriskBrowserAL.Helpers.Utility.GetInstituteNameOfUser()
                <span>&nbsp;</span>
                (@AsteriskBrowserAL.Helpers.Utility.GetAcademicYear())
            </small>
        </a>
    </div>
    <div class="navbar-buttons navbar-header pull-right" role="navigation">
        <ul class="nav ace-nav">
            <li class="light-blue">
                <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                    @if (Userinfo.DesignationName.ToUpper().Contains("PARENT"))
                    {
                        <img class="nav-user-photo" src="@Utility.GetLoggedUserPhoto()" alt="User Photo" />
                    }
                    else
                    {
                        <img class="nav-user-photo" src="@Utility.GetLoggedUserPhoto()" alt="User Photo" />
                    }
                    <span class="user-info">
                        <small>Welcome,</small>
                        <strong style="line-height:20px;"> @Userinfo.UserName</strong>
                    </span>
                    <i class="ace-icon fa fa-caret-down"></i>
                </a>

                <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">

                    @if (Userinfo.DesignationName.ToUpper().Contains("PARENT"))
                    {
                        <li>
                            <a href="/Account/ResetPassword">
                                <i class="ace-icon fa fa-cog"></i>
                                Change Password
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Account/Logout2">
                                <i class="ace-icon fa fa-power-off"></i>
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href=@("/HREnrollment/StaffDetailsE?id=" + Userinfo.StaffId + "&IsProfile=true")>
                                <i class="ace-icon fa fa-user"></i>
                                Profile
                            </a>
                        </li>

                        <li>
                            <a href="/Account/ResetPassword">
                                <i class="ace-icon fa fa-cog"></i>
                                Change Password
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Account/Logout2">
                                <i class="ace-icon fa fa-power-off"></i>
                                Logout
                            </a>
                        </li>
                    }

                </ul>
            </li>
        </ul>
    </div>
</div><!-- /.navbar-container -->
