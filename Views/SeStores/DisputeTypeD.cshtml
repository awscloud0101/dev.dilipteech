@model AsteriskBrowserAL.DisputeType

@{
    ViewBag.Title = "Delete Dispute Type";
}
@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Stores
        </li>
        <li class="active">Dispute Type</li>
    </ul><!-- /.breadcrumb -->
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <h3>@Html.ActionLink("<< Dispute Types", "DisputeType")</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("DisputeTypeD", "SeStores", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <input type="hidden" name="id" id="id" value="@Model.DisputeTypeId" />
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>
                <div class="box">
                    <span style="color:red;font-weight:bold" id="Validation"></span>

                    <div class="box-header">
                        <h3 class="box-title">Dispute Type</h3>
                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;" onclick="return submitForm();">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <div class="hideScrolling">
                            <table class="table table-bordered table-striped table-hover nowrap" style="font-size:14px;">
                                    <tbody>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Name")
                                            </th>

                                        </tr>

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => model.Name)
                                            </td>

                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

            }
        </div>
    </div>
</section>

<script>
    function submitForm()
    {
        var valid = true;

        var Id = $('#id').val();

        if(Id > 0)
        {
            $.ajax({

                url: '/SeStores/ValidationForDisputeTypeD',
                data: {Id: Id },
                success : function(data)
                {
                    if(data != "")
                    {
                        document.getElementById('Validation').innerHTML = data;
                        valid = false;
                    }
                },
                async : false
            })
        }

        return valid;
    }
    </script>