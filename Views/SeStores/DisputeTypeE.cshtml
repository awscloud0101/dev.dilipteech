@model AsteriskBrowserAL.DisputeType

@{
    ViewBag.Title = "Edit Dispute Type";
    
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Stores
        </li>
        <li class="active">Dispute Type</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
    <div class="row">
        <div class=col-xs-12>
            @*<h3>@Html.ActionLink("<< Dispute Types", "DisputeType")</h3>*@
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("DisputeTypeE", "SeStores", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.DisputeTypeId)
                <span style="color:red;font-weight:bold;">@Html.ValidationMessage("DisputeType")</span>
                <span style="color:red;font-weight:bold" id="Validation"></span>
        <div class="page-header">
        <br />
        <h1>
           Dispute Type
            <small style="float:right;">
                @Html.ActionLink("Back to details", "DisputeType", new { CategoryId = Model.DisputeTypeId })
            </small>
        </h1>
        </div>
    <div class="box-body">

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Name")</label>

            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control textlength", @id = "Name", @maxlength = "40", placeholder = "Dispute Type Name" })
            </div>

            <span class="col-sm-3" style="color:red;font-weight:bold;" id="Validation"></span>

        </div>
    </div>
    <div class="hr hr-18 dotted hr-double"></div>
             <div class="box">
          <div class="box-header">
                @*<h3 class="box-title">Dispute Type</h3>*@
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                        Save
                        <i class="ace-icon fa fa-check bigger-50"></i>
                        
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn btn-sm" type="reset">
                        <i class="ace-icon fa fa-undo bigger-50"></i>
                        Reset
                    </button>
                </div>
            </div><!-- /.box-header -->
            <!-- form start -->
            </div>
                
            }
        </div>
        </div>

    <input type="hidden" id="count" name="count" value="0" />
</section>

<script type="text/javascript">
        function submitForm() {

            var valid = true;

            var Name = document.getElementById("Name").value;

            if (Name == "")
            {
                document.getElementById("Validation").innerHTML = "Please enter name"
                valid = false;
            }

            return valid;

        };

    $('#Name').focus(function () {
        document.getElementById("Validation").innerHTML = ""
    });

</script>













