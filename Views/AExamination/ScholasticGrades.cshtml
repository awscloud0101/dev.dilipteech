
@model AsteriskBrowserAL.Models.CoScholasticsResultsData

@{

    ViewBag.Title = "Student Profile";

}

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
<script src="~/script/jquery-2.0.3.js"></script>
<script src="~/script/jquery-ui.js"></script>
<script src="~/js/jquery-1.10.2.js"></script>
<script src="~/js/jquery-ui.js"></script>

<style>
    .ui-autocomplete {
        font-size: 12px;
        cursor: pointer;
        width: 120px;
        height: 120px;
        overflow-y: scroll;
    }
    h5 {
        color:white;
    }
</style>

@section BreadCrumb{
    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            <a href="#">Academics</a>
        </li>
        <li>
            <i class=""></i>
            Examinations
        </li>
        <li class="active">Sholastic Grades</li>
    </ul><!-- /.breadcrumb -->
}





<section class="content">
    <div class="row">
        <div class=col-xs-3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ScholasticGrades", "AExamination", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <input type="hidden" id="Status" />

                <div class="table-header">
                    <span style="font-family:calibri;">Life Skills Grades</span>


                </div>


                <div class="widget-box">
                
                    <div class="widget-body">
                        <div class="widget-main">

                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Section</label>
                                    <div class="col-sm-6">
                                        <select id="Sectionid" name="Sectionid" class="form-control"></select>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Examination</label>
                                    <div class="col-sm-6">
                                        <select id="ExaminationId" name="ExaminationId" class="form-control"></select>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <div class="row">
                                <div class="col-sm-6">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Subjects</label>
                                    <div class="col-sm-6">
                                        <select id="SubjectId" name="SubjectId" class="form-control"></select>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>     
                    </div>   
                <div id="ExaminationResults"></div>
                if (null != Model)
                {
                    @*<input type="hidden" name="selBranchId" value="@Model.BranchId" />
                        <input type="hidden" name="selDivisionId" value="@Model.DivisionId" />*@
                    <input type="hidden" id="selClassNumber" name="selClassNumber" value="@Model.SectionId" />
                        <input type="hidden" id="selExamId" name="selExamId" value="@Model.ExamId" />
                        <input type="hidden" id="SelSubjectId" name="selSubjectId" value="@Model.SubjectId" />
                }
            }
        </div>
    </div>

</section>


<script>

    function OnloadData() {
        LoadClassDropdown();
    }

    function LoadClassDropdown() {
        debugger
        var SelClassId = $("#selClassNumber").val();
        $.ajax({
            url: '/AExamination/GetSectionsDropDownForScholasticGrades',
            success: function (result) {

                var ClassNumberItems = $("#Sectionid")
                ClassNumberItems.children().remove();
                ClassNumberItems.append($("<option>").val("null").text("--- Select ---"))
                $.each(result, function (e, record) {
                    ClassNumberItems.append($("<option>").val(record.SectionId).text(record.SectionCode))
                });

                $("#Sectionid").append(ClassNumberItems);
                var ClassNumberId = $("#selClassNumber").val();
                if (ClassNumberId > 0 && ClassNumberId!="") {
                    document.getElementById("Sectionid").value = ClassNumberId;
                    GetExaminations();
                }
            },
            async: false
        })
    }

    $('#Sectionid').change(function () {

        $('#ExaminationId').empty();
        $('#SubjectId').empty();

        var Sectionid = $('#Sectionid').val();

        if (Sectionid < 1) {
            $('#ExaminationResults').html("");
        }
        else {
            GetExaminations();
            $('#ExaminationResults').html("");
        }
    });

    $('#SubjectId').change(function () {
        var ExamId = $('#ExaminationId').val();
        var Sectionid = $('#Sectionid').val();
        var SubjectId = $('#SubjectId').val();
        $('#ExaminationResults').html("");
        if (SubjectId > 0 && Sectionid > 0 && ExamId > 0)
        {
            isExamPaperExist();
        }
    });

    function GetExaminations() {
        var Sectionid = $('#Sectionid').val();

        if (Sectionid > 0) {
            $.ajax({

                url: '/AExamination/GetExaminationsForSholasticGrade',
                data: { Sectionid: Sectionid },
                success: function (data) {

                    var ExaminationItems = $('#ExaminationId');

                    ExaminationItems.children().remove();

                    ExaminationItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data, function (i, record) {

                        if (record.IsUnitTest == 1)
                        {
                            ExaminationItems.append($("<option>").val(record.ExamId).text(record.ExamCode));
                        }
                    });

                    $('#ExaminationId').append(ExaminationItems);

                    var ExaminationId = $("#selExamId").val();
                    if (ExaminationId > 0 && ExaminationId != "") {
                        document.getElementById("ExaminationId").value = ExaminationId;
                        LoadSubjects();
                    }
                },
                aync: false
            });
        }
    }


    $('#ExaminationId').change(function () {
        //GetStudentsExaminationsData()
        $('#ExaminationResults').html("");
        var ExamId = $('#ExaminationId').val();
        var Sectionid = $('#Sectionid').val();
        if (ExamId > 0) {
            LoadSubjects()
        }

    });
    function LoadSubjects()
    {
        debugger
        var ExamId = $('#ExaminationId').val();
        var Sectionid = $('#Sectionid').val();
        if (ExamId > 0) {
            $.ajax({

                url: '/AExamination/GetSubjectsforScholasticGrade',
                data: { SectionId: Sectionid, ExamId: ExamId },
                success: function (data) {

                    var SubjectItems = $('#SubjectId');

                    SubjectItems.children().remove();

                    SubjectItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data.lst, function (i, record) {

                        SubjectItems.append($("<option>").val(record.SubjectId).text(record.SubjectName));

                    });

                    $('#SubjectId').append(SubjectItems);

                    var SelSubjectId = $("#SelSubjectId").val();
                    if (SelSubjectId > 0 && SelSubjectId != "") {
                        document.getElementById("SubjectId").value = SelSubjectId;
                        GetStudentsExaminationsData();
                    }
                },
                aync: false

            });
        }
    }
    function GetStudentsExaminationsData() {

        var ExamId = $("#ExaminationId").val();
        var SectionId = $("#Sectionid").val();
        var SubjectId = $("#SubjectId").val();
        var Status = $("#Status").val();

        if (ExamId < 0 || SectionId < 0 || SubjectId < 0)
            return;

        $('#imagemodal').show();
        $.ajax({
            url: '/AExamination/GetStudentsForSholasticGrade',
            data: { SectionId: SectionId, ExamId: ExamId, SubjectId: SubjectId, Status: Status },
            success: function (Data) {
                $('#imagemodal').hide();

                $('#ExaminationResults').html(Data);
            },
            error: function () {
                $('#imagemodal').hide();
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

    function isExamPaperExist()
    {
        var ExamId = $("#ExaminationId").val();
        var SubjectId = $("#SubjectId").val();

        $.ajax({
            url: '/AExamination/IsExamExistForSubject',
            data: {  ExamId: ExamId, SubjectId: SubjectId },
            success: function (Data) {
                if(Data == "Y")
                {
                    GetStudentsExaminationsData()
                }
            },
           
        })

    }

    window.onload = OnloadData();
</script>
