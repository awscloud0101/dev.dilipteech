@model AsteriskBrowserAL.Models.EventsData

@{
    ViewBag.Title = "Events";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Calendar
        </li>
        <li class="active">Events</li>
    </ul><!-- /.breadcrumb -->
}

<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div>



<section class="content">

    @*@if (null != TempData["Events"])
        {
            @Html.Raw(TempData["Events"])
        }*@
    @if (null != Model)
    {
        int nsno = 1;
        <div class="row">
            @using (Html.BeginForm("EventsEv", "ACalendar", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="col-xs-12">
                    <div class="table-header">
                        Events
                        <div style="float:right;margin-right:10px;">
                           
                                <button type="submit" class="btncustom">
                                   Download
                                </button>
                           
                          &nbsp;&nbsp;&nbsp;
                                <a class="btncustom P2" href="@Url.Action("EventsC", "ACalendar")" role="button"  id="New" name="New">
                             Add</a>



                        </div>
                    </div><!-- /.box-header -->
                    <table class="table tbhover table-striped table-bordered dynamic-table">
                        <thead>
                            <tr>
                                <th>
                                   S.No.
                                </th>
                                <th>
                                    @Html.DisplayName("Start Date")
                                </th>
                                <th>
                                    @Html.DisplayName("End Date")
                                </th>
                                <th>
                                    @Html.DisplayName("Event")
                                </th>
                                @*<th>
                                        @Html.DisplayName("Priority")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Status")
                                    </th>*@
                                <th>
                                    @Html.DisplayName("Subject")
                                </th>
                                <th>
                                    @Html.DisplayName("Send SMS To")
                                </th>
                                @*<th>
                                        @Html.DisplayName("Send SMS On")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Selection List")
                                    </th>*@

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.lstEventsData)
                            {
                                <tr>
                                    <td>
                                        @(nsno++)
                                    </td>
                                    <td>
                                        @if (item.StartDate.HasValue)
                                        {
                                            @item.StartDate.Value.ToString("dd-MMM-yyyy")
                                        }
                                    </td>

                                    <td>
                                        @if (item.EndDate.HasValue)
                                        {
                                            @item.EndDate.Value.ToString("dd-MMM-yyyy")
                                        }
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Event)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Priority)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Subject)
                                    </td>
                                    <td>
                                        @if (item.SendSMSTo == 1)
                                        {
                                            @Html.DisplayName("Class");
                                        }
                                        @if (item.SendSMSTo == 2)
                                        {
                                            @Html.DisplayName("Employee Departments")
                                        }
                                        @if (item.SendSMSTo == 6)
                                        {
                                            @Html.DisplayName("Employee Designation")
                                        }
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.SendSMSOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SelectionList)
                                        </td>*@
                                    <td>
                                        <div>
                                            @*<a class="green" href="@Url.Action("EventsE", "ACalendar", new { id = item.EventId })">
                                                    <i class="ace-icon fa fa-pencil  bigger-130"></i>

                                                </a>*@
                                            <a class="red" onclick="btnConfirm(@item.EventId)">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>

                                            </a>
                                            @*<a class="red" href="@Url.Action("Event", "ACalendar", new { id = item.EventId })">
                                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>

                                                </a>*@
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            }
        </div>
        @Html.Action("DataTableScripts", "Base", new { IsPaging = false, AllowScroll = true })

    }
    else
    {
        <div class="table-header">
            Events
            <a class="view-header-btn  btn btn-info btn-xs P2" href="@Url.Action("EventsC", "ACalendar")" role="button" style="float:right" id="New" name="New"><i class="fa fa-plus-circle bigger-180"></i></a>
        </div>
        <br />
        <span style="color: red;"><b>There are no Events to Display</b></span>
    }
</section>
<script>

    function btnConfirm(Value) {
        if (Value > 0) {
            $.ajax({
                url: '/ACalendar/ValidationForEventsD',
                data: { Id: Value },
                success: function (data) {

                    var url = '/ACalendar/EventsD?id=' + Value;
                    var title = "Events";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }

</script>
