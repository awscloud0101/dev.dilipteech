@model AsteriskBrowserAL.Holidays

@{
    ViewBag.Title = "HolidaysD";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Calendar
        </li>
        <li class="active">Holidays</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @*<h3>@Html.ActionLink("<< Holidays Details", "Holidays")</h3>*@
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("HolidaysD", "ACalendar", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <input type="hidden" name="id" id="id" value="@Model.HolidaysId" />
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>

                <div class="box">
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                    <div class="box-header">
                        <h3 class="box-title">HolidaysD</h3>
                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;" onclick="return submitForm()">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    @*<div>
                            <span style="color: red;">
                                <b>Are you sure you want to delete this?</b>
                            </span>
                        </div>

                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Holidays</h3>
                                <button class="btn btn-primary pull-right" type="submit" style="width:80px;">
                                    Delete
                                </button>
                                <br />


                            </div>*@<!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Holiday Date")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>

                                </tr>

                                <tr>
                                    <td>
                                        @Model.HolidayDate.Value.ToString("dd - MMM - yyyy")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Description)
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<script>
    function submitForm() {
        var valid = true;

        var Id = $('#id').val();

        if (Id > 0) {
            $.ajax({

                url: '/ACalendar/ValidationForHolidaysD',
                data: { Id: Id },
                success: function (data) {
                    if (data != "") {
                        document.getElementById('Validation').innerHTML = data;
                        valid = false;
                    }
                },
                async: false
            })
        }

        return valid;
    }
</script>