@model AsteriskBrowserAL.ImportantDays

@{
    ViewBag.Title = "Delete ImportantDays";
}

@section BreadCrumb{

    <ul class="breadcrumb">
      
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Calendar
        </li>
        <li class="active">Important Days</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">
    <div class="row">
        <div class=col-xs-12>
            @*<h3>@Html.ActionLink("<< Important Days Details", "ImportantDays")</h3>*@
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ImportantDaysD", "ACalendar", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Important Days</h3>
                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;">
                            Delete
                        </button>
                        <br />
                       
                     
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Important Date")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                </tr>

                                <tr>
                                    <td>
                                        @Model.ImportantDate.Value.ToString("dd - MMM - yyyy")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Description)
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

