
@model IEnumerable<AsteriskBrowserAL.Models.ClassTimingsDurationsData>
@{
    ViewBag.Title = "ClassTimingsDurationsPartialView";
}
<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div>
<script>
    $("#id-btn-dialog2").on('click', function (e) {
        e.preventDefault();

        $("#dialog-confirm").removeClass('hide').dialog({
            resizable: false,
            width: '320',
            modal: true,
            title: "Sub Category",
            title_html: true,
            buttons: [
                {
                    html: "<i class='ace-icon fa fa-trash-o bigger-110'></i>&nbsp; Delete",
                    "class": "btn btn-danger btn-minier",
                    click: function () {
                        $(this).dialog("close");
                    }
                }
                ,
                {
                    html: "<i class='ace-icon fa fa-times bigger-110'></i>&nbsp; Cancel",
                    "class": "btn btn-minier",
                    click: function () {
                        $(this).dialog("close");
                    }
                }
            ]
        });
    });
</script>
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            @if (null != Model && Model.Count() > 0)
            {
                <div class="hr hr-18 dotted hr-double"></div>
              
                <div class="table-header">
                    Records Found (@Model.Count())
                </div>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayName("Start Date")
            </th>
            <th>
                @Html.DisplayName("End Date")
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @if (item.StartDate.HasValue)
                    {
                        @item.StartDate.Value.ToString("dd-MMM-yyyy")
                    }
                </td>
                <td>
                    @if (item.EndDate.HasValue)
                    {
                        @item.EndDate.Value.ToString("dd-MMM-yyyy")
                    }
                </td>

                <td>
                   



                    <div class="hidden-sm hidden-xs action-buttons">
                        <a class="green" href="@Url.Action("ClassTimingsDurationsE", "ATimeTable", new { id = item.ClassTimingsDurationsId })">
                            <i class="ace-icon fa fa-pencil  bigger-130"></i>

                        </a>
                        @*<a class="red" href="@Url.Action("ClassTimingsDurationsD", "ATimeTable", new { id = item.ClassTimingsDurationsId })">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>

                        </a>*@
                        <a class="red" onclick="btnConfirm(@item.ClassTimingsDurationsId)">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>


            }
            else
            {
                <span style="font-weight:bold;color:red">No records found</span>
            }
        </div>
    </div>
</section>





<script>
    function btnConfirm(Value) {
        if (Value > 0) {
            $.ajax({
                url: '/ATimeTable/ValidationForClassTimingsDurationsD',
                data: { id: Value },
                success: function (data) {

                    var url = '/ATimeTable/ClassTimingsDurationsD?id=' + Value;
                    var title = "Class Timings Durations";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }

</script>