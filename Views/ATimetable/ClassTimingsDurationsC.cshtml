                                @if (Model.StartDate.HasValue)
                                {
                                    <input class="form-control" type="text" name="StartDate" id="StartDate" value="@Model.StartDate.Value.ToShortDateString()" autocomplete="off" placeholder="Select Date" />
                                }
                                else
                                {
                                    <input class="form-control" type="text" name="StartDate" id="StartDate" autocomplete="off" placeholder="Select Date" />
                                }
