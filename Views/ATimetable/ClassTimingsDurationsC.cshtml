    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ClassTimingsDurationsC", "ATimetable", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                @Html.HiddenFor(model => model.ClassTimingsDurationsId)
                @Html.HiddenFor(model=>Model.BatchId)
