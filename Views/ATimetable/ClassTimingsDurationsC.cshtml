                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("End Date")</label>
                <div class="col-sm-3">
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="datepicker" class="input-group date" data-date-format="MM/dd/yyyy">
                                @if (Model.EndDate.HasValue)
                                {
                                    <input class="form-control" type="text" id="EndDate" name="EndDate" value="@Model.EndDate.Value.ToShortDateString()" autocomplete="off" placeholder="Select Date" />
                                }
                                else
                                {
                                    <input class="form-control" type="text" id="EndDate" name="EndDate" autocomplete="off" placeholder="Select Date" />
                                }
                                <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>



        </div>

              
           <div class="box">
        <span style="color:red;font-weight:bold;">@Html.ValidationMessage("ClassTimingsDurations")</span>
        <div class="hr hr-18 dotted hr-double"></div>
        <div class="box-header">
