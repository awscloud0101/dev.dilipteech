    });

    $('#StaffId').change(function () {
        $("#SearchData").html("");
        GetSchedules();
    });

    function GetSchedules() {
        $("#SearchData").html("");
        var StaffId = $('#StaffId').val();
        $('#imagemodal').show();
        if (StaffId > 0) {
            $.ajax({
                url: '/ATimeTable/ZoomtimeTableReport1',
                data: { StaffId: StaffId },
                success: function (Data) {
                    $('#imagemodal').hide();
                    $("#SearchData").html(Data);
                }
            });
        }
    }

</script>







