                                </td>
                            }
                            else
                            {
                                <td>
                                    @Model.lstZoomTimeTableModel.ElementAt(i).THLiveClasses.SubjectName
                                </td>
                            }
                            @if (Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.IsShow)
                            {
                                <td>
                                    <i class="fa fa-hand-o-right bilnk"></i>
                                    @*@Html.ActionLink(@Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.SubjectName, "Attendance", new { Link = Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.Link, ClassTimingId = Model.lstZoomTimeTableModel.ElementAt(i).ClassTimingId, SubjectId = Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.SubjectId }, new { target = "_blank" })*@
                                    <a href="@Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.Link" target="_blank">
                                            @Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.SubjectName
                                        </a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    @Model.lstZoomTimeTableModel.ElementAt(i).FLiveClasses.SubjectName
                                </td>
                            }
                            @if (Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.IsShow)
                            {
                                <td>
                                    <i class="fa fa-hand-o-right bilnk"></i>
                                    @*@Html.ActionLink(@Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.SubjectName, "Attendance", new { Link = Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.Link, ClassTimingId = Model.lstZoomTimeTableModel.ElementAt(i).ClassTimingId, SubjectId = Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.SubjectId }, new { target = "_blank" })*@
                                    <a href="@Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.Link" target="_blank">
                                            @Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.SubjectName
                                        </a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    @Model.lstZoomTimeTableModel.ElementAt(i).SLiveClasses.SubjectName
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Action("DataTableScripts", "Base")

    }

