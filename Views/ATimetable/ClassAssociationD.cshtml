@model AsteriskBrowserAL.Models.ClassAssociationViewModel

@{
    ViewBag.Title = "Delete Sub Category";
}

@section breadcrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            TimeTable
        </li>
        <li class="active">Class Association</li>
    </ul><!-- /.breadcrumb -->
}


<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<<Class Association Details", "ClassAssociation")</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ClassAssociationD", "ATimetable", FormMethod.Post, new { BranchId = @Model.BranchId }))
            {
                <input type="hidden" name="BranchId" id="BranchId" value="@Model.BranchId" />
    <input type="hidden" name="ClassAssociationId" id="ClassAssociationId" value="@Model.ClassAssociationId" />
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>

                <div class="box">
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                    <div class="box-header">
                        <h3 class="box-title">Class Association</h3>
                        <button class="btn btn-primary pull-right P2" type="submit" style="width:80px;" onclick="return submitForm()">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Staff Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Class Name")
                                    </th>

                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.StaffName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.ClassNameDisplay)
                                    </td>


                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            }
        </div>
    </div>
</section>




<script>
    function submitForm()
    {
        var valid = true;



        return valid;
    }
</script>

