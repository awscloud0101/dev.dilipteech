@model AsteriskBrowserAL.Models.TimeTableViewModel

@{

    ViewBag.Title = "Student Profile";

}
<!-- date-picker -->


<style>
    .ui-autocomplete {
        font-size: 12px;
        cursor: pointer;
        width: 120px;
        height: 120px;
        overflow-y: scroll;
    }
</style>

<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div><!-- #dialog-confirm -->

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            <a href="#">Academics</a>
        </li>
        <li>
            <i class=""></i>
            Timetable
        </li>
        <li class="active">Timetable Today</li>
    </ul><!-- /.breadcrumb -->
}


<section class="content">
    <form id="myForm" method="post">
        <div class="row">
            <div class="col-xs-12">
                @using (Html.BeginForm("SubstituteTutor", "ATimeTable", FormMethod.Post))
                {
                    <span id="SaveVal" style="font-weight:bold;color:green"></span>

                    <input type="hidden" id="MinDate" name="Date" value="@Model.Date" />


                    <div class="table-header">
                        <span style="font-family:calibri;">Substitute Tutor</span>
                        <div class="inline action-buttons" style="float:right;">
                            <a class="btn btn-info btn-minier" id="ViewData">View Data</a>
                        </div>

                    </div>


                    <div class="widget-box">
               
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <div class="col-sm-4">
                                                <label for="form-field-1">Select Date</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <div id="datepicker" class="input-group date">
                                                    <input class="form-control" type="text" id="Date" name="Date" autocomplete="off" placeholder="Select Date" required="required" title="Please select the date" />
                                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div id="TimeTableToday">

                    </div>
                }
            </div>

        </div>
    </form>
</section>


<link href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
<script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

<script type="text/javascript">

  $(document).on('focus', '#Date', function () {
      var date = $('#MinDate').val()
      $(this).datepicker({
          startDate: date,
          format: 'mm/dd/yyyy',
          autoclose: true,
          todayHighlight: true
      });

  });

  $('#Date').change(function () {
      document.getElementById("SaveVal").innerHTML = "";
        $('#TimeTableToday').html("");
    })

    function OnloadData() {
        $("#ViewData").css("display", "none");
    }


    function LoadClassDropdown() {
        $.ajax({
            url: '/AFrontOffice/GetClassData',
            success: function (result) {
                CourseList = $("#ClassId")
                CourseList.children().remove();
                CourseList.append($("<option>").val("").text("--select--"))
                $.each(result, function (e, record) {
                    CourseList.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay))
                })
                $("#ClassId").append(CourseList)
            }
        })
    }



    $("#Date").change(function () {
        $("#ViewData").css("display", "inline");

    })

    $("#ViewData").click(function () {

        GetTimeTableTodayData()
    })

    function GetTimeTableTodayData() {

        var Date = $("#Date").val();
        $("#TimeTableToday").html("")
        $("#imagemodal").show();
        $.ajax({
            url: '/ATimetable/GetTodayTimeTableForSubstitutor',
            data: { Date: Date },
            success: function (result) {
                $("#TimeTableToday").html(result)
                $("#imagemodal").hide();
            },
        })
    }
    window.onload = OnloadData();
</script>
