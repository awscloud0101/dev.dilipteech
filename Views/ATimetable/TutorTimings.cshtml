<section class="content">
    <br />
    <div class="row">
        <div class="col-xs-12">
            <span id="SaveVal" style="font-weight:bold;color:green">

            </span>
            <div class="widget-box">
                <div class="widget-header widget-header-flat widget-header-small">

                    <h5 class="widget-title">
                        Tutor Timings
                    </h5>

                </div><!-- /.box-header -->


                <div class="widget-body">
                    <div class="widget-main">


                        <div class="row">
                            <div class="col-sm-6">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Class</label>
                                <div class="col-sm-6">
                                    <select id="ClassId" name="ClassId" class="form-control"></select>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label class="col-sm-5 control-label no-padding-right" for="form-field-1">Week</label>
                                <div class="col-sm-6" style="font:12px arial;">
                                    <select id="WeekNumberId" name="WeekNumberId" class="form-control"></select>
                                </div>
                            </div>

                            <br />
                            <br />

                        </div>
                    </div>

                </div>
            </div>
            <br />
            <div id="SearchDiv">
            </div>
        </div>
    </div>

    <div id="imagemodal" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position:absolute; top: 50%; left:50%;">
            <img height="50" width="50" src="~/LoaderImages/ajax-loader.gif" />
        </p>
    </div>



</section>




<script>
    function OnloadFunction() {
        LoadClassDropdown();
    }


    function LoadClassDropdown() {

        $.ajax({
            url: '/AStudent/GetClassDropdown',
            success: function (result) {
                classData = $("#ClassId")
                classData.children().remove();
                classData.append($("<option>").val("").text("--- Select ---"))
                $.each(result, function (e, record) {
                    classData.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay))
                })
                $("#ClassId").append(classData)


            },
            async: false
        })
    }


    $("#ClassId").change(function () {

        $("#WeekNumberId").html("");
        var ClassId = $("#ClassId").val();
        if (ClassId > 0) {
            LoadWeeksData()
        }
    })

    function LoadWeeksData() {
        $.ajax({
            url: '/ATimetable/LoadWeeksData',
            success: function (result) {
                Section = $("#WeekNumberId")
                Section.children().remove();
                Section.append($("<option>").val("").text("--- Select ---"))

                $.each(result, function (e, record) {
                    Section.append($("<option>").val(record.WeekDaysId).text(record.WeekName))
                })

                $("#WeekNumberId").append(Section)

            },
            async: false
        })
    }

    $("#WeekNumberId").change(function () {
        var WeekNumberId = $("#WeekNumberId").val();
        $("#SearchDiv").html("")
        if (WeekNumberId > 0) {
            GetTimeTableData()

        }
    })

    function GetTimeTableData() {
        var ClassNumber = $("#ClassId").val();
        var WeekNumber = $("#WeekNumberId").val();
        $("#imagemodal").show();

        $.ajax({
            url: '/ATimetable/GetTutorTimetableForClass',
            data: { ClassNumber: ClassNumber, WeekId: WeekNumber },
            success: function (Result) {
                $("#imagemodal").hide();

                $("#SearchDiv").html(Result)
            },

        })
    }

    window.onload = OnloadFunction();



</script>








