@model AsteriskBrowserAL.Models.StudentDetailsData

@{
    ViewBag.Title = "IC Category Shuffling";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Student
        </li>
        <li class="active">IC Category Shuffling</li>
    </ul><!-- /.breadcrumb -->
}

@Html.Action("DatePickerScripts", "Base", new { IsPaging = false, AllowScroll = true })

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.css" />

<!-- CSS to make Select2 fit in with Bootstrap 3.x -->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2-bootstrap.min.css" />

<!-- Include Select2 JS -->
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.js"></script>

<section class="content">
    <br />
    @if (null != TempData["Message"])
    {
        <label style="color:green">@TempData["Message"]</label>
    }
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("ICCategoryShuffling", "AStudent", FormMethod.Post))
            {
                <span style="color:red;font-weight:bold" id="Validation"></span>

                <div class="widget-box">
                    <div class="widget-header widget-header-flat widget-header-small">
                        <h5 class="widget-title">
                            IC Category Shuffling
                        </h5>

                        <div class="widget-toolbar no-border">
                            <div class="inline action-buttons">
                                <button type="submit" class="btn btn-info btn-minier P2" id="ViewData">Transfer</button>
                            </div>
                        </div>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-5">@Html.Label("Branch")</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.SubscriptionId, new SelectList(Model.lstBranches, "SubscriptionId", "Institute"), "--- Select ---", new { @class = "form-control", @required = "required", @id = "SubscriptionId", @name = "SubscriptionId" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-5">@Html.Label("From IC Category")</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.lstICCategory, "CategoryId", "CategoryName"), "--- Select ---", new { @class = "form-control", @required = "required", @id = "FromCategoryId", name = "FromCategoryId" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-5">@Html.Label("Student")</label>
                                        <div class="col-sm-6">
                                            <select id="StudentId" name="StudentId" class="form-control select2" required></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-5">@Html.Label("To IC Category")</label>
                                        <div class="col-sm-6">
                                            <select id="ToCategoryId" name="ToCategoryId" class="form-control" required></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-5">@Html.Label("Transfer Date")</label>
                                        <div class="row">
                                            <div class="col-xs-6">
                                                <div id="datepicker" class="input-group date">
                                                    <input required="required" class="form-control" type="text" id="TransferDate" name="TransferDate" autocomplete="off" placeholder="Select Date" />
                                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script type="text/javascript">
    $(".select2").select2();

    $('#SubscriptionId').change(function () {
        LoadStudents();
    });

    $('#FromCategoryId').change(function () {
        LoadToCategories();
        LoadStudents();
    })

    function LoadToCategories() {

        var FromCategoryId = $('#FromCategoryId').val();

        var ToCategoryIdItems = $('#ToCategoryId');
        ToCategoryIdItems.children().remove();

        if (FromCategoryId > 0) {

            $.ajax({
                url: '/Astudent/GetShuffleToICCategories',
                data: { FromCategoryId: FromCategoryId },
                success: function (data) {

                    ToCategoryIdItems.append($("<option>").val("").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        ToCategoryIdItems.append($("<option>").val(record.CategoryId).text(record.CategoryName));
                    });

                    $('#ToCategoryId').append(ToCategoryIdItems);
                },
                aync: false
            });

        }
    }

    function LoadStudents() {

        $('#StudentId').select2("val", "")

        var FromCategoryId = $('#FromCategoryId').val();

        var SubscriptionId = $('#SubscriptionId').val();

        var StudentItems = $('#StudentId');
        StudentItems.children().remove();

        if (FromCategoryId > 0 && SubscriptionId > 0) {

            $.ajax({
                url: '/Astudent/GetICBatchStudentsToShuffle',
                data: { FromCategoryId: FromCategoryId, nSubId: SubscriptionId },
                success: function (data) {

                    StudentItems.append($("<option>").val("").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        StudentItems.append($("<option>").val(record.StudentId).text(record.Name));
                    });

                    $('#StudentId').append(StudentItems);
                },
                aync: false
            });

        }
    }

</script>
