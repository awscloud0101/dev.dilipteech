@model AsteriskBrowserAL.Models.StudentAdmissionData

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <!-- tools box -->
                <div class="pull-right box-tools">
                </div><!-- /. tools -->

                <h3 class="box-title">
                    Guardian Information
                </h3>

                <span style="color: red;font-weight:bold" id="GuardianVal"></span>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-sm-6">
                            <label class="col-sm-5 control-label no-padding-right required" for="form-field-1">*Guardian Name</label>

                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.GuardianName, new { @class = "form-control TextBox", @id = "GuardianName", placeholder = "Guardian Name", title = "Please Enter Guardian Name" })
                            </div>

                        </div>

                        <div class="col-sm-6">

                            <label class="col-sm-5 control-label no-padding-right required" for="form-field-1">*Guardian Occupation</label>

                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.GardianOccupation, new { @class = "form-control TextBox", @id = "GardianOccupation", placeholder = "Guardian Occupation", title = "Please Enter Guardian Name" })
                            </div>
                        </div>
                    </div>


                </div>


                <br />
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-sm-6">

                            <label class="col-sm-5 control-label no-padding-right required" for="form-field-1">*Guardian Mobile No</label>

                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.GardianMobile, new { @class = "form-control txtboxNum", @id = "GuardianMobile", placeholder = "Guardian Mobile No", maxlength = 10, minlength = 10, title = "Please Select Guardian Mobile No ", Value = "" })
                            </div>
                        </div>



                        <div class="col-sm-6">

                            <label class="col-sm-5 control-label no-padding-right required" for="form-field-1">*Guardian Address</label>

                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.GuardianAddress, new { @class = "form-control TextBox", @id = "GuardianAddress", placeholder = "Guardian Address", title = "Please Select Guardian Address" })
                            </div>
                        </div>
                    </div>

                </div>

                <br />
            </div>
        </div>
    </div>
</div>