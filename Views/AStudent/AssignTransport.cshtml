@model List<AsteriskBrowserAL.Models.PlayersData>
@{

    ViewBag.Title = "Assign Transport";

}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            Accademics
        </li>
        <li>
            <i class=""></i>
            Student
        </li>
        <li class="active">Assign Transport</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("AssignTransport", "AStudent", FormMethod.Post))
            {
                <span style="color:red;font-weight:bold" id="Validation"></span>
                <span style="color:green;font-weight:bold" id="SaveVal"></span>

                <div class="table-header">
                    <span style="font-family:calibri;">Assign Transport</span>


                </div>

                <div class="widget-box">
     
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right">@Html.Label("Class")</label>
                                        <div class="col-sm-6">
                                            <select id="ClassId" name="ClassId" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right">@Html.Label("Plan")</label>
                                        <div class="col-sm-6">
                                            <select id="PlanId" name="PlanId" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
                <div id="SearchDiv">
                </div>
            }
        </div>
    </div>
</section>



<script>

    function onloadData() {
        LoadClassDropdown();

    }
    window.onload = onloadData();
    function LoadClassDropdown() {
        $.ajax({
            url: '/AStudent/GetClassDropdown',
            data: { SelClassNumber: 0 },
            success: function (result) {
                Section = $("#ClassId")
                Section.children().remove();
                Section.append($("<option>").val("").text("--- Select ---"))
                $.each(result, function (e, record) {
                    Section.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay))
                })
                $("#ClassId").append(Section)

            },
            async: false
        })
    }
    $("#ClassId").change(function () {
        $("#SearchDiv").html("")
        LoadTransportPlans()
    })
    function LoadTransportPlans() {
        var ClassId = $("#ClassId").val();
        if (ClassId > 0) {
            $.ajax({
                url: '/AStudent/GetTransportPlans',
                success: function (Data) {
                    var TransportPalns = $('#PlanId')
                    TransportPalns.children().remove();
                    TransportPalns.append($("<option>").val("").text("--Select--"))
                    $.each(Data, function (i, record) {
                        TransportPalns.append($("<option>").val(record.TransportPlanId).text(record.PlanName));
                    });
                    $('#PlanId').append(TransportPalns);
                }
            })
        }
        else {
            $("#SearchDiv").html("")
            $('#PlanId').html("")

        }

    }

    $("#PlanId").change(function () {
        var ClassId = $("#ClassId").val()
        var PlanId = $("#PlanId").val()
        if (ClassId > 0 && PlanId > 0) {
            $("#imagemodal").show();
            $.ajax({
                url: '/AStudent/GetStudentsWithTransport',
                data: { ClassId: ClassId, PlanId: PlanId },
                success: function (Data) {
                    $("#imagemodal").hide();
                    $("#SearchDiv").html(Data);
                    LoadAssignedStudents();
                }
            })
        }
        else {
            $("#SearchDiv").html("")
        }
    })

</script>

