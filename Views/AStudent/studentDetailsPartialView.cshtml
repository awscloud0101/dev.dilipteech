@model AsteriskBrowserAL.Models.StudentModel
@{
    ViewBag.Title = "StudentPartialView";
    int Sno = 1;
    bool bIsCoastal = AsteriskBrowserAL.Helpers.Utility.IsCoastal();
    Double Due = 0;
    if (Model.StudentData.Count() > 0)
    {
        Due = Model.StudentData.Sum(s => s.Due);
    }
}

    <div class="table-header">

        Total Due(@Due)
