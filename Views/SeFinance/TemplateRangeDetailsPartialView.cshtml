@model List<AsteriskBrowserAL.Models.TemaplateRangeData>
@{
    ViewBag.Title = "Template Range Detail Report";
    int sno = 1;
    string color = string.Empty;
}

<style>
    .hideScrolling {
        overflow: hidden;
        height: 450px;
    }

    hideScrolling:hover {
        overflow: auto;
    }
</style>

<br />
<br />
<br />
<br />
@if (Model != null && Model.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="table-header">
                Records Found (@Model.Count())

            </div>
        </div>
    </div>
    <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
        <thead>
            <tr>
                <th>
                   S.No.
                </th>
                <th>
                    @Html.DisplayName("Template Number")
                </th>
                <td>
                    @Html.DisplayName("Status")
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                color = "";
                if (item.Remarks == "Running Number")
                {
                    color = "#6EDE29";
                }
                if (item.Remarks == "")
                {
                    color = "##D700";
                }

                <tr style="background-color:@color;">
                    <td>
                        @(sno++)
                    </td>
                    <td>
                        @item.TemplateRececiptNo
                    </td>
                    <td>
                        @item.Remarks

                    </td>
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div style="color:red;font-weight:bold">Data not available </div>
}
@Html.Action("DataTableScripts", "Base")