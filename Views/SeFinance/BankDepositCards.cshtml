@model List<AsteriskBrowserAL.Models.BanckDepositCardsData>
@{
    ViewBag.Title = "Cash Cards";
    int sno = 1;
}
@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-gears"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Finance
        </li>
        <li class="active">Bank Deposit Cards</li>
    </ul><!-- /.breadcrumb -->
}




<style>
    .red {
        color: red;
    }

    .hideScrolling {
        overflow: hidden;
        height: 450px;
    }

        .hideScrolling:hover {
            overflow: auto;
        }
</style>

<section class="content">

    <div class="row">
        <div class="col-xs-12">
           
            @using (Html.BeginForm("BankDepositCards", "SeFinance", FormMethod.Post))
            {

                if (null != TempData["Message"])
                {


                    <p align="center">
                        <span class="savedinfo">



                            <span class=" fa fa-check-circle bigger-260" align="center"></span>
                            <br />
                            <span id="Validation">@Html.Raw(TempData["Message"])</span>
                            <br />

                            <a href="" class="cls1 btncustom">Close</a>
                            <script>

                                $(document).ready(function () {
                                    $(".cls1").click(function () {

                                        $(".savedinfo").css("display", "none")
                                    });



                            </script>
                        </span>
                    </p>
                    
                }

                @Html.ValidationMessage("BankDepositCards")

                if (Model != null && Model.Count() > 0)
                {
                    <div class="row">
                        <div class="col-xs-12">



                            <div class="table-header">
                                <span style="font-family:calibri;"> Bank Accounts</span>
                                <div class="" style="float:right;margin-right:10px;">
                                    <button type="submit" name="Save" class="btncustom P2" onclick="return submitForm()">
                                     Save
                                    </button>    </div>

                            </div>








                       
                            <div>
                                <table class="table tbhover table-striped table-bordered dynamic-table" id="tbCashCards">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">
                                               S.No.
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Branch")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 1")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 2")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 3")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 4")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 5")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 6")
                                            </th>
                                            <th style="text-align:center">
                                                @Html.DisplayName("Bank 7")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @for (int i = 0; i < Model.Count(); i++)
                                        {
                                            <tr>
                                                @Html.Hidden("LstBankCards.Index", (@i))
                                                @Html.Hidden("LstBankCards[" + (@i) + "].SubscriptionId", Model.ElementAt(i).SubscriptionId)
                                                @Html.Hidden("LstBankCards[" + (@i) + "].BranchName", Model.ElementAt(i).BranchName)
                                                @Html.Hidden("LstBankCards[" + (@i) + "].BankDepsitCardId", Model.ElementAt(i).BankDepsitCardId)
                                                <td>
                                                    @(sno++)
                                                </td>
                                                <td>
                                                    @Model.ElementAt(i).BranchName
                                                    <input type="hidden" id="Branchname" value="@Model.ElementAt(i).BranchName" />
                                                </td>
                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardOne", Model.ElementAt(i).CardOne, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardOne", name = @Model.ElementAt(i).CardOne })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardOne", Model.ElementAt(i).CardOne)
                                                </td>

                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardTwo", Model.ElementAt(i).CardTwo, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardTwo", name = @Model.ElementAt(i).CardTwo })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardTwo", Model.ElementAt(i).CardTwo)
                                                </td>

                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardThree", Model.ElementAt(i).CardThree, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardThree", name = @Model.ElementAt(i).CardThree })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardThree", Model.ElementAt(i).CardThree)
                                                </td>

                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardFour", Model.ElementAt(i).CardFour, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardFour", name = @Model.ElementAt(i).CardFour })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardFour", Model.ElementAt(i).CardFour)
                                                </td>

                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardFive", Model.ElementAt(i).CardFive, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardFive", name = @Model.ElementAt(i).CardFive })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardFive", Model.ElementAt(i).CardFive)
                                                </td>
                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardSix", Model.ElementAt(i).CardSix, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardSix", name = @Model.ElementAt(i).CardSix })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardSix", Model.ElementAt(i).CardFive)
                                                </td>
                                                <td>
                                                    @Html.TextBox("LstBankCards[" + (@i) + "].CardSeven", Model.ElementAt(i).CardSeven, new { @class = "form-control textlength ", @min = "0", @style = "width:220px", @id = "CardSeven", name = @Model.ElementAt(i).CardSeven })
                                                    @Html.Hidden("LstBankCards[" + (@i) + "].CardSeven", Model.ElementAt(i).CardSeven)
                                                </td>

                                            </tr>

                                        }
                                    </tbody>
                                </table>
                                        </div>
                                    </div>
                                </div>
                                }
                                }
                            </div>
                        </div>
</section>
