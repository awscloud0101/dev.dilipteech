
@model AsteriskBrowserAL.FeeComponent

@{
    ViewBag.Title = "Delete Fee Component";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Finance
        </li>
        <li class="active">Fee Components</li>
    </ul><!-- /.breadcrumb -->
}



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <h3>@Html.ActionLink("<< Fee Component Details", "FeeComponents")</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("FeeComponentsD", "SeFinance", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <input type="hidden" name="id" id="id" value="@Model.FeeComponentId" />
                <div>
                    <span style="color: red;">
                        <b>Are you sure you want to delete this?</b>
                    </span>
                </div>

                <div class="box">
                    <span style="color:red;font-weight:bold;">@Html.ValidationMessage("Component")</span>

                    <div class="box-header">
                        <button class="btn btn-primary" type="submit" style="width:80px;" onclick="return submitForm()">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Fee Component Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Fee Type")
                                    </th>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Name)
                                    </td>

                                    @if (Model.IsSpecial == true)
                                    {
                                        <td>
                                            Special
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            Regular
                                        </td>
                                    }

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    function submitForm() {
        var valid = true;

        var Id = $('#id').val();

        if (Id > 0) {

            $('#imagemodal').show();

            $.ajax
          ({
              error: function (jqXHR, textStatus, errorThrown) {
                  $('#imagemodal').hide();
              },

              url: '/SeFinance/ValidationForComponentD',
              data: { Id: Id },
              success: function (data) {
                  if (data != "") {
                      document.getElementById('Validation').innerHTML = data;
                      valid = false;
                  }
              },
              async: false
          }).done(function () {
              $('#imagemodal').hide();
          });


        }

        return valid;
    }
</script>