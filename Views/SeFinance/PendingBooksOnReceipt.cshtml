@model IEnumerable<AsteriskBrowserAL.Models.PendingBooksData>
@{
    ViewBag.Title = "PendingBooksOnReceipt";
}



<div class="hr hr-18 dotted hr-double"></div>

<section>
        
       @using (Html.BeginForm("PendingBooksOnReceipt", "SeFinance", FormMethod.Post, new { @class = "form-horizontal" }))
       {
           int j = 1;
        <div class="table-header">
            Pending Books On Receipt
            <div style="float:right;">
                <button type="submit" name="Save" id="Save" class="btn btn-info btn-xs P2">
                    <i class="ace-icon fa fa-floppy-o bigger-180"></i>
                </button>
            </div>
        </div>
            <table class="table tbhover table-striped table-bordered nowrap dynamic-table">
                <thead>
                    <tr>
                        <th>
                           S.No.
                        </th>
                        <th>
                            @Html.DisplayName("Branch Name")
                        </th>
                        <th>
                            @Html.DisplayName("Pending Books On Receipt")
                        </th>
                        <th>
                            @Html.DisplayName("Fee Due On Receipt")
                        </th>
                    </tr>
                </thead>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.Hidden("PendingBooksDetailsData.Index", (@i + 10))
                            @(j++)
                        </td>
                       <td>
                           @Html.Hidden("PendingBooksDetailsData.Index", (@i))
                           @Html.Hidden("PendingBooksDetailsData[" + (@i) + "].SubscriptionId", Model.ElementAt(i).SubscriptionId)
                           @Html.Hidden("PendingBooksDetailsData[" + (@i) + "].PendingBooksOnReceiptId",Model.ElementAt(i).PendingBooksOnReceiptId)
                           @Model.ElementAt(i).BranchName
                       </td>
                        <td>
                            @Html.CheckBox("PendingBooksDetailsData[" + (@i) + "].IsShown", Model.ElementAt(i).IsShown, new { @id = "Check" })
                        </td>
                        <td>
                            @Html.CheckBox("PendingBooksDetailsData[" + (@i) + "].IsDue", Model.ElementAt(i).IsDue, new { @id = "Check" })
                        </td>
                    </tr>

                }
            </table>
    }

    
</section>
<script>

</script>