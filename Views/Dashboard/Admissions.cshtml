@model IEnumerable<MVCAsterisk.Student>

@{
    ViewBag.Title = "Admissions";
}

<div class="page-content">
    <div class="col-xs-12">
        <div class="row">
            <!-- /.page-header -->
            <div class="page-header">
                <h1>Dashboard - @ViewBag.InstituteName
                </h1>
            </div>
            <!-- /.page-header -->
        </div>
    </div>
    <div class="col-xs-12">
        <div class="row">
            @using (Html.BeginForm("Admissions", "Dashboard", FormMethod.Post))
            {
                <p>
                    Class: @Html.DropDownList("CourseId", null,"--Select Class--", new { onchange ="this.form.submit();"})
                    @*<input type="submit" value="Search" class="btn btn-sm btn-primary" />*@
                </p>
            }

            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AdmissionNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdmissionDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RollNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateofBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BloodGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BirthPlace)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressLineOne)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdmissionNumber)
                        </td>
                        <td>
                            @item.AdmissionDate.Value.ToString("dd-MMM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RollNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @item.DateofBirth.Value.ToString("dd-MMM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthPlace)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressLineOne)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>

</div>


