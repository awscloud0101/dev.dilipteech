    //    $('#PartialView').html("");
    //    $('#StaffId').empty();
    //    var BranchId = $('#BranchId').val();
    //    if (BranchId != 0) {
    //        $.ajax({
    //            url: '/HRPayroll/GetEmployeesBySubscriptionId',
    //            data: { nSubscriptionId: BranchId },
    //            success: function (data) {
    //                debugger
    //                var StaffList = $('#StaffId');
    //                $('#StaffId').append($("<option>").val("").text("--- Select ---"));
    //                $.each(data, function (i, record) {
    //                    StaffList.append($("<option>").val(record.StaffId).text(record.FirstName));
    //                });
    //                $('#StaffId').append(StaffList);
    //            },
    //            aync: false
    //        });
    //    }
    //});


    $('#BranchId').change(function () {
        $('#PartialView').html("");
        $('#MonthYear').val('');
        $('#StaffId').empty();
    });
    $('#StaffId').change(function () {
        $('#imagemodal').show();
         $('#PartialView').html("");
        var DivisionId = $('#DivisionId').val()
        var BranchId = $('#BranchId').val()
        //$('#MonthYear').val('');
        var StaffId = $('#StaffId').val()

        if (DivisionId != "" && BranchId != "" && StaffId != "") {
            LoadPartial(StaffId)
        }
        else {
            document.getElementById('error').innerHTML = 'Select all fields';
        }

    })
    $('#MonthYear').change(function () {
        debugger
        $('#imagemodal').show();
        $('#PartialView').html("");
        $('#StaffId').empty();
        var DivisionId = $('#DivisionId').val()
        var BranchId = parseInt($('#BranchId').val());
        var MonthYear = $('#MonthYear').val();
        if (BranchId != 0) {
            $.ajax({
                url: '/HRPayroll/GetEmployeesBySubscriptionId',
                data: { nSubscriptionId: BranchId },
                success: function (data) {
                    debugger
                    var StaffList = $('#StaffId');
                    $('#StaffId').append($("<option>").val("0").text("--- Select ---"));
                    $.each(data, function (i, record) {
                        StaffList.append($("<option>").val(record.StaffId).text(record.FirstName));
                    });
                    $('#StaffId').append(StaffList);
                },
                aync: false
            });

            if (DivisionId != "" && BranchId != 0 && MonthYear != "") {
                LoadPartialBasedonMonthyear(MonthYear, BranchId, DivisionId)
            }
            else {
                document.getElementById('error').innerHTML = 'Select all fields';
            }
        }
        else {
            if (BranchId == 0) {
                debugger;
                $('#imagemodal').hide();
                document.getElementById('error').innerHTML = 'Please select Branch';
            }
            
        }

    })
    function LoadPartialBasedonMonthyear(MonthYear, BranchId, DivisionId) {
        debugger;
        $('#imagemodal').show();
        $.ajax({
            url: '/HRPayroll/GetStaffByBranchMontyearForPayslip',
            data: { MonthYear: MonthYear, BranchId: BranchId, DivisionId: DivisionId},
            success: function (data) {
                $('#PartialView').html(data);
                $('#imagemodal').hide();
            },
            aync: false
        });
    }

    function LoadPartial(StaffId) {
        $.ajax({
            url: '/HRPayroll/GetStaffByBranchForPayslip',
            data: { StaffId: StaffId },
            success: function (data) {
                $('#PartialView').html(data);
                $('#imagemodal').hide();
            },
            aync: false
        });
    }

    window.onload = onLoad();

    function onLoad() {
        debugger
        var IsHr = $('#IsHr').val()
        var StaffId = $('#LoggedStaffId').val()
        if (IsHr == "") {
            LoadPartial(StaffId)
        }

    }
</script>

