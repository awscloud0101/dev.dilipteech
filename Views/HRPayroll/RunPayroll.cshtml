@model AsteriskBrowserAL.Models.PaySlipViewModel
@{
    ViewBag.Title = "Run Payroll";
}

@section BreadCrumb{
    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            HR
        </li>
        <li>
            <i class=""></i>
            Payrolls
        </li>
        <li class="active">Run Payroll</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                if (TempData["Message"] != null)
                {
                    <div></div>
                    <span style="color:green;font-weight:bold" id="MSg">@TempData["Message"].ToString()</span>
                }
                <input type="hidden" id="selBranchId" name="selBranchId" value="@Model.BranchId">
                <div class="widget-box">
                    <div class="table-header">
                        <span>Run Payroll</span>
                        @*<button class="btncustom pull-right" style="margin-right:16px" id="UnfreezePaySheet" name="UnfreezePaySheet" onclick="return false">View Unfreeze Requests</button>*@
                    </div>
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <label class="col-sm-5 control-label no-padding-right">@Html.Label("Payroll Month")</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.MonthYear, new SelectList(Model.ListMonths, "MonthValue", "MonthName"), "--- Select ---", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="col-sm-5 control-label no-padding-right">@Html.Label("Division")</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.DivisionId, new SelectList(Model.ListDivision, "DivisionId", "DivisionName"), "--- Select ---", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <label class="col-sm-5 control-label no-padding-right">@Html.Label("Branch")</label>
                                        <div class="col-sm-6">
                                            <select id="BranchId" name="BranchId" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        <div class="col-xs-12" id="PayrollViewPartial">

        </div>
    </div>

</section>
<div id="myModal" class="modal fade" data-keyboard="false" data-backdrop="static" style="width:100%">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">Un Freeze Pay Sheet</h4>
                <button data-dismiss="modal" class="close">×</button>
            </div>
            <div class="modal-body" id="InnerHtml">
            </div>

        </div>

    </div>
</div>

<script type="text/javascript">

    $('#UnfreezePaySheet').click(function () {
        $('#imagemodal1').show();
        $('#datasucess').hide();

        $.ajax({
            type: "GET",
            url: '/HRPayRoll/UnFreezePaySheet',

            success: function (data) {
                debugger
                $('#InnerHtml').html(data)
                $('#myModal').appendTo("body").modal('show');

                $('#imagemodal1').hide();
                asyn: false;
            }
        }).done(function () {
            $('#imagemodal1').hide();
        });
        asyn: false;
    });

    window.onload = GetData();

    function GetData() {
        var strMonthYear = $('#MonthYear').val();
        var nDevisionId = parseInt($('#DivisionId').val());
        var nBranchId = $('#selBranchId').val();
        $('#MSg').html('');
        LoadInformation(strMonthYear, nDevisionId, nBranchId);
    }


    function LoadInformation(strMonthYear, nDevisionId, nBranchId) {
        debugger
        if (nBranchId > 0) {
            $('#imagemodal').show();
            if (nDevisionId > 0) {
                $.ajax({
                    url: '/Common/GetBranchesByDivisionId',
                    data: { DivisionId: nDevisionId },
                    success: function (data) {
                        debugger
                        var BranchItems = $('#BranchId');
                        $.each(data, function (i, record) {
                            BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                        });
                        $('#BranchId').append(BranchItems);
                        if (nBranchId > 0) {
                            debugger
                            $('#BranchId').val(nBranchId);
                        }
                    },
                    aync: false
                });
            }
            if (nBranchId == "0") {
                $('#PayrollViewPartial').html("");
                $('#imagemodal').hide();
                return;
            }
            $.ajax({
                url: '/HRPayroll/GetPayrollStaffByBranchId',
                data: { nBranchId: nBranchId, strMonthYear: strMonthYear, DevisionId: nDevisionId },
                success: function (data) {
                    $('#PayrollViewPartial').html(data);
                },
                error: function () {
                    $('#imagemodal').hide();

                },
            }).done(function () {
                $('#imagemodal').hide();
            });
        }

    }


    $('#DivisionId').change(function () {
        $('#StaffId').val(0);
        $('#SalaryViewData').html("");
        $('#PayrollCodeId').val('');
        $('#Gross').val('');
        $('#PayrollViewPartial').html("");
        $('#BranchId').empty();
        $('#BranchId').append($("<option>").val("null").text("--- Select ---"));
        var DivisionId = $('#DivisionId').val();
        if (DivisionId != 0) {
            $.ajax({
                url: '/Common/GetBranchesByDivisionId',
                data: { DivisionId: DivisionId },
                success: function (data) {
                    var BranchItems = $('#BranchId');
                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });
                    $('#BranchId').append(BranchItems);
                },
                aync: false
            });
        }
    });

    $('#BranchId').change(function () {
        debugger
        $('#MSg').html('');
        $('#datasucess').hide();
        $('#UnFreezeRequestSucess').hide();
        GetEmployeeDataForPayroll();

    })

    function GetEmployeeDataForPayroll() {
        debugger
        $('#imagemodal').show();
        var strMonthYear = $('#MonthYear').val();
        var nDevisionId = $('#DivisionId').val();
        var nBranchId = $('#BranchId').val();
        $('#PayrollViewPartial').html("");
        if (nBranchId == "0") {
            $('#PayrollViewPartial').html("");
            $('#imagemodal').hide();
            return;
        }
        $.ajax({
            url: '/HRPayroll/GetPayrollStaffByBranchId',
            data: { nBranchId: nBranchId, strMonthYear: strMonthYear, DevisionId: nDevisionId },
            success: function (data) {
                $('#PayrollViewPartial').html(data);
            },
            error: function () {
                $('#imagemodal').hide();

            },
        }).done(function () {
            $('#imagemodal').hide();
        });

    };
    function closeDialog() {
        debugger
        $("#myModal").modal('hide');


    }
    $('#MonthYear').change(function () {
        $('#MSg').html('');
        $('#PayrollViewPartial').html("");
        $('#BranchId').val('');
        $('#DivisionId').val('');
    })
    $(document).click(function (event) {
        $('#UnFreezeRequestSucess').hide();
    });
</script>