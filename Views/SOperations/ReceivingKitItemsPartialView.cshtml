@model List<AsteriskBrowserAL.Models.ItemModel>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        int nsno = 1;

        <div class="hr hr-18 dotted hr-double"></div>
        <div class="row">
            <div class="col-xs-12">
                <div class="table-header">
                    Records Found (@Model.Count())
                </div>

                <div>
                    <div class="widget-body table-responsive no-padding" style="overflow:auto;height:400px;">
                        <div class="hideScrolling">
                            <table class="table tbhover table-striped table-bordered dynamic-table">
                                <thead>
                                    <tr>
                                        <th>
                                           S.No.
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Quantity")
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @for (int i = 0; i < Model.Count(); i++)
                            {
                                    <tr>
                                        <td>
                                            @(nsno++)
                                        </td>
                                        <td>
                                            @Model.ElementAt(i).ItemName
                                        </td>
                                        <td>
                                            @Model.ElementAt(i).Quantity
                                        </td>
                                    </tr>
                            }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    else
    {
        <span style="color: red;"><b>No records to display</b></span>
    }
}





