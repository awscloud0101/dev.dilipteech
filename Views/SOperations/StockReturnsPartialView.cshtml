@model List<AsteriskBrowserAL.Models.StudentSalesData>


<div class="row">
    <div class="col-xs-12">

        @if (null != Model && Model.Count() > 0)
            {
                int sno = 1;
            <div class="row">
                <div class="col-xs-12">

                    <span style="color:red;" id="validation"></span>

                    <div class="table-header">
                        Stock Returns
                    </div>
                </div>
            </div>

            <div style="overflow:auto;height:500px">
                <table id="tbKit" class="table tbhover table-striped table-bordered dynamic-table">
                    <thead>
                        <tr>
                            <th>
                               S.No.
                            </th>

                            <th>
                                @Html.DisplayName("Kit Name")
                            </th>
                            <th>
                                @Html.DisplayName("Transferred Qty")
                            </th>
                            <th>
                                @Html.DisplayName("Sold Qty")
                            </th>
                            <th>
                                @Html.DisplayName("Return Qty")
                            </th>
                            <th>
                                @Html.DisplayName("Remaining Qty")
                            </th>
                            <th>
                                @Html.DisplayName("Return Qty")
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr>
                                <td>
                                    @Html.Hidden("lstStockReturnsKitsData.Index", (@i + 10))
                                    @(sno++)
                                </td>
                                <td>
                                    @Model.ElementAt(i).KitName
                                    @Html.Hidden("lstStockReturnsKitsData[" + (@i + 10) + "].KitId", Model.ElementAt(i).InventoryKitId, new { @id = "KitId" })
                                </td>
                                <td>
                                    @Model.ElementAt(i).KitsReceivedQty
                                </td>
                                <td>
                                    @Model.ElementAt(i).KitSoldQuantity
                                </td>
                                <td>
                                    @Model.ElementAt(i).StockReturn
                                </td>
                                <td>
                                    @Model.ElementAt(i).RemainingQty
                                </td>
                                <td>
                                    @Html.TextBox("lstStockReturnsKitsData[" + (@i + 10) + "].ReturnQty", Model.ElementAt(i).ReturnQty, new { id = "ReturnQty" })
                                </td>
                                <td>
                                    <a id="lnkReturn">Return</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <div id="divKitItems" style="display:none"></div>
        }
        else
        {
            <span style="color: red;"><b> No Records Found</b></span>
        }


    </div>
</div>



