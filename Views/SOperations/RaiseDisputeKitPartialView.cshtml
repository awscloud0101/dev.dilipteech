@model List<AsteriskBrowserAL.Models.KittingViewModel>

@if (null != Model && Model.Count() > 0)
{
    int nsno = 1;
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Kits</h3><span style="color:#3c8dbc" class="pull-right" id="msg">(Select kit to see kit items)</span>
        </div><!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <div id="Tab1" class="box-body table-responsive no-padding" style="overflow:auto;height:400px;">
                <div class="hideScrolling">
                    <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
                        <thead>
                            <tr>
                                <th>
                                   S.No.
                                </th>
                                <th>
                                    @Html.DisplayName("Kit Name")
                                </th>
                                <th>
                                    @Html.DisplayName("No Of Kits")
                                </th>
                                <th>
                                    @Html.DisplayName("Received Date")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @Html.Hidden("InventoryTransferId", item.InventoryTransferId)
                                    <td>
                                        @(nsno++)
                                    </td>
                                    <td>
                                        @item.KitName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @if (item.FirstInserted.HasValue)
                                        {
                                            @item.FirstInserted.Value.ToString("dd-MMM-yyyy")
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <span style="color: red;"><b>No kits received</b></span>
}



