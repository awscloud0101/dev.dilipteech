@model List<AsteriskBrowserAL.Models.InventoryDisputeData>

<div class="hr hr-18 dotted hr-double"></div>

@if (null != Model && Model.Count() > 0)
{
    int nsno = 1;
    <div class="table-header">
        Records Found (@Model.Count())
    </div>
    <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
        <thead>
            <tr>
                <th>
                   S.No.
                </th>
                <th>
                    @Html.DisplayName("Branch Name")
                </th>
                <th>
                    @Html.DisplayName("Item Name")
                </th>
                <th>
                    @Html.DisplayName("Received Date")
                </th>
                <th>
                    @Html.DisplayName("Received Qty")
                </th>
                <th>
                    @Html.DisplayName("Dispute Date")
                </th>
                <th>
                    @Html.DisplayName("Dispute Qty")
                </th>
                <th>
                    @Html.DisplayName("Type")
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(nsno++)
                    </td>
                    <td>
                        @item.BranchName
                    </td>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @if (item.ReceivedDate.HasValue)
                        {
                            @item.ReceivedDate.Value.ToString("dd-MMM-yyyy")
                        }
                    </td>
                    <td>
                        @item.ReceivedQty
                    </td>
                    <td>
                        @if (item.DisputeDate.HasValue)
                        {
                            @item.DisputeDate.Value.ToString("dd-MMM-yyyy")
                        }
                    </td>
                    <td>
                        @item.DisputeQuantity
                    </td>
                    <td>
                        @item.DisputeTypeName
                    </td>
                    <td>
                        @if (item.Status == 0)
                        {
                            <span class="label label-warning arrowed arrowed-right">Pending</span>
                        }
                        else if (item.Status == 1)
                        {
                            <span class="label label-success arrowed-in arrowed-in-right">Approved</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="label label-danger arrowed">Rejected</span>
                        }
                    </td>

                    <td>
                        @if (item.Status == 0)
                        {
                            <a role="button" id="lnkApprove" onclick="UpdateStatus(@item.InventoryDisputeId,1)">Approve</a>
                            @("|")
                            <a role="button" id="lnkReject" onclick="UpdateStatus(@item.InventoryDisputeId,2)">Reject</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.Action("DataTableScripts", "Base")
}
else
{
    <span style="color: red;"><b>No records found</b></span>
}






