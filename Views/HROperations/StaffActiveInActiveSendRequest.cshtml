                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right required" for="form-field-1">@Html.Label("*Reason", new { @class = "required" })</label>

                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.RequestReason, new { @class = "form-control col-sm-5 textlength", placeholder = "Reason", @id = "Reason" })

