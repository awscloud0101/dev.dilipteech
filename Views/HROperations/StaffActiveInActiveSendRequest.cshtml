            <div class="widget-box">
                <!-- form start -->
                @using (Html.BeginForm("StaffActiveInActiveSendRequest", "HROperations", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("StaffActiveInActiveSendRequest")</span>
                    @*<div class="box-body">
