@model List<AsteriskBrowserAL.Models.BranchDayWiseTargetsModel>
@{

}

<section>

    @using (Html.BeginForm("SaveBranchTargets", "DCCR", FormMethod.Post, new { id = "frmBrachTargets" }))
    {
        if (null != Model && Model.Count() > 0)
        {
            <input type="hidden" name="CboMonthId" value="@ViewBag.SelMonthId" />
            <input type="hidden" id="Type" name="SelType" />

 

            int nsno = 1;

            <div class="table-header">
                Records Found (@Model.Count())
              
                    <div class="" style="margin-right : 10px;float:right;">
                        <button class="btncustom P2">
                            Save
                        </button>

                        <button class="btncustom P2">
                            Download
                        </button>
                    </div>
                
            </div>

            if (Model != null)
            {
                

                <div class="overflowscroll">

                    <table class="table tbhover table-striped table-bordered">

                        <thead>
                            <tr>
                                <th>
                                    S.No.
                                </th>
                                <th>
                                    @Html.DisplayName("Branch Name")
                                </th>

                                <th>
                                    @Html.DisplayName("Target Amount")
                                </th>
                            </tr>

                        </thead>

                        <tbody>

                            @for (int i = 0; i < Model.Count(); i++)
                        {
                                @Html.Hidden("LstTargets.Index", (@i))
                                @Html.Hidden("LstTargets[" + (@i) + "].SubscriptionId", Model.ElementAt(i).SubscriptionId)
                                @Html.Hidden("LstTargets[" + (@i) + "].BranchName", Model.ElementAt(i).BranchName)
                                @Html.Hidden("LstTargets[" + (@i) + "].FinancialYearId", Model.ElementAt(i).FinancialYearId)
                                @Html.Hidden("LstTargets[" + (@i) + "].PrevAmount", Model.ElementAt(i).PrevAmount)

                                <tr>
                                    <td>
                                        @(nsno++)
                                    </td>

                                    <td>
                                        @Html.DisplayName(Model.ElementAt(i).BranchName)
                                    </td>

                                    <td>
                                        @Html.TextBox("LstTargets[" + (@i) + "].Amount", Model.ElementAt(i).Amount.ToString("0.00#"), new { @class = "form-control textlength txtboxNum", @min = "0", @maxlength = "17", @style = "width:220px;text-align:right", @id = "FPCash", name = Model.ElementAt(i).Amount })
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            }
        }
        else
        {
            <span style="color:red;font-weight:bold;">Data is not available</span>
        }
    }

</section>

<script type="text/javascript">


    $('#btnExport').click(function () {

        debugger
        $('#Type').val("Export");
        $('#frmBrachTargets').submit();
    });

    $('#btnSave').click(function () {
        $('#Type').val("Save");
        $('#frmBrachTargets').submit();
    });

</script>
