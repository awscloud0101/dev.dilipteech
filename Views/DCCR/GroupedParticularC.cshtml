@model AsteriskBrowserAL.GroupedParticular

@{
    ViewBag.Title = "Create GroupedParticular";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-money"></i>
            Finance
        </li>
        <li>
            <i class=""></i>
            DCCR
        </li>
        <li class="active">Grouped Particular</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("GroupedParticularC", "DCCR", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="table-header">
                 
                        Grouped Particular
                        <small style="float:right;font-weight:bold;" class="textheader">
                            @Html.ActionLink("Back to details", "GroupedParticular")
                        </small>
                    
                </div><!-- /.page-header -->
               
            <!-- form start -->
                

                <div class="widget-box row" style="padding:10px;">

                    <form class="form-horizontal" role="form">
                        <div class="box">
                            <span style="color:red;font-weight:bold;">@Html.ValidationMessage("GroupedParticular")</span>



                        </div>


                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Particular Name")</label>

                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.ParticularName, new { @class = "form-control textlength", @id = "Desc", placeholder = "Particular Name" })
                                </div>

                                <div class="col-sm-3" style="display:none;" id="descrHoliday">
                                    <label style="color:red;font-weight:bold;"> Required</label>
                                </div>

                            </div>
                      
                        
                            <div class="col-md-9">
                                <div class="hr hr-18 dotted hr-double"></div>
                                <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                    <i class="ace-icon fa fa-check bigger-50"></i>
                                    Save
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button class="btn btn-sm" type="reset">
                                    <i class="ace-icon fa fa-undo bigger-50"></i>
                                    Reset
                                </button>
                            </div>

                        </div>
                    </form>
                </div>

            }
        </div>
        <input type="hidden" id="count" name="count" value="0" />
    </div>

</section>

<script type="text/javascript">

    function validations() {

        document.getElementById("count").value = "1";
        var Desc = document.getElementById("Desc").value;

        validate = true;

        if (Desc == "") {
            document.getElementById("descrHoliday").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("descrHoliday").style.display = "none";
        }

        return validate;
    };

    function submitForm() {

        var validatestatus = validations();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };

    $('#Desc').focus(function () {
        $('#descrHoliday').hide();
    });
</script>

