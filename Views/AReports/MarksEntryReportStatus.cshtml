@model List<AsteriskBrowserAL.Models.ExaminationResultsData>

@{
    ViewBag.Title = "Marks Entry Report Status";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
         Academics
        </li>
        <li>
            <i class=""></i>
            Reports     
        </li>
        <li class="active">Marks Entry Report Status</li>
    </ul><!-- /.breadcrumb -->
}






<section class="content">
    <br />
    <div class=col-xs-12>
        <h3>@Html.ActionLink("<< Marks Entry Report Details", "MarksEntryReport" )</h3>

    </div>

    <div class="hr hr-18 dotted hr-double"></div>

    <div class="row">
        <div class=col-xs-12>
           
            @using (Html.BeginForm("MarksEntryReportStatus", "AReports", FormMethod.Post))
            {
                if (null != Model && Model.Count() > 0)
                {
                    int nsno = 1;
                    <div class="table-header">
                        Records Found (@Model.Count())
                    </div>
                    @*<input type="hidden" id="IsCentral" value="@Model.IsCentral" name="IsCentral" />*@
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                
              
            
                  <input type="hidden" value="@Model.FirstOrDefault().ClassNumber" />
                    
                       
                               
                                    <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
                                        <tbody>
                                            <tr>
                                                <th>
                                                   S.No.
                                                </th>

                                                <th>
                                                    @Html.DisplayName("Student Name")
                                                </th>

                                                <th>
                                                    @Html.DisplayName("Marks Scored")
                                                </th>


                                            </tr>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @(nsno++)
                                                    </td>

                                                    <td>
                                                        @item.DisplayName
                                                    </td>
                                                    <td>@item.DisplayMarksScored</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                            
                }
            }

        </div>
    </div>
</section>