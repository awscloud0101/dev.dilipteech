@model List<AsteriskBrowserAL.Models.EventsData>
@{
    int sno = 1;
    string style = string.Empty;
}


<div class="row">
    <div class="col-xs-12">

        @if (null != Model && Model.Count() > 0)
            {
            <div class="table-header">
                Records Found(@Model.Count())
                <div style="float:right;margin-right:10px;">
                    <button type="submit" class="btncustom">
                      Download
                    </button>
                </div>
            </div><!-- /.box-header -->

                <table class="table table-striped table-bordered table-hover dynamic-table">
                    <thead>
                        <tr>
                            <th>
                                @("S.No")
                            </th>
                            <th>
                                @("Branch Name")
                            </th>
                            <th>
                                @Html.DisplayName("Event No")
                            </th>
                            <th>
                                @Html.DisplayName("Start Date")
                            </th>
                            <th>
                                @Html.DisplayName("End Date")
                            </th>
                            <th>
                                @Html.DisplayName("Event")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                            <th>
                                @Html.DisplayName("Status By")
                            </th>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(sno++)
                                </td>
                                <td>
                                    @item.BranchName
                                </td>
                                <td>
                                    @item.EventNumber
                                </td>

                                <td>
                                    @if (item.StartDate.HasValue)
                                    {
                                        @item.StartDate.Value.ToString("dd-MMM-yyyy")
                                    }
                                </td>
                                <td>
                                    @if (item.EndDate.HasValue)
                                    {
                                        @item.EndDate.Value.ToString("dd-MMM-yyyy")
                                    }
                                </td>
                                <td>
                                    @item.EventName
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="label label-success arrowed-in arrowed-in-right">Completed</span>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <span class="label label-warning">Not Completed</span>
                                    }
                                    else if (item.Status == 3)
                                    {
                                        <span class="label label-purple arrowed-right arrowed-in">Not Required</span>
                                    }
                                </td>
                                <td>
                                    @item.StatusBy
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
@Html.Action("DataTableScripts", "Base")

        }
        else
        {
            <div style="color:red;font-weight:bold">Data not available to display</div>
        }

    </div>


</div>

