@model AsteriskBrowserAL.Models.ExaminationResultsData

@{
    ViewBag.Title = "Marks Entry Report";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
         Academics
        </li>
        <li>
            <i class=""></i>
            Reports 
        </li>
        <li class="active">Marks Entry Report</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">



    <div class="row">
        <div class=col-xs-12>
            @*@using (Html.BeginForm("ExcelMarksEntryReportDT", "AReports", FormMethod.Post))
                {*@
            @if (null != Model)
            {
                <input type="hidden" id="IsCentral" value="@Model.IsCentral" name="IsCentral" />
                <span style="color:red;font-weight:bold" id="Validation"></span>
                <div class="table-header">
                    <span style="font-family:calibri;"> Marks Entry Report</span>


                </div>
                <div class="widget-box">
             

                    <div class="widget-body">
                        <div class="widget-main">

                            @if (Model.IsCentral)
                            {
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <label class="col-sm-4">Division</label>
                                            <div class="col-sm-6">
                                                @Html.DropDownListFor(model => model.DivisionId, new SelectList(Model.lstDivision, "DivisionId", "DivisionName"), new { @class = "form-control", id = "DivisionId" })
                                            </div>
                                        </div>

                                        <div class="col-xs-6">
                                            <label class="col-sm-4">Branch</label>
                                            <div class="col-sm-6">
                                                <select id="BranchId" name="SubscriptionId" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" id="BranchId" name="SubscriptionId" value="@Model.BranchId" />
                            }


                           
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="col-sm-6">
                                        <label class="col-sm-4">Class</label>
                                        <div class="col-sm-6">
                                            <select id="ClassNumberId" name="ClassNumberId" class="form-control"></select>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label class="col-sm-4">Examination</label>
                                        <div class="col-sm-6">
                                            <select id="ExaminationId" name="ExaminationId" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="col-sm-6">
                                        <label class="col-sm-4">Entry Type</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(model => model.EntrytypeId, new SelectList(Model.lstEntryType, "EntrytypeId", "EntryTypeName"), new { @class = "form-control", id = "EntrytypeId" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

            <div class="overflowscroll"  style="overflow-x:hidden;">
                <div id="ExamResultData"></div>
          
     
                <div id="CoscholasticsData"></div>
        
   
                <div id="LifeSkillsGradesData"></div>
            </div>

                    @*  }*@

                </div>
    </div>

</section>

<script type="text/javascript">

    var status = 0;
    var DisplayValidation = "";

    $(document).ready(function () {
        var IsCentral = $('#IsCentral').val();

        if (IsCentral != "value") {
            LoadClassDropdown();
        }
    })


    $('#DivisionId').change(function () {
        var DivisionId = $('#DivisionId').val();
        if (DivisionId != 0) {
            $.ajax({

                url: '/AReports/GetBranchesByDivisionIdMarksEntryReport',
                data: { DivisionId: DivisionId, IsAll: true },
                success: function (data) {

                    var BranchItems = $('#BranchId');

                    BranchItems.children().remove();

                    BranchItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });

                    $('#BranchId').append(BranchItems);

                },
                aync: false
            });
        }
    });

    $('#BranchId').change(function () {
        LoadClassDropdown();
    });

    function LoadClassDropdown() {

        var IsCentral = $('#IsCentral').val();

        var Branchid = $("#BranchId").val();
        if (Branchid > 0 || Branchid == -1 || IsCentral != "value") {
            $.ajax({
                url: '/AReports/GetClassNumberList',
                success: function (result) {
                    var ClassNumberItems = $("#ClassNumberId")
                    ClassNumberItems.children().remove();
                    ClassNumberItems.append($("<option>").val("0").text("---Select ---"))
                    $.each(result, function (e, record) {
                        ClassNumberItems.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay))
                    });

                    $("#ClassNumberId").append(ClassNumberItems);
                },
                async: false
            })
        }

    }

    $('#ClassNumberId').change(function () {
        $('#ExaminationId').empty();

        var ClassNumberid = $('#ClassNumberId').val();

        if (ClassNumberid < 1) {
            $('#ExamResultData').html("");
        }
        else {
            GetExaminations();
            $('#ExamResultData').html("");
        }
    });

    $('#EntrytypeId').change(function () {
        debugger
        var EntrytypeIds = $('#EntrytypeId').val();

        if (EntrytypeIds == 1) {
            GetStudentsExaminationsData();
        }
        if (EntrytypeIds == 2) {
            GetStuentCoScholasticsData();
        }
        if (EntrytypeIds == 3) {
            GetStuentLifeSkillGradesData();
        }

    });

    function GetExaminations() {
        var ClassNumberid = $('#ClassNumberId').val();
        var BranchsId = $('#BranchId').val();
        var EntrytypeId = $('#EntrytypeId').val();

        if (ClassNumberid > 0) {
            $.ajax({

                url: '/AReports/GetExaminationsByClassNumberBranchWise',
                data: { nClassNumberId: ClassNumberid, Branchid: BranchsId },
                success: function (data) {

                    var ExaminationItems = $('#ExaminationId');

                    ExaminationItems.children().remove();

                    ExaminationItems.append($("<option>").val("0").text("--- Select ---"));

                    $.each(data, function (i, record) {

                        ExaminationItems.append($("<option>").val(record.ExamId).text(record.ExamCode));

                    });

                    $('#ExaminationId').append(ExaminationItems);
                },
                aync: false
            });
        }
    }


    $('#ExaminationId').change(function () {

        debugger

        var EntrytypeIds = $('#EntrytypeId').val();

        if (EntrytypeIds == 1) {
            GetStudentsExaminationsData();
        }
        if (EntrytypeIds == 2) {
            GetStuentCoScholasticsData();
        }
        if (EntrytypeIds == 3) {
            GetStuentLifeSkillGradesData();
        }

    });

    function GetStudentsExaminationsData() {
        var ExamId = $("#ExaminationId").val();
        var ClassNumbersid = $("#ClassNumberId").val();
        var Branchids = $('#BranchId').val();
        var IsCentral = $('#IsCentral').val();
        var EntrytypeIds = $('#EntryTypeId').val();
        var DivisionId = $('#DivisionId').val();

        if (DivisionId == "undefined")
            DivisionId = 0;

        $('#ExamResultData').html("");

        if (parseInt(ExamId) < 1 || parseInt(ClassNumbersid) < 1 || !(parseInt(Branchids) > 0 || Branchids == -1))
            return;

        if (IsCentral == "value")
            IsCentral = "true";

        $('#imagemodal').show();

        $.ajax({

            url: '/AReports/GetStudentsExaminationsByClass',
            data: { nClassNumberId: ClassNumbersid, Examid: ExamId, BranchId: Branchids, IsCentral: IsCentral, DivisionId: DivisionId },
            success: function (Data) {
                $('#LifeSkillsGradesData').html("");
                $('#CoscholasticsData').html("");
                $('#ExamResultData').html(Data);

            },
            error: function () {
                $('#imagemodal').hide();
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }


    function GetStuentCoScholasticsData() {
        var ExamId = $("#ExaminationId").val();
        var ClassNumbersid = $("#ClassNumberId").val();
        var Branchids = $('#BranchId').val();
        var IsCentral = $('#IsCentral').val();
        var EntrytypeIds = $('#EntryTypeId').val();
        var DivisionId = $('#DivisionId').val();

        if (DivisionId == "undefined")
            DivisionId = 0;

        $('#ExamResultData').html("");

        if (parseInt(ExamId) < 1 || parseInt(ClassNumbersid) < 1 || !(parseInt(Branchids) > 0 || parseInt(Branchids) == -1))
            return;

        if (IsCentral == "value")
            IsCentral = "true";

        $('#imagemodal').show();

        $.ajax({
            url: '/AReports/GetStudentsCoscholasticExamResultsByClass',
            data: { nClassNumberId: ClassNumbersid, Examid: ExamId, BranchId: Branchids, IsCentral: IsCentral, DivisionId: DivisionId },
            success: function (Data) {
                $('#ExamResultData').html("");
                $('#LifeSkillsGradesData').html("");
                $('#CoscholasticsData').html(Data);
            },
            error: function () {
                $('#imagemodal').hide();
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }


    function GetStuentLifeSkillGradesData() {
        var ExamId = $("#ExaminationId").val();
        var ClassNumbersid = $("#ClassNumberId").val();
        var Branchids = $('#BranchId').val();
        var IsCentral = $('#IsCentral').val();
        var EntrytypeIds = $('#EntryTypeId').val();

        var DivisionId = $('#DivisionId').val();

        if (DivisionId == "undefined")
            DivisionId = 0;

        $('#ExamResultData').html("");
        $('#CoscholasticsData').html("");

        if (parseInt(ExamId) < 1 || parseInt(ClassNumbersid) < 1 || !(parseInt(Branchids) > 0 || parseInt(Branchids) == -1))
            return;

        if (IsCentral == "value")
            IsCentral = "true";

        $('#imagemodal').show();

        $.ajax({
            url: '/AReports/GetStudentsLifeSkillsGradesDataByClass',
            data: { nClassNumberId: ClassNumbersid, Examid: ExamId, BranchId: Branchids, IsCentral: IsCentral, DivisionId: DivisionId },
            success: function (Data) {
                $('#ExamResultData').html("");
                $('#CoscholasticsData').html("");
                $('#LifeSkillsGradesData').html(Data);
            },
            error: function () {
                $('#imagemodal').hide();
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

</script>

