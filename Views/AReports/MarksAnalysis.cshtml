@model AsteriskBrowserAL.Models.ExaminationResultsData

@{
    ViewBag.Title = "Marks Analysis";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Reports
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Marks Analysis</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <br />


    <div class="row">
        <div class=col-xs-12>
            @using (Html.BeginForm("MarksAnalysisReportExportExcell", "AReports", FormMethod.Post))
            {
                if (null != Model)
                {
                    <input type="hidden" id="IsCentral" value="@Model.IsCentral" name="IsCentral" />
                    <span style="color:red;font-weight:bold" id="Validation"></span>

                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                Marks Entry Report
                            </h5>

                        </div>

                        <div class="widget-body">
                            <div class="widget-main">

                                @if (Model.IsCentral)
                                {
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <label class="col-xs-4">Division</label>
                                                <div class="col-xs-6">
                                                    @Html.DropDownListFor(model => model.DivisionId, new SelectList(Model.lstDivision, "DivisionId", "DivisionName"), new { @class = "form-control", id = "DivisionId" })
                                                </div>
                                            </div>

                                            <div class="col-xs-6">
                                                <label class="col-xs-4">Branch</label>
                                                <div class="col-xs-6">
                                                    <select id="BranchId" name="SubscriptionId" class="form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" id="BranchId" name="SubscriptionId" value="@Model.BranchId" />
                                }


                                <br />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <label class="col-sm-4">Section</label>
                                            <div class="col-sm-6">
                                                <select id="Sectionid" name="Sectionid" class="form-control"></select>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <label class="col-sm-4">Examination</label>
                                            <div class="col-sm-6">
                                                <select id="ExaminationId" name="ExaminationId" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                @*<div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-6">
                                            <label class="col-sm-4">Entry Type</label>
                                            <div class="col-sm-6">
                                                @Html.DropDownListFor(model => model.EntrytypeId, new SelectList(Model.lstEntryType, "EntrytypeId", "EntryTypeName"), new { @class = "form-control", id = "EntrytypeId" })
                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                            </div>
                        </div>
                    </div>

                }

                <div id="ExamResultData"></div>
                @*<div id="CoscholasticsData"></div>
                <div id="LifeSkillsGradesData"></div>*@


            }
        </div>
    </div>

</section>

<script type="text/javascript">

    var status = 0;
    var DisplayValidation = "";

    $(document).ready(function () {
        debugger
        var IsCentral = $('#IsCentral').val();

        if (IsCentral != "value") {
            LoadClassDropdown();
        }
    })


    $('#DivisionId').change(function () {
        var DivisionId = $('#DivisionId').val();
        if (DivisionId != 0) {
            $.ajax({

                url: '/AReports/GetBranchesByDivisionIdMarksEntryReport',
                data: { DivisionId: DivisionId },
                success: function (data) {

                    var BranchItems = $('#BranchId');

                    BranchItems.children().remove();

                    BranchItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });

                    $('#BranchId').append(BranchItems);

                },
                aync: false
            });
        }
    });

    $('#BranchId').change(function () {
        LoadClassDropdown();
    });

    function LoadClassDropdown() {
        var SubscriptionId = $("#BranchId").val();
        $.ajax({
            url: '/AReports/GetSectionDropDown',
            data : {SubscriptionId : SubscriptionId},
            success: function (result) {
                debugger
                var ClassNumberItems = $("#Sectionid")
                ClassNumberItems.children().remove();
                ClassNumberItems.append($("<option>").val("null").text("--- Select ---"))
                $.each(result, function (e, record) {
                    ClassNumberItems.append($("<option>").val(record.SectionId).text(record.SectionCode))
                });

                $("#Sectionid").append(ClassNumberItems);

            },
            async: false
        })
    }


    $('#Sectionid').change(function () {
        $('#ExaminationId').empty();

        var ClassNumberid = $('#ClassNumberId').val();

        if (ClassNumberid < 1) {
            $('#ExamResultData').html("");
        }
        else {
            GetExaminations();
            $('#ExamResultData').html("");
        }
    });

    function GetExaminations() {
        debugger
        var Sectionid = $('#Sectionid').val();
        var BranchId = $('#BranchId').val();
        if (Sectionid > 0) {
            $.ajax({

                url: '/AReports/GetExaminationsBySectionBranchWise',
                data: { nSectionId: Sectionid, BranchId: BranchId },
                success: function (data) {

                    var ExaminationItems = $('#ExaminationId');

                    ExaminationItems.children().remove();

                    ExaminationItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data, function (i, record) {

                        ExaminationItems.append($("<option>").val(record.ExamId).text(record.ExamCode));

                    });

                    $('#ExaminationId').append(ExaminationItems);
                },
                aync: false
            });
        }
    }

    $('#ExaminationId').change(function () {

        
            GetStudentsExaminationsData();
       

    });

    function GetStudentsExaminationsData() {
        debugger
        var ExamId = $("#ExaminationId").val();
        var ClassNumbersid = $("#Sectionid").val();
        var Branchids = $('#BranchId').val();
        var IsCentral = $('#IsCentral').val();

        $('#ExamResultData').html("");

        if (parseInt(ExamId) < 1 || parseInt(ClassNumbersid) < 1 || parseInt(Branchids) < 0)
            return;

        if (IsCentral == "value")
            IsCentral = "true";

        $('#imagemodal').show();

        $.ajax({

            url: '/AReports/GetStudentsExaminationsBySection',
            data: { nClassNumberId: ClassNumbersid, Examid: ExamId, BranchId: Branchids, IsCentral: IsCentral},
            success: function (Data) {
                $('#ExamResultData').html(Data);

            },
            error: function () {
                $('#imagemodal').hide();
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }


</script>


