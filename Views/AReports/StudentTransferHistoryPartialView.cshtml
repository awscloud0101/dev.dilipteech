@model AsteriskBrowserAL.Models.StudentTransferHistoryData
@{
    List<IGrouping<string, AsteriskBrowserAL.Models.StudentTransferHistoryData>> GroupedData = new List<IGrouping<string, AsteriskBrowserAL.Models.StudentTransferHistoryData>>();
    int sno = 1;
    if (null != Model)
    {
        if (null != Model.StudentTransferHistoryDetails && Model.StudentTransferHistoryDetails.Count() > 0)
        {
            GroupedData = Model.StudentTransferHistoryDetails.GroupBy(p => p.BranchName).ToList();
        }

    }

}

@Html.Action("DataTableScripts", "Base", new { IsPaging = false })
@if (null != Model)
{
    if (null != Model.StudentTransferHistoryDetails && Model.StudentTransferHistoryDetails.Count() > 0)
    {
      

        <div class="table-header">

            Records Found (@Model.StudentTransferHistoryDetails.Count)

            <div style="float:right;margin-right:10px;">

               
                <button class="btncustom P2" id="btnExport">
                    Download

                </button>
            </div>
        </div>
        <div class="overflowscroll">
            <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
                <thead>
                    <tr>
                        <th>
                           S.No.
                        </th>
                        @if (Model.IsCentral)
                        {
                            <th>
                                @Html.DisplayName("Branch Name")
                            </th>
                        }
                        <th>
                            @Html.DisplayName("Student Name")
                        </th>

                        @if (Model.StudentTransferHistoryDetails.FirstOrDefault().HistoryStatus == 1)
                        {
                            <th>
                                @Html.DisplayName("Admit Class Name")
                            </th>
                            <th>
                                @Html.DisplayName("Transfer Class Name")
                            </th>
                        }
                        @if (Model.StudentTransferHistoryDetails.FirstOrDefault().HistoryStatus == 2)
                        {
                            <th>
                                @Html.DisplayName("Admit Section Name")
                            </th>
                            <th>
                                @Html.DisplayName("Transfer Section Name")
                            </th>
                        }
                        @if (Model.StudentTransferHistoryDetails.FirstOrDefault().HistoryStatus == 3)
                        {
                            <th>
                                @Html.DisplayName("From Branch Name")
                            </th>
                            <th>
                                @Html.DisplayName("To Branch Name")
                            </th>
                            <th>
                                @Html.DisplayName("To Branch Adm No")
                            </th>
                        }
                        <th>
                            @Html.DisplayName("Transfer Date")
                        </th>

                    </tr>
                </thead>
                <tboby>
                    @foreach (var item in Model.StudentTransferHistoryDetails)
                    {
                        <tr>
                            <td>
                                @(sno++)
                            </td>
                            @if (Model.IsCentral)
                            {
                                <td>
                                    @item.BranchName
                                </td>
                            }
                            <td>
                                @item.StudentName
                            </td>

                            @if (item.HistoryStatus == 1)
                            {
                                <td>
                                    @item.AdmitClassName
                                </td>
                                <td>
                                    @item.TransferClassName
                                </td>
                            }
                            @if (item.HistoryStatus == 2)
                            {
                                <td>
                                    @item.AdmitSectionName
                                </td>
                                <td>
                                    @item.TransferSectionName
                                </td>
                            }
                            @if (item.HistoryStatus == 3)
                            {
                                <td>
                                    @item.FromBranchName
                                </td>
                                <td>
                                    @item.ToBranchName
                                </td>
                                <td>
                                    @item.ToBranchAdmNumber
                                </td>
                            }
                            <td>
                                @if (item.TransferDate.HasValue)
                        {
                                    @item.TransferDate.Value.ToString("dd - MMM - yyyy")

                                }


                            </td>
                        </tr>
                    }

                </tboby>

            </table>
        </div>


    }
    else
    {
        <div style="color:red;font-weight:bold">Data not available to display</div>
    }
}
else
{
    <div style="color:red;font-weight:bold">Data not available to display</div>
}

