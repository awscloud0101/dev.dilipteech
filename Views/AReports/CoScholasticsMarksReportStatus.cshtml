
@model List<AsteriskBrowserAL.Models.ExaminationResultsData>

@{
    ViewBag.Title = "Marks Entry Report Status";
}


@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Reports
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Marks Entry Report Status</li>
    </ul><!-- /.breadcrumb -->
}






<section class="content">
    <br />
    <div class=col-xs-12>
        <h3>@Html.ActionLink("<< Marks Entry Report Details", "MarksEntryReport")</h3>

    </div>


    <div class="hr hr-18 dotted hr-double"></div>

    <div class="row">
        <div class=col-xs-12>

            @using (Html.BeginForm("CoScholasticsMarksReportStatus", "AReports", FormMethod.Post))
            {
                if (null != Model && Model.Count() > 0)
                {
                    int nsno = 1;

                    <div class="table-header">
                        Records Found (@Model.Count())
                    </div>

                    <span style="color:red;font-weight:bold" id="Validation"></span>

                    <input type="hidden" value="@Model.FirstOrDefault().ClassNumber" />



                    <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:14px;">
                        <tbody>
                            <tr>
                                <th rowspan="2">
                                   S.No.
                                </th>

                                <th rowspan="2">
                                    @Html.DisplayName("Student Name")
                                </th>

                                <th colspan="3" style="text-align:center">
                                    @Html.DisplayName("Marks Scored")
                                </th>
                            </tr>
                            <tr>
                                <th style="text-align:center" align="center">
                                    Project
                                </th>
                                <th style="text-align:center" align="center">
                                    Reading
                                </th>
                                <th style="text-align:center" align="center">
                                    Writing
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(nsno++)
                                    </td>

                                    <td>
                                        @item.DisplayName
                                    </td>
                                    <td>@item.Project</td>
                                    <td>@item.Reading</td>
                                    <td>@item.Writing</td>
                                </tr>
                            }
                        </tbody>
                    </table>



                }
            }

        </div>
    </div>
</section>



