@model AsteriskBrowserAL.Models.PlayersData

    @{
        ViewBag.Title = "PlayersD";
    }

    <!-- #section:basics/content.breadcrumbs -->
    <section class="content-header">
        <ol class="breadcrumb">
            <li>
                <i class="menu-icon fa fa-list"></i>
                Manage
            </li>
            <li>
                <i class=""></i>
                Help Desk
            </li>
            <li class="active">Players</li>
        </ol>
        <!-- /section:basics/content.breadcrumbs -->
    </section>


    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <h3>@Html.ActionLink("<< Players", "Players")</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                @using (Html.BeginForm("PlayersD", "MnHelpDesk", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div>

                        <span style="color: red;">
                            <b>Are you sure you want to delete this?</b>
                        </span>
                    </div>
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Players</h3>
                            <br />
                            <br />
                            <button class="btn btn-primary" type="submit" style="width:80px;">
                                Delete
                            </button>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>
                                           S.No.
                                        </th>
                                        <th>
                                            @Html.DisplayName("Employee Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Employee Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Actor Role")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Branch")
                                        </th>
                                    </tr>

                                    <tr>
                                        <td>
                                            1
                                        </td>
                                        <td>
                                            @Model.EmployeeNumber
                                        </td>
                                        <td>
                                            @Model.EmployeeName
                                        </td>
                                        <td>
                                            @Model.ActorName
                                        </td>
                                        <td>
                                            @Model.BranchName
                                        </td>

                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>

                }
            </div>
        </div>
    </section>
