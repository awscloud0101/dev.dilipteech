@model List<AsteriskBrowserAL.Models.PlayersData>

@{
    int Sno = 1;
    int Count = 0;

    var Result = Model.Where(p => (p.Descendents == "" || p.Descendents == null)).ToList();
    if (Result.Count() > 0)
    {
        Count = 1;
    }
}

<span style="color:red;" id="ValidationId">@Html.ValidationMessage("Error")</span>
@if ((null != Model))
{

    if (Model.Count() > 0)
    {
        <div class="table-header">
            Records Found (@Model.Count())
            <div style="float:right;">
                <button class="btn btn-info btn-minier" style="width:80px;color:green;height:32px;" id="Remove" name="Remove" type="button">Remove</button>
                @*<input type="button" id="Remove" value="Remove" name="Remove" class="btn btn-primary pull-right" style="display:none" />*@
            </div>
        </div>
        <div style="overflow:auto;height:300px">
            <table class="table table-bordered table-striped table-hover nowrap dynamic-table" style="font-size:14px;">
                <thead>
                    <tr>
                        @if (Count > 0)
                        {
                            <th>
                                <input type="checkbox" id="SelectallData" />@Html.DisplayName(" Select")
                            </th>
                        }
                        <th>
                           S.No.
                        </th>
                        <th>
                            @Html.DisplayName("Employee Number")
                        </th>
                        <th>
                            @Html.DisplayName("Employee Name")
                        </th>

                        @*<th>
                                @Html.DisplayName("Branch ")
                            </th>*@

                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            @if (Count > 0)
                            {
                                <td>
                                    @if (string.IsNullOrWhiteSpace(Model.ElementAt(i).Descendents))
                                    {
                                        <input type="checkbox" id="CheckPlayers" value="@Model.ElementAt(i).PlayerId" onclick="EnableRemove()" />

                                    }
                                </td>
                            }
                            <td>
                                @Sno
                            </td>

                            <td>
                                @Model.ElementAt(i).EmployeeNumber
                            </td>

                            <td>
                                @Model.ElementAt(i).EmployeeName
                            </td>
                            @*<td>
                                    @Model.ElementAt(i).BranchName
                                </td>*@

                        </tr>

                        Sno++;
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <input id="Remove" name="Remove" type="hidden" />

        <span style="color: red;"><b>Data not available</b></span>
    }


}



<script>
    $('#SelectallData').change(function () {
        document.getElementById("ValidationId").style.display = "none"
        if ($(this).prop('checked')) {
            document.getElementById("Remove").style.display = "inline"

            $('tbody tr td #CheckPlayers').each(function () {
                $(this).prop('checked', true);
            });
        } else {
            document.getElementById("Remove").style.display = "none"

            $('tbody tr td #CheckPlayers').each(function () {
                $(this).prop('checked', false);
            });
        }
    });

    function EnableRemove() {
        var Count = 0;
        document.getElementById("Remove").style.display = "inline"
        document.getElementById("ValidationId").style.display = "none"
        $('tbody tr td #CheckPlayers').each(function () {
            if ($(this).prop('checked')) {

                Count += 1;
            };
        });

        if (Count > 0) {
            document.getElementById("Remove").style.display = "inline"
        }
        else {
            document.getElementById("Remove").style.display = "none"

        }
    }

    $("#Remove").click(function () {
        var Ids = " ";
        var result = $('#CheckPlayers:checked');

        $.each(result, function (i, result) {
            Ids += result.value + ",";

        });

        if (Ids != "") {
            RemovePlayersData(Ids)
        }
    })


    window.onload = onloadeddata();
    function onloadeddata() {
        document.getElementById("Remove").style.display = "none"
    };

</script>

