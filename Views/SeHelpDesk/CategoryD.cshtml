@model AsteriskBrowserAL.HDCategory

@{
    ViewBag.Title = "CategoryD";
}

<!-- #section:basics/content.breadcrumbs -->
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Manage
        </li>
        <li>
            <i class=""></i>
            HelpDesk
        </li>
        <li class="active">Category</li>
    </ol>
    <!-- /section:basics/content.breadcrumbs -->
</section>

<section class="content">

    <div class="row">
        <div class="col-xs-12">
            <h3>@Html.ActionLink("<<Category Details ", "Category")</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("CategoryD", "SeHelpDesk", FormMethod.Post, new { @class = "form-horizontal" }))
            {

            <span style="color: red;">
                <b>Are you sure you want to delete this?</b>
            </span>
            <span style="color: red;">@Html.ValidationMessage("Category")</span>
                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="box-header">
                        <h3 class="box-title">Category</h3>
                        <button class="btn btn-primary pull-right" type="submit" style="width:80px;">
                            Delete
                        </button>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Category Name")
                                    </th>
                                   
                                    
                                </tr>
                                <tr>
                                    <td>
                                     @Html.DisplayFor(model => model.CategoryName)
                                    </td>
                                                                    
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

