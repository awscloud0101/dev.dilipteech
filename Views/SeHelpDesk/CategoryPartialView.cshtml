@model IEnumerable<AsteriskBrowserAL.Models.HDCategoryData>




<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div>



@if (Model != null)
{
    if (Model.Count() > 0)
    {
        int nsno = 1;
        <div class="table-header">
            Records Found (@Model.Count())
        </div>
        <div class="overflowscroll">


            <table id="mytab1" class="table table-striped table-bordered table-hover dynamic-table">
                <thead>
                    <tr>
                        <th>
                            S.No.
                        <th>
                            @Html.DisplayName("Category Name")
                        </th>
                        <th>
                        </th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(nsno++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>

                                <div>
                                    <a class="green P2" href="@Url.Action("CategoryE", "SeHelpDesk", new { id = item.HDCategoryId })">
                                        <i class="ace-icon fa fa-pencil  bigger-130"></i>
                                    </a>
                                    <a class="red P2" onclick="btnConfirm(@item.HDCategoryId)">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>



                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <span style="color: red;"><b>Data not available</b></span>
    }
}

@Html.Action("DataTableScripts", "Base")

<script>

    function btnConfirm(Value) {
        if (Value > 0) {
            $.ajax({
                url: '/SeHelpDesk/ValidationForCategoryD',
                data: { Id: Value },
                success: function (data) {

                    var url = '/SeHelpDesk/CategoryD?id=' + Value;
                    var title = "Category";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }

</script>