@model List<AsteriskBrowserAL.Models.PlayersData>
@{
    int sno = 1;
}

<div class="col-sm-6">
    <div class="form-group">
        <div class="box">
            <div class="box-header">
                <input type="button" id="Remove" class="btn btn-primary pull-right" value="Remove" />

                <h3 class="box-title">Assigned Descendants</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="box-body" style="overflow: auto;  height:300px ">
                <table class="table table-hover" id="AssignTable">
                    <tbody>
                        <tr>
                            <th>
                                <input type="checkbox" id="SelectRemoveall" />   @Html.DisplayName("Select")
                            </th>
                            <th>
                               S.No.
                            </th>
                            <th>
                                @Html.DisplayName("Staff")
                            </th>
                            <th>
                                @Html.DisplayName("Branch Name")
                            </th>
                        </tr>
                        @if (null != Model)
                        {
                            if (Model.Count() > 0)
                            {
                                for (int i = 0; i < Model.Count(); i++)
                                {

                                    <tr>
                                        <td>
                                            <input type="checkbox" id="CheckR" name="CheckR" value=@Model.ElementAt(i).PlayerId />
                                        </td>
                                        <td>
                                            @sno
                                        </td>

                                        <td>
                                            @Model.ElementAt(i).EmployeeName
                                        </td>
                                        <td>
                                            @Model.ElementAt(i).BranchName
                                        </td>

                                    </tr>
                                    sno++;
                                }
                            }
                        }

                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>





<script>
    $('#SelectRemoveall').change(function () {
        if ($(this).prop('checked')) {
            $('tbody tr td #CheckR').each(function () {
                $(this).prop('checked', true);
            });
        } else {
            $('tbody tr td #CheckR').each(function () {
                $(this).prop('checked', false);
            });
        }
    });


</script>

