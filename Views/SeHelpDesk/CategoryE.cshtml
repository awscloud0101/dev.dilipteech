@model AsteriskBrowserAL.HDCategory

@{
    ViewBag.Title = "Category";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-gears"></i>
            Settings
        </li>
        <li>
            <i class=""></i>
            Help Desk
        </li>
        <li class="active">Category</li>
    </ul><!-- /.breadcrumb -->
}








@Html.AntiForgeryToken()

<section class="content">

  
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                @using (Html.BeginForm("CategoryE", "SeHelpDesk", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)

                    <span style="color: red;">@Html.ValidationMessage("Category")</span>

                            <div class="table-header">
                            
                                    Category
                                    <span style="float:right; " class="textheader">


                                        @Html.ActionLink("Back to Category", "Category", new { GroupId = Model.ExecutiveGroupId })
                                    </span>
                           
                            </div><!-- /.page-header -->

                            <div class="row widget-box" style="padding:10px;"> 
               
                                    <!-- PAGE CONTENT BEGINS -->
                                    <form class="form-horizontal" role="form">
                                        <div class="box-body">

                                            @Html.HiddenFor(model => model.HDCategoryId)
                                            @Html.HiddenFor(model => model.ExecutiveGroupId)


                                            <div class="form-group">
                                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Category Name")</label>

                                                <div class="col-sm-3">
                                                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control col-sm-5 textlength", placeholder = "Category Name", id = "CategoryName" })
                                                </div>

                                                <div class="col-sm-3" style="display:none;" id="categoryname">
                                                    <label style="color:red;font-weight:bold;"> Please Enter  Category Name </label>
                                                </div>
                                            </div>

                                        </div>

              


                                        <div class="col-md-9">
                                            <div class="hr hr-18 dotted hr-double"></div>
                                            <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                                <i class="ace-icon fa fa-check bigger-50"></i>
                                                Save
                                            </button>

                                            &nbsp; &nbsp; &nbsp;
                                            <button class="btn btn-sm" type="reset">
                                                <i class="ace-icon fa fa-undo bigger-50"></i>
                                                Reset
                                            </button>
                                        </div>



                                    </form>
                        
                            </div>
                }



            </div>
        </div>
    </div>
    <input type="hidden" id="count" name="count" value="0" />
</section>



