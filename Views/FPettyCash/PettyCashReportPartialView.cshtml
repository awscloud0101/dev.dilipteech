@model AsteriskBrowserAL.Models.PettyCashReportViewModel
@{
    List<IGrouping<string, AsteriskBrowserAL.Models.PettyCashReportViewModel>> GroupedData = new List<IGrouping<string, AsteriskBrowserAL.Models.PettyCashReportViewModel>>();
    int sno = 1;
    double dTotAmount = 0.0;

    if (null != Model)
    {
        if (null != Model.PettyCashDetails && Model.PettyCashDetails.Count() > 0)
        {
            dTotAmount = Model.PettyCashDetails.Sum(m => m.Amount);
        }
        GroupedData = Model.PettyCashDetails.GroupBy(p => p.BranchName).ToList();
    }
}


        @if (null != Model)
        {
            if (null != Model.PettyCashDetails && Model.PettyCashDetails.Count() > 0)
            {

                <div class="table-header">
                    Records Found (@Model.PettyCashDetails.Count())

                    <div style="float:right;margin-right:10px;">

                        <button onclick="PrintElem('#mydiv')" class="btncustom">
                            Print
                        </button>

                        <button type="submit" class="btncustom P2">
                            Download
                        </button>
                    </div>
                </div>

                                <div class="overflowscroll">

                                    <table id="tbPettyCashReport" class="table tbhover table-striped table-bordered dynamic-table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    S.No.
                                                </th>
                                                @if (@Model.IsCentral)
                                                {

                                                    <th style="min-width:132px">
                                                        @Html.DisplayName("Division Name")
                                                    </th>

                                                    <th style="min-width:139px">
                                                        @Html.DisplayName("Branch Name")
                                                    </th>
                                                }
                                                <th style="min-width:100px">
                                                    @Html.DisplayName("Date")
                                                </th>
                                                <th style="min-width:165px">
                                                    @Html.DisplayName("Account Head")
                                                </th>
                                                <th style="min-width:230px">
                                                    @Html.DisplayName("Account Sub Head")
                                                </th>
                                                <th style="min-width:120Px">
                                                    @Html.DisplayName("Voucher No")
                                                </th>
                                                <th style="min-width:120px">
                                                    @Html.DisplayName("Spent Amount")
                                                </th>
                                                <th style="min-width:140Px">
                                                    @Html.DisplayName("Paid To")
                                                </th>
                                                <th style="min-width:220Px">
                                                    @Html.DisplayName("Approved By")
                                                </th>
                                                <th style="min-width:250Px">
                                                    @Html.DisplayName("Narration")
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.PettyCashDetails)
                                            {
                                                <tr>
                                                    <td>
                                                        @(sno++)
                                                    </td>

                                                    @if (Model.IsCentral)
                                                    {
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.DivisionName)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.BranchName)
                                                        </td>
                                                    }

                                                    <td>
                                                        @if (item.TransactionDate.HasValue)
                                                        {
                                                            @item.TransactionDate.Value.ToString("dd-MMM-yyyy")
                                                        }
                                                    </td>
                                                    <td>
                                                        @item.HeadName
                                                    </td>
                                                    <td>
                                                        @item.SubHeadName
                                                    </td>
                                                    <td>
                                                        @item.DisplayVoucherNo
                                                    </td>
                                                    <td>
                                                        @item.Amount
                                                    </td>
                                                    <td>
                                                        @item.PaidTo
                                                    </td>
                                                    <td>
                                                        @item.ApprovedPersonname
                                                    </td>
                                                    <td>
                                                        @item.Description
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
            }
            else
            {
                <div style="color:red;font-weight:bold">Data not available to display</div>
            }
        }
        else
        {
            <div style="color:red;font-weight:bold">Data not available to display</div>
        }

@Html.Action("DataTableScripts", "Base")

<script type="text/javascript">



    function PrintElem(elem) {
        Popup($(elem).html());
    }

    function Popup(data) {
        var mywindow = window.open('', 'my div', 'height=300,width=600');
        mywindow.document.write('<p></p>');
        mywindow.document.write(data);
        mywindow.document.write('<p></p>');

        mywindow.document.close();
        mywindow.focus();

        mywindow.print();
        mywindow.close();
        return true;
    }
</script>
<body>
    <div id="mydiv" style="display:none">

        @if (null != Model)
        {
            if (null != Model.PettyCashDetails && Model.PettyCashDetails.Count() > 0)
            {
                int nSno = 1;

                <div class="row">
                    <div class="col-xs-12">
                        <img class=" col-xs-11" id="avatar" width="50" height="43" src="@Model.InstituteDetails.InstituteLogo" style="margin-bottom:-1.5em;" />
                        <b style="font-weight:bold; margin-left:0.3em; font-size:20px; font-family:'Segoe UI'">@Model.InstituteDetails.InstituteName</b>
                    </div>
                    <div style="margin-left:3.7em; font-family:'Segoe UI'"><b>@Model.InstituteDetails.InstituteAddress</b></div>
                    <br />

                    <hr style="width:100%; margin-bottom:-0.5em" />
                    <hr style="width:100%;" />
                    <div align="center" style="font:12%; font-family:'Segoe UI'"><b>Petty Cash Report (@((Model.FromDate.HasValue && Model.ToDate.HasValue) ? (Model.FromDate.Value.ToString("dd-MMM-yyyy") + " - " + Model.ToDate.Value.ToString("dd-MMM-yyyy")) : "")) </b></div>
                    <hr style="width:100%;" />

                    @foreach (var g in GroupedData)
                    {
                        <hr style="width:100%; margin-top:-0.5em" />

                        <div align="left" style="font-weight:bold; margin-left:0.4em; font-family:'Segoe UI'; font-size:14px;"><b>@g.Key</b></div>
                        <hr style="width:100%;" />

                        <div class="col-xs-12 box-body table-responsive">
                            <table class="table table-hover" rules="rows" cellpadding="5" style="width:675px; font-size:12px;">

                                <tbody>
                                    <tr style="font-size:13px; font-family:'Segoe UI'; font-weight:bold; text-align:left;">

                                        <th>
                                           S.No.
                                        </th>
                                        <th>
                                            @Html.DisplayName("Date")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Account Head")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Account Sub Head")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Voucher No")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Spent Amount")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Paid To")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Approved By")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Narration")
                                        </th>

                                    </tr>
                                    @foreach (var item in g)
                                    {
                                        <tr style="font-family:'Segoe UI';">
                                            <td>
                                                @(nSno++)
                                            </td>
                                            <td>
                                                @if (item.TransactionDate.HasValue)
                                                {
                                                    @item.TransactionDate.Value.ToString("dd-MMM-yyyy")
                                                }
                                            </td>
                                            <td>
                                                @item.HeadName
                                            </td>
                                            <td>
                                                @item.SubHeadName
                                            </td>
                                            <td>
                                                @item.DisplayVoucherNo
                                            </td>
                                            <td>
                                                @item.Amount
                                            </td>
                                            <td>
                                                @item.PaidTo
                                            </td>
                                            <td>
                                                @item.ApprovedPersonname
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }


                    <hr style="width:100%;" />
                    <div align="right" style="font-weight:bold;font-family:'Segoe UI'; font-size:14px;">Total Spent Amount : @AsteriskBrowserAL.Helpers.Utility.ConvertToStringCommas(dTotAmount.ToString()) </div>

                </div>
            }
        }


    </div>
</body>

