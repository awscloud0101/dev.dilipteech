    int sno = 1;
    double dTotAmount = 0.0;

    if (null != Model)
    {
        if (null != Model.PettyCashDaysheetDetails && Model.PettyCashDaysheetDetails.Count() > 0)
        {
            dTotAmount = Model.PettyCashDaysheetDetails.Sum(m => m.Amount);
        }

        GroupedData = Model.PettyCashDaysheetDetails.GroupBy(p => p.BranchName).ToList();
    }
}



