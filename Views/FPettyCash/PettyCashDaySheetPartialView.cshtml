                    </td>
                </tr>

            </tbody>
        </table>
    }

    if (Model.PettyCashDaysheetDetails != null && Model.PettyCashDaysheetDetails.Count > 0)
    {
        <div class="table-header">
            Records Found (@Model.PettyCashDaysheetDetails.Count())

            <div style="float:right">

