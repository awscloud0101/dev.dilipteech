@model AsteriskBrowserAL.Division

@{
    ViewBag.Title = "Edit Division";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-gears"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            General
        </li>
        <li class="active">Division</li>
    </ul><!-- /.breadcrumb -->
}


<section class="content">
    <div class="row">
        <div class=col-xs-12>
            @*<h3>@Html.ActionLink("<< Division ", "DivisionsDet")</h3>*@
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("DivisionsE", "SeGeneral", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="table-header">

                    Division
                    <small style="float:right;" class="textheader">
                        @Html.ActionLink("Back to Division", "DivisionsDet")
                    </small>

                </div>

                @*<div class="box">*@
                <span style="color:red;font-weight:bold;">@Html.ValidationMessage("Division")</span>

                    @*<div class="box-header">*@
                    @*<div>
                            <button class="btn btn-primary" type="submit" style="width:80px;" onclick="return submitForm();">
                                Save
                            </button>
                        </div>*@
                    <input type="hidden" name="DivisionId" value="@Model.DivisionId" />
                        @*</div>*@<!-- /.box-header -->
                    <!-- form start -->

                        <div class="widget-box" style="padding:10px;">

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Division Name")</label>

                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.DivisionName, new { @class = "form-control textlength", @id = "Name", placeholder = "Division" })
                                </div>

                                <div class="col-sm-3" style="display:none;" id="Nameval">
                                    <label style="color:red;font-weight:bold;"> Please enter division name</label>
                                </div>
                                <br />
                                <br />                            <div class="hr hr-18 dotted hr-double"></div>

                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                        <i class="ace-icon fa fa-check bigger-50"></i>
                                        Save
                                    </button>

                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn btn-sm" type="reset">
                                        <i class="ace-icon fa fa-undo bigger-50"></i>
                                        Reset
                                    </button>
                                </div>

                            </div>

                        </div>
            }
        </div>

    </div>


</section>

<script type="text/javascript">
    function validateHead() {

        var Name = document.getElementById("Name").value;

        validate = true;

        if (Name == "") {
            document.getElementById("Nameval").style.display = "inline";
            validate = false;
        }
        return validate;
    };

    function submitForm() {
        var validatestatus = validateHead();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };

    $('#Name').focus(function () {
        $('#Nameval').hide();
    });




</script>

