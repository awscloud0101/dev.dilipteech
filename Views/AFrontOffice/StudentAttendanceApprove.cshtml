@model AsteriskBrowserAL.StudentAttendanceApproved

@{
    ViewBag.Title = "Student Attendance Approve";
}



@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Accademics
        </li>
        <li>
            <i class=""></i>
            Front Office
        </li>
        <li class="active">Student Attendance Approve</li>
    </ul><!-- /.breadcrumb -->
}



<section class="content">
  <br/>
    <br />
    <br />

    <div class="row">
    <div class="col-xs-12">
        <div class="box-body">
            @using (Html.BeginForm("StudentAttendanceApprove", "AFrontOffice", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            <div class="box">
              <div class="box-header">
                  <h5>Student Attendance Approve</h5>
                  </div>
                </div>
                    if (null != Model)
                    {
                    @Html.HiddenFor(model => model.Id)
                    <input type="hidden" id="AttendanceTillDate" value="@Model.AttendanceTillDate.Value.ToString()">

                    }
                    <div class="box">
                        <div class="box-body">
                            <div class="form-group">
                                <br />
                                <br />
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  @Html.Label("Attendance Freezing Date")</label>
                                <div class="col-sm-3">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            @if (null != Model)
                                            {
                                                <div id="datepicker" class="input-group date">
                                                    <input class="form-control" type="text" id="AttendanceTillDate" name="AttendanceTillDate" value="@Model.AttendanceTillDate.Value.ToShortDateString()" d data-date-format="dd/mm/yyyy" autocomplete="off" placeholder="Select Date" />
                                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div id="datepicker" class="input-group date">
                                                    <input class="form-control" type="text" id="AttendanceTillDate" name="AttendanceTillDate" autocomplete="off" placeholder="Select Date" />
                                                    <span class="input-group-addon"><i class="ace-icon fa fa-calendar"></i></span>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                           
                            <div class="hr hr-18 dotted hr-double"></div>
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-info btn-sm P2" type="submit">
                                    <i class="ace-icon fa fa-check bigger-50"></i>
                                    Submit
                                </button>

                            </div>

                        </div>
                    </div>
                    }
                </div>
                </div>
            </div>
  
</section>



