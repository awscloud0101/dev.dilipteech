@model AsteriskBrowserAL.Models.StudentDetailsData

@{
    int nSubId = AsteriskBrowserAL.Helpers.Utility.GetLoggedSubscriptiond();
    ViewBag.Title = "Id Cards";
}


@section BreadCrumb{
    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            <a href="#">Academics</a>
        </li>
        <li>
            <i class=""></i>
            Examination
        </li>
        <li class="active">Generate Id Cards</li>
    </ul><!-- /.breadcrumb -->
}


<!-- Include Select2 CSS -->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.css" />

<!-- CSS to make Select2 fit in with Bootstrap 3.x -->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2-bootstrap.min.css" />

<!-- Include Select2 JS -->
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2.min.js"></script>

<form id="myForm" method="post">
    <section class="content">
        <div class="row">
            <div class=col-xs-3>
            </div>
        </div>
    
        <div style="color:red;font-weight:bold;" id="Validation"></div>
        <div class="table-header">
        
                Generate Id Cards
          


           
                <div>
                    <input type="radio" name="rbType" checked="checked" value="Student"><span style="margin-right:2em;">Student</span>
                    <input type="radio" name="rbType" value="Staff" />Staff &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btncustom P2" id="btnViewData">View Data</a>

                </div>
           

        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="widget-box">
         
                    <input type="hidden" value="@Model.IsCentral" id="IsCentral" />
                    <input type="hidden" value="@Model.IsoverAll" id="IsOverall" />

                    <div class="widget-body">
                        <div class="widget-main">
                            @if (Model.IsCentral)
                            {

                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Division</label>
                                            <div class="col-sm-6">
                                                @Html.DropDownListFor(model => model.DivisionId, new SelectList(Model.LstDivisions, "DivisionId", "DivisionName"), new { @class = "form-control", id = "DivisionId" })
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Branch</label>
                                            <div class="col-sm-6">
                                                <select id="CboBranch"  class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            }
                            else
                            {
                                <input type="hidden" id="CboBranch" value="@nSubId" />
                            }

                            <div class="row" id="ClassData">
                                <div class="col-xs-12">
                                    <div class="col-xs-6">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Class</label>
                                        <div class="col-sm-6">
                                            <select id="CboClassNumber" name="CourseId" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Section</label>
                                        <div class="col-sm-6 overflowscroll" style="max-height:100px;" >
                                            <select id="Sectionid" name="Sectionid" class="form-control select2 " multiple="multiple" ></select>
                                        </div>
                                        <div class="col-sm-1">
                                            <label> <input type="checkbox" id="checkboxSection"> All</label>
                                          <style>

                                              .overflowscroll {
                                                  overflow-x: hidden;
                                                  overflow-y: hidden;
                                                    height:40px;
                                                  
                                              }
                                          </style>

                                            <script>

                                                $(function () {
                                                    $("#checkboxSection").click(function () {
                                                        if ($(this).is(":checked")) {
                                                            $(".overflowscroll").css('overflow-y','scroll');
                                                            $(".overflowscroll").css('height', '60px');
                                                        } else {
                                                            $(".overflowscroll").css('overflow-y', 'hidden');
                                                            $(".overflowscroll").css('height', '40px');
                                                        }
                                                    });
                                                });
                                            </script>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
               
                <div id="SearchDiv"></div>
            </div>
        </div>
    </section>

</form>

<script>

    $('input[name="rbType"]').click(function radioButton() {

        $("#SearchDiv").html("");
        var rbType = $(this).val();

        if (rbType == "Staff") {
            $('#CboClassNumber').val("");
            $('#CboClassNumber').children().remove();

            $('#Sectionid').select2("val", "")
            $('#Sectionid').children().remove();

            $('#ClassData').hide();
        }
        else {
            $('#ClassData').show();
            onBranchChange();
        }
    });


    $(".select2").select2();

    $("#checkboxSection").click(function () {
        if ($("#checkboxSection").is(':checked')) {
            $("#Sectionid > option").prop("selected", "selected");
            $("#Sectionid").trigger("change");
        } else {
            $("#Sectionid > option").removeAttr("selected");
            $("#Sectionid").trigger("change");
        }
    });


    $(document).ready(function () {

        var IsCentral = $('#IsCentral').val();

        if (IsCentral != "value") {
            LoadClassNumbers();
        }

    });

    $('#DivisionId').change(function () {

        $("#SearchDiv").html("");
        $('#CboClassNumber').children().remove();
        $('#Sectionid').children().remove();

        var DivisionId = $('#DivisionId').val();

        if (DivisionId != 0) {
            $.ajax({
                url: '/Common/GetBranchesByDivisionId',
                data: { DivisionId: DivisionId },
                success: function (data) {

                    data = data.filter(s => s.Institute != "All");

                    var BranchItems = $('#CboBranch');

                    BranchItems.children().remove();

                    BranchItems.append($("<option>").val("0").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });

                    $('#CboBranch').append(BranchItems);
                },
                aync: false
            });
        }
        else {
            var BranchItems = $('#CboBranch');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));

            var ClassItems = $('#CboClassNumber');
            ClassItems.children().remove();
            ClassItems.append($("<option>").val(0).text(""));
        }
    });

    $('#btnViewData').click(function (event) {
        event.preventDefault();

        var rbType = $('input[name=rbType]:checked').val();

        $("#SearchDiv").html("");
        var DivisionId = $('#DivisionId').val();
        var SubscriptionId = $('#CboBranch').val();

        var Class = "";
        var strSectionId = "";

        if (rbType == "Student") {
            var Class = $('#CboClassNumber').val();

            $('#Sectionid :selected').each(function (i, selected) {
                strSectionId += $(selected).val() + ",";
            });
        }

        var Overall = true;

        var isValid = true;
        var Message = "Please fill the mandatory fields :  ";
        var Date = "";
        var IsCentral = $('#IsCentral').val();


        //var TillDate = $('#Date').val();

        if (IsCentral == "value") {
            IsCentral = true;
            if (DivisionId == "null" || DivisionId <= 0 && DivisionId != -1) {
                Message += "Division";
                isValid = false;
            }

            if (SubscriptionId == "null" || SubscriptionId <= 0 && SubscriptionId != -1) {
                if (!isValid)
                    Message += ",";

                Message += " Branch";
                isValid = false;
            }

        }

        if (rbType == "Student") {
            if (Class < -1 || Class == "null") {

                if (!isValid)
                    Message += ",";

                Message += " Class";
                isValid = false;
            }

            if (strSectionId == "") {

                if (!isValid)
                    Message += ",";

                Message += " Section";
                isValid = false;
            }
        }


        if (!isValid) {
            document.getElementById("Validation").innerHTML = Message;
            return;
        }

        document.getElementById("Validation").innerHTML = "";
        $('#imagemodal').show();


        if (DivisionId == undefined)
            DivisionId = 0;

        if (rbType == "Student") {

            $.ajax
                ({
                    error: function (jqXHR, textStatus, errorThrown) {

                        $('#imagemodal').hide();
                    },
                    url: '/AFrontOffice/GetStudentsForIdCards/',
                    data: { DivisionId: DivisionId, SubscriptionId: SubscriptionId, IsCentral: 0, ClassNumber: Class, IsoverAll: Overall, SectionId: strSectionId },
                    success: function (data) {
                        $('#imagemodal').hide();
                        $('#SearchDiv').html('');
                        $('#SearchDiv').html(data);
                    }

                }).done(function () {
                    $('#imagemodal').hide();
                });
        }
        else {
            $.ajax
               ({
                   error: function (jqXHR, textStatus, errorThrown) {

                       $('#imagemodal').hide();
                   },
                   url: '/AFrontOffice/GetStaffDataByBranch/',
                   data: { DivisionId: DivisionId, SubscriptionId: SubscriptionId },
                   success: function (data) {
                       $('#imagemodal').hide();
                       $('#SearchDiv').html('');
                       $('#SearchDiv').html(data);
                   }

               }).done(function () {
                   $('#imagemodal').hide();
               });
        }

    });

    $('#CboBranch').change(function () {

        onBranchChange();
    });

    function onBranchChange() {
        $("#SearchDiv").html("");
        $('#CboClassNumber').children().remove();
        $('#Sectionid').children().remove();

        var BranchId = $('#CboBranch').val();

        if (BranchId != 0) {
            LoadClassNumbers();
        }
        else {
            var BranchItems = $('#CboClassNumber');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));
        }
    }

    function LoadClassNumbers() {

        $.ajax({
            url: '/FReports/GetClasses',
            success: function (data) {
                var ClassItems = $('#CboClassNumber');
                ClassItems.children().remove();
                ClassItems.append($("<option>").val("null").text("--- Select ---"));

                $.each(data, function (i, record) {
                    ClassItems.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay));
                });

                $('#CboClassNumber').append(ClassItems);
            },
            aync: false
        });

    }

    $('#CboClassNumber').change(function () {
        $("#SearchDiv").html("");
        $("#Sectionid").children().remove();
        LoadSectionsDropdown();
    });

    function LoadSectionsDropdown() {
        var SelClassId = $("#CboClassNumber").val();
        var CboBranch = $("#CboBranch").val();

        if (SelClassId != "null" && CboBranch > 0)

            $.ajax({
                url: '/Common/GetSectionsByClassAndBranch',
                data: { nClassNumber: SelClassId, nSubId: CboBranch },
                success: function (result) {

                    var SectionItems = $("#Sectionid")
                    SectionItems.children().remove();
                    //SectionItems.append($("<option>").val("null").text("--- Select ---"))
                    //SectionItems.append($("<option>").val("-1").text("All"))

                    $.each(result, function (e, record) {
                        SectionItems.append($("<option>").val(record.SectionId).text(record.SectionCode))
                    });

                    $("#Sectionid").append(SectionItems);

                    //if (sectionId > 0) {
                    //    document.getElementById("Sectionid").value = sectionId;
                    //    GetStudentData();
                    //}
                },
                async: false
            })
    }

    //$('#Sectionid').change(function () {
    //    GetStudents();
    //})

    $('#Sectionid').change(function () {
        $("#SearchDiv").html("");
        document.getElementById('Validation').innerHTML = ""
    })

</script>