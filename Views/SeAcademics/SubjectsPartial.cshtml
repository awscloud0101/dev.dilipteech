@model IEnumerable<AsteriskBrowserAL.Subjects>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        int nsno = 1;
        <div class="hr hr-18 dotted hr-double" style="margin:5px;"></div>
        <div class="table-header">
            Records Found (@Model.Count())
        </div>
        <div>
            <table class="table tbhover table-striped table-bordered dynamic-table">
                <thead>
                    <tr>
                        <th>
                            S.No.
                        </th>
                        <th>
                            @Html.DisplayName("Subject Name")
                        </th>
                        <th>
                            @Html.DisplayName("Is Elective")
                        </th>
                        <th>
                            @Html.DisplayName("Is for grading")
                        </th>
                        <th>
                            @Html.DisplayName("Is No Exam")
                        </th>
                        <th>
                            @Html.DisplayName("Order in report")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(nsno++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectName)
                            </td>
                            <td>
                                @if (item.IsElective.HasValue)
                                {
                                    @Html.CheckBoxFor(modelItem => item.IsElective.Value, new { @disabled = "disabled", @class = "checkbox" })
                                }
                                else
                                {
                                    <input type="checkbox" disabled="disabled" class="checkbox">
                                }
                            </td>
                            <td>
                                @if (item.IsCoCurricular.HasValue)
                                {
                                    @Html.CheckBoxFor(modelItem => item.IsCoCurricular.Value, new { @disabled = "disabled", @class = "checkbox" })
                                }
                                else
                                {
                                    <input type="checkbox" disabled="disabled" class="checkbox">
                                }
                            </td>
                            <td>
                                @if (item.IsNoExam.HasValue)
                                {
                                    @Html.CheckBoxFor(modelItem => item.IsNoExam.Value, new { @disabled = "disabled", @class = "checkbox" })
                                }
                                else
                                {
                                    <input type="checkbox" disabled="disabled" class="checkbox">
                                }
                            </td>
                            <td>
                                @if (item.OrderId.HasValue)
                                {
                                    @item.OrderId.Value
                                }
                            </td>
                            <td>
                                <div>
                                    <a class="green P2" href="@Url.Action("SubjectsE", "SeAcademics", new { id = item.SubjectId })">
                                        <i class="ace-icon fa fa-pencil  bigger-130"></i>
                                    </a>
                                    <a class="red P2" onclick="btnConfirm(@item.SubjectId)">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <br />
            <br />
            <br />
        </div>
    }
    else
    {
        <span style="color: red;"><b>No subjects found</b></span>
    }
}


@Html.Action("DataTableScripts", "Base")
