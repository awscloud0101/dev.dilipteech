@model IEnumerable<AsteriskBrowserAL.Models.ElectiveSubjectsStudentViewData>
@{
    ViewBag.Title = "ElectiveSubjectsDet";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Elective Subjects</li>
    </ul><!-- /.breadcrumb -->
}


<!--Main Content-->

<section class="content">
    <div class="row">
        <div class=col-xs-4>
            <h3>@Html.ActionLink("<< Elective Subjects", "ElectiveSubjectsGroupsDet", new { id = ViewBag.Selected_GroupId, BatchId = ViewBag.Selected_BatchId })</h3>
        </div>
    </div>
    <br />

    <h4>
        Batch Name: @ViewBag.BatchName
    </h4>
    <h4>
        Group Name: @ViewBag.GroupName
    </h4>
    <!--form start-->
    @using (Html.BeginForm("ElectiveSubjectsDet", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
    {


        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <span style="color: red;">@Html.ValidationMessage("ElectiveSubjectsD")</span>


        <div class="row">
            <div class="col-xs-12">
                @if (null != Model)
                {
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Elective Subject Groups</h3>
                        </div><!-- /.box-header -->

                        <div class="box-body table-responsive no-padding">
                            @Html.ValidationMessage("Book Details")

                            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                <tbody>
                                    <tr>

                                        @*<th>
                                                @Html.DisplayName("Admission Number")
                                            </th>*@

                                        <th>
                                            @Html.DisplayName("Student Name")
                                        </th>

                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td>
                                                    @Html.DisplayFor(modelItem => item.AdmissionNumber)
                                                </td>*@

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                }
                else
                {<span style="color: red;"><b>Data not available</b></span> }
            </div>
        </div>
    }
</section>

