@model AsteriskBrowserAL.Houses

@{
    ViewBag.Title = "Delete House";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Houses</li>
    </ul><!-- /.breadcrumb -->
}








<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Houses Details", "Houses")</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12">

            @using (Html.BeginForm("HousesD", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("Houses")</span>
                    <div class="box-body">
                  
                        <div class="box-header">
                            <h3 class="box-title">Delete House</h3>

                            <button class="btn btn-primary col-xs-1" style="float:right;width:80px" type="submit" >
                                Delete
                            </button>

                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->

                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("House Name")
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.HouseName)
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            }



        </div>
    </div>


</section>




