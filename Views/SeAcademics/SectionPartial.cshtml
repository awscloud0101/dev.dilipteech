
@model IEnumerable<AsteriskBrowserAL.Models.ExamShedulesData>
<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<script src="~/assets/js/jquery-ui.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<div id="dialog-confirm" class="hide">

    <div class="space-6"></div>

    <p id="dValidation" class="bigger-120 bolder center grey">
    </p>
</div>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        int nsno = 1;
        <div class="hr hr-18 dotted hr-double" style="margin:5px;"></div>
        <div class="table-header">
            Records Found (@Model.Count())
        </div>
        <div>
            <table class="table tbhover table-striped table-bordered dynamic-table">
                <thead>
                    <tr>
                        <th>
                            S.No.
                        </th>
                        <th>
                            @Html.DisplayName("Section Code")
                        </th>

                        <th>
                            @Html.DisplayName("Section Name")
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(nsno++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamName)

                            </td>

                            <td>
                                <div>
                                    <a class="green P2" href="@Url.Action("SectionCreationE", "SeAcademics", new { id = item.ExamId, SubId = item.SubscriptionId })">
                                        <i class="ace-icon fa fa-pencil  bigger-130"></i>
                                    </a>
                                    <a class="red P2" onclick="btnConfirm(@item.ExamId,@item.SubscriptionId)">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <br />
            <br />
            <br />
        </div>
    }
    else
    {
        <span style="color: red;"><b>No Section found</b></span>
    }
}


@Html.Action("DataTableScripts", "Base")
<script>
    function btnConfirm(Value, val1) {
        debugger
        if (Value > 0) {
            $.ajax({
                url: '/SeAcademics/ValidationForSectionCreationD',
                data: { id: Value, SubscriptionId: val1 },
                success: function (data) {

                    var url = '/SeAcademics/SectionCreationD?id=' + Value + '&SubscriptionId=' + val1;
                    var title = "Section";

                    OpenDialog(data, url, title);
                },
                async: false
            });
        }
    }

</script>
