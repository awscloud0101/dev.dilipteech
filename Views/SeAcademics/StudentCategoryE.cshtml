    <div class="row">
    <div class="col-xs-12">

        @using (Html.BeginForm("StudentCategoryE", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)

            <span style="color: red;">@Html.ValidationMessage("StudentCategory")</span>

