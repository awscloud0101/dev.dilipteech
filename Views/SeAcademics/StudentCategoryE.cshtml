                <div class="widget-main">*@
            <form class="form-horizontal" role="form">
                @Html.HiddenFor(model => model.CategoryId)
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Category Name")</label>

                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.CategoryName, new { autocomplete = "off", @class = "form-control col-sm-5 textlength", placeholder = "Category Name", @id = "CategoryName", @onchange = "removeError();" })
                    </div>

