
@model IEnumerable<AsteriskBrowserAL.ElectiveSubjectsGroups>

@if (null != Model && Model.Count() > 0)
{
    int nsno = 1;
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Elective Subject Groups</h3>
        </div><!-- /.box-header -->

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>
                       S.No.
                    </th>
                    <th>
                        @Html.DisplayName("Subject Group Name")
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ElectiveSubjectGroupName)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "ElectiveSubjectGroupsE", new { id = item.ElectiveSubjectGroupId }) |
                            @Html.ActionLink("Details", "ElectiveSubjectsGroupsDet", new { id = item.ElectiveSubjectGroupId }) |
                            @Html.ActionLink("Delete", "ElectiveSubjectGroupsD", new { id = item.ElectiveSubjectGroupId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color: red;"><b>Please Select the Class</b></span>
}
