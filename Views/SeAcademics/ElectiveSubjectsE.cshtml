@model AsteriskBrowserAL.ElectiveSubjects

@{
    ViewBag.Title = "ElectiveSubjectsE";
}

<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Elective Subjects</li>
    </ul><!-- /.breadcrumb -->
}


<!--Main Content-->

<section class="content">
    <div class="row">
        <div class=col-xs-4>
            <h3> @Html.ActionLink("<< Elective Subjects Details", "ElectiveSubjectsGroupsDet", new { id = ViewBag.Selected_GroupId, BatchId = ViewBag.Selected_BatchId })</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- form start -->
                @using (Html.BeginForm("ElectiveSubjectsE", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-header">
                        <h3 class="box-title ">Elective Subject</h3>
                    </div>
                    <div class="box-body">
                        <button class="btn btn-primary" type="submit" style="width:80px">
                            Save
                        </button>
                    </div><!-- /.box-header -->

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("ElectiveSubjectsE")</span>

                    @Html.HiddenFor(model => model.ElectiveSubjectId)

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Subject Name")</label>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control", @required = "required", @title = "Please enter Elective Subject Name", placeholder = "Subject Name" })
                        </div>

                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.SubjectName)
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Weekly")</label>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.MaxWeeklyClasses, new { @class = "form-control", placeholder = "Weekly", @type = "number", @min = "0", @required = "required", @title = "Please enter Weekly classes", })
                        </div>

                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.MaxWeeklyClasses)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Code")</label>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.SubjectCode, new { @class = "form-control", placeholder = "Code", @required = "required", @title = "Please enter Elective Subject Name" })
                        </div>

                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.SubjectCode)
                        </div>
                    </div>

                    @*<div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("No Exam")</label>

                            <div class="col-sm-6">
                                @Html.CheckBoxFor(model => model.IsNoExam, new { @class = "col-xs-10 col-sm-5", placeholder = "No Exam" })
                            </div>

                            <div class="col-sm-3">
                                @Html.ValidationMessageFor(model => model.SubjectCode)
                            </div>
                        </div>*@
                    <div class="form-group">

                        <label class="col-sm-1 control-label no-padding-right" for="form-field-1">@Html.Label("Existed Students")</label>
                        <div class="col-sm-2">
                            <p> @Html.ListBox("ExistingStudentsForElectives", (MultiSelectList)ViewBag.ExistingStudentsForElectives, new { @style = "width: 270px;", size = 8 }) </p>
                            <input class="btn btn-primary" type="submit" name="remove"
                                   id="remove" value="Remove" />
                        </div>

                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Non Existing Students")</label>
                        <div class="col-sm-3">
                            <p> @Html.ListBox("NonExistingStudentListinElectiveSubjects", (MultiSelectList)ViewBag.NonExistingStudentListinElectiveSubjects, new { @style = "width: 270px;", size = 8 }) </p>

                            <input class="btn btn-primary" type="submit" name="add"
                                   id="add" value="Add" /><br />
                        </div>

                    </div>


                    <br />
                    <br />
                }
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
