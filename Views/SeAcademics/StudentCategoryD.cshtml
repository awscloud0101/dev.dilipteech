@model AsteriskBrowserAL.StudentCategory

@{
    ViewBag.Title = "Delete StudentCategory";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Student Category</li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">
    <div class="row">
        <div class=col-xs-12>
            <h3>@Html.ActionLink("<< Back to details ", "StudentCategory")</h3>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("StudentCategoryD", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("StudentCategory")</span>

                    <div class="box-header">
                        <h3 class="box-title" style="color: red;">Are you sure you want to delete?</h3>
                        
                        <button class="btn btn-primary" type="submit" style="float:right;width:80px;">
                            Delete
                        </button>

                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body">
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Category Name")
                                    </th>
                                   
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.CategoryName)
                                    </td>
                                   
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>

            }
        </div>
    </div>


</section>

