@model AsteriskBrowserAL.ElectiveSubjects

@{
    ViewBag.Title = "ElectiveSubjectsD";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Setting
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Elective Subjects</li>
    </ul><!-- /.breadcrumb -->
}


<!--Main Content-->

<section class="content">
    <div class="row">
        <div class=col-xs-4>
            <h3>@Html.ActionLink("<< Elective Subject Groups Details", "ElectiveSubjectsGroupsDet", new { id = ViewBag.Selected_GroupId, BatchId = ViewBag.Selected_BatchId })</h3>
        </div>
    </div>
    <br />

    <h4>
        Batch Name: @ViewBag.BatchName
    </h4>
    <h4>
        Group Name: @ViewBag.GroupName
    </h4>

    @if (null != TempData["ElectiveSubjects"])
    {

        <span style="color: red;">

            @Html.Raw(TempData["ElectiveSubjects"])
        </span>

    }

    <div class="row">
        <div>
            <span style="color: red;">
                &nbsp;  <b>Are you sure you want to delete this?</b>
            </span>
        </div>
        <br />
        <div class="col-xs-12">
            <div class="box">
                @using (Html.BeginForm("ElectiveSubjectsD", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-header">

                        <h3 class="box-title">Elective Subjects</h3>
                        <br />
                        <br />
                        <button class="btn btn-primary" type="submit">
                            Delete
                        </button>
                    </div><!-- /.box-header -->

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <span style="color: red;">@Html.ValidationMessage("ElectiveSubjectsD")</span>

                    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>

                                <th>
                                    @Html.DisplayName("Elective Subject Name")
                                </th>

                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.SubjectName)
                                </td>
                            </tr>

                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>



