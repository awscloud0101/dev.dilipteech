@model AsteriskBrowserAL.FeedBackType
@{
    ViewBag.Title = "Create Feedback";
}
<style>
    .field-validation-error {
        color: red;
        font-weight: bold;
    }
</style>

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-gears"></i>
            Settings
        </li>
        <li>
            <i class=""></i>
            Academics
        </li>
        <li class="active">Teacher Feedback</li>
    </ul><!-- /.breadcrumb -->
}




<section class="content">


    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("TeacherFeedbackC", "SeAcademics", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="table-header">

                    Feedback Type
                    <small style="float:right;font-weight:bold;" class="textheader">
                        @Html.ActionLink("Back to Feedback", "TeacherFeedback")
                    </small>

                </div><!-- /.page-header -->
                <!-- form start -->

                <div class="widget-box row" style="padding:10px;">
                    <form class="form-horizontal" role="form">
                        <div class="box">
                            <span style="color:red;font-weight:bold;">@Html.ValidationMessage("FeedBackType")</span>



                        </div>

                        <div class="col-sm-6">


                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-1">@Html.Label("Feedback Type")</label>

                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control textlength", @id = "Desc", placeholder = "Feedback Type" })

                                    <div class="" style="display:none;" id="descrFeedback">
                                        <label style="color:red;font-weight:bold;"> Required</label>
                                    </div>
                                </div>




                            </div>
                        </div>




                        <div class=" col-md-9" align="left">
                            <div class="hr hr-18 dotted hr-double"></div>
                            <button class="btn btn-success btn-sm" onclick="return submitForm();" type="submit">
                                <i class="ace-icon fa fa-check bigger-50"></i>
                                Save
                            </button>
                            &nbsp; &nbsp; &nbsp;
                            <button class="btn btn-sm" type="reset">
                                <i class="ace-icon fa fa-undo bigger-50"></i>
                                Reset
                            </button>
                        </div>


                    </form>
                </div>

            }
        </div>
        <input type="hidden" id="count" name="count" value="0" />
    </div>

</section>

<script type="text/javascript">





    function validateFeedback() {


        document.getElementById("count").value = "1";

        var Desc = document.getElementById("Desc").value;

        validate = true;

        if (Desc == "") {
            document.getElementById("descrFeedback").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("descrFeedback").style.display = "none";
        }


        return validate;
    };

    function submitForm() {

        var validatestatus = validateFeedback();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };


    $('#Desc').focus(function () {
        $('#descrFeedback').hide();
    });
</script>


