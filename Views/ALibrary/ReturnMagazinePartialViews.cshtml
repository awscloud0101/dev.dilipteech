@model IEnumerable<AsteriskBrowserAL.Models.ReturnMagazine>

<div class="row">
    <div class="col-xs-12">
        @if (null != Model)
        {
            int Sno = 1;
            <div class="table-header">
                Books Details
            </div>
            <div style="overflow:auto">
                <table class="table table-hover table-bordered table-striped nowrap" style="font-size:14px;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("SNo")
                            </th>
                            <th>
                                @Html.DisplayName("Accession Number")
                            </th>
                            <th>
                                @Html.DisplayName("Magazine Name")
                            </th>
                            <th>
                                @Html.DisplayName("Student/Staff Name")
                            </th>
                            <th>
                                @Html.DisplayName("Issue Date")
                            </th>
                            <th>
                                @Html.DisplayName("Return Date")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int SNo = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @SNo
                                    </td>
                                    <td>
                                        @item.MagazineCode
                                    </td>
                                    <td>
                                        @item.MagazineName
                                    </td>
                                    <td>
                                        @item.MagazineIssuedTo
                                    </td>
                                    <td>
                                        @if (item.MagazineIssuedDate.Value.ToShortDateString() != "01/01/0001")
                                        {
                                            @item.MagazineIssuedDate.Value.ToString("dd-MMM-yyy")
                                        }
                                    </td>
                                    <td>
                                        @if (item.MagazineIssuedDate.Value.ToShortDateString() != "01/01/0001")
                                        {
                                            @item.MagazineReturnDate.Value.ToString("dd-MMM-yyy")
                                        }
                                    </td>
                                    <td>
                                        @item.BookStatus
                                    </td>
                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            <a class="blue" href="@Url.Action("ReturnMagazinereturn", "ALibrary", new { PerticularMagazineDetailsId = item.MagazineDetailsId ,MagazineDetailsId = @ViewBag.MagazineDetailsId, PublicationId = @ViewBag.PublicationId, PeriodicityId = @ViewBag.PeriodicityId ,UserCategoryId= @ViewBag.UserCategoryId })">
                                                Return
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                SNo++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    <span style="color: red;"><b>Data is not available</b></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
