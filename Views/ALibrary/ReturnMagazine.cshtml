<script>
    window.onload = GetData()
    function GetData() {
        debugger
        $('#SearchViewDiv').hide()
        var MagazineDetailsId = $('#MagazineDetailsId').val()
        var PublicationId = $('#PublicationId').val()
        var PeriodicityId = $('#PeriodicityId').val()
        var UserCategoryId=$('#UserCategoryId').val()
        if (MagazineDetailsId != "" || PublicationId != "" || PeriodicityId != "" || UserCategoryId!="") {
            $.ajax({
                url: '/ALibrary/ReturnMagazinePartial',
                data: { MagazineDetailsId: MagazineDetailsId, PublicationId: PublicationId, PeriodicityId: PeriodicityId, UserCategoryId: UserCategoryId },
                success: function (data) {
                    $('#SearchViewDiv').show()
                    $('#SearchViewDiv').html(data);
                    $('#imagemodal').hide();
                },
                error: function () {
                    $('#imagemodal').hide();
                },
            }).done(function () {
                $('#imagemodal').hide();
            })
        }
    }

    $('#UserCategoryId').change(function () {
        debugger
        $('#Searchteacher').hide();
        $('#Teacher').val('');
        $('#SearchViewDiv').hide()
        $('#Date').val('')
        $('#PeriodicityId').val('').trigger('change.select2');
        $('#PublicationId').val('').trigger('change.select2');
        $('#AuthorId').val('').trigger('change.select2');
        $('#BookDetailsId').val('').trigger('change.select2');
        $('#MagazineDetailsId').val('').trigger('change.select2');
        $('#DeptId').val('');
        $('#SectionId').val('');
        var UserCategoryVal = $('#UserCategoryId').val();
        if (UserCategoryVal == 1) {
            $('#StaffUser').show();
            $('#StudentUser').hide();
            $('#StudentSearch').hide();
            $('#Searchteacher').show();
        }
        else if (UserCategoryVal == 2) {
            $('#StudentUser').show();
            $('#StaffUser').hide();
            $('#StudentSearch').show();
            $('#Searchteacher').hide();
        }
        else if (UserCategoryVal == 0) {
            $('#StaffUser').val('');
            $('#StudentUser').val('');
            $('#StaffUser').hide();
            $('#StudentUser').hide();
            var userCategory = $('#UserCategoryId').val();
            $.ajax({
                url: '/ALibrary/ReturnMagazinePartial',
                type: 'POST',
                data: { BookDetailsId: 0, PublicationId: 0, UserCategoryId: userCategory, SectionId: 0, DeptId: 0, AuthorId: 0 },
                success: function (data) {
                    $('#SearchViewDiv').show()
                    $('#SearchViewDiv').html(data);
                    $('#imagemodal').hide();
                },
                error: function () {
                    $('#imagemodal').hide();
                },
            }).done(function () {
                $('#imagemodal').hide();
            })
        }
    })

    function getDepartment() {
        debugger
        $.ajax({
            url: '/ALibrary/GetDeptName',
            success: function (Data) {
                debugger
                var DeptDRP = $('#DeptId')
                DeptDRP.children().remove();
                DeptDRP.append($("<option>").val("").text("--Select--"))
                $.each(Data, function (i, record) {
                    DeptDRP.append($("<option>").val(record.DepartmentId).text(record.DepartmentName));
                });
                $('#DeptId').append(DeptDRP);
            },
            async: false,
        })
    }

    function getSection() {
        $.ajax({
            url: '/ALibrary/GetSectionName',
            success: function (Data) {
                var SectionDRP = $('#SectionId')
                SectionDRP.children().remove();
                SectionDRP.append($("<option>").val("").text("--Select--"))
                $.each(Data, function (i, record) {
                    SectionDRP.append($("<option>").val(record.SectionId).text(record.SectionCode));
                });
                $('#SectionId').append(SectionDRP);
            },
            async: false,
        })
    }

</script>