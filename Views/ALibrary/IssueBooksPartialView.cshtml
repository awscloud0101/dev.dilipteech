@model IEnumerable<AsteriskBrowserAL.proc_GetAvailableBooksData_Result>

<div class="row">
    <div class="col-xs-12">
        @if (null != Model && Model.Count() > 0)
        {
            int Sno = 1;
            <div class="table-header">
                Books Details
            </div>
            <div style="overflow:auto">
                <table class="table table-hover table-bordered table-striped nowrap dynamic-table" style="font-size:14px;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("SNo")
                            </th>
                            <th>
                                @Html.DisplayName("Accession Number")
                            </th>
                            <th>
                                @Html.DisplayName("Book Name")
                            </th>
                            <th>
                                @Html.DisplayName("Edition")
                            </th>
                            <th>
                                @Html.DisplayName("Author")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int SNo = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @SNo
                                    </td>
                                    <td>
                                        @item.BookCode
                                    </td>
                                    <td>
                                        @item.BookName
                                    </td>
                                    <td>
                                        @item.Edition
                                    </td>
                                    <td>
                                        @item.AuthorName
                                    </td>
                                    <td>
                                        @item.BookStatus
                                    </td>
                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            <a class="blue" href="@Url.Action("IssueBookDetails", "ALibrary", new { BookDetailsId = item.BookDetailsId, SectionId = ViewBag.SectionId, ClassId = ViewBag.ClassId })">
                                                Issue
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                SNo++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    <span style="color: red;"><b>Data is not available</b></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

@Html.Action("DataTableScripts","Base")
        }
        else
        {
            <span style="color: red;"><b>Book is not available</b></span>
        }
    </div>
</div>