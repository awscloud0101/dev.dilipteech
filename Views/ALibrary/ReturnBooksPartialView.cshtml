@model IEnumerable<AsteriskBrowserAL.Models.BookDetailsData>

<div class="row">
    <div class="col-xs-12">
        @if (null != Model)
        {
            int Sno = 1;
            <div class="table-header">
                Books Details
            </div>
            <div style="overflow:auto">
                <table class="table table-hover table-bordered table-striped nowrap" style="font-size:14px;">
                    <thead>
                        <tr>
                            <th>
                               S.No.
                            </th>
                            <th>
                                @Html.DisplayName("Book Issued To")
                            </th>
                            <th>
                                @Html.DisplayName("Accession Number")
                            </th>
                            <th>
                                @Html.DisplayName("Book Name")
                            </th>

                            <th>
                                @Html.DisplayName("Issue Date")
                            </th>
                            <th>
                                @Html.DisplayName("Return Date")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int SNo = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @SNo
                                    </td>
                                    <td>
                                        @item.IssuedToName
                                    </td>
                                    <td>
                                        @item.BookCode
                                    </td>
                                    <td>
                                        @item.BookName
                                    </td>
                                    <td>
                                        @item.IssueDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @item.ReturnDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @item.BookStatus
                                    </td>
                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            @*<a class="blue" href="@Url.Action("ReturnBookPartialReturnView", "ALibrary", new { barCode = item.BookCode ,BookDetailsId= ViewBag.BookDetailsId, PublicationId=ViewBag.PublicationId, UserCategoryId = ViewBag.UserCategoryId , SectionId = ViewBag.SectionId , DeptId = ViewBag.DeptId, AuthorId = ViewBag.AuthorId })">
                                                    Return
                                                </a>*@
                                            <a class="blue" href="@Url.Action("ReturnBookReturn", "ALibrary", new { BookIssueDetailsId = item.BookIssueId,BookDetailsId = item.BookDetailsId, MasterBookId = ViewBag.MasterBookId, PublicationId = ViewBag.PublicationId, AuthorId = ViewBag.AuthorId, WingId = ViewBag.WingId })">
                                            Return
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                SNo++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    <span style="color: red;"><b>Data is not available</b></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>