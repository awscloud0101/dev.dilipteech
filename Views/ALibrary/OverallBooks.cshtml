@model IEnumerable<AsteriskBrowserAL.Models.BookOverallReport>
<!-- #section:basics/content.breadcrumbs -->
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Library
        </li>
        <li class="active">Library Books Report</li>
    </ol>
    <!-- /section:basics/content.breadcrumbs -->
</section>

<script src="bootstrap/js/bootstrap.min.js"></script>
<script src="jquery/jquery-3.0.0.min.js"></script>
<script src="jquery/dataTables.bootstrap.min.js"></script>
<script src="jquery/jqeuery.dataTables.min.js"></script>
<script src="jquery/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link rel="stylesheet" href="bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="jquery/dataTables.bootstrap.min.css" />
<style type="text/css">
    #PageRangeCount {
        height: 50px;
        width: 200px;
    }

    td {
        overflow: auto !important;
    }

</style>


<div style="margin-top:50px;">
    <span style="margin-top:50px; font-weight:bold">Book's Paging</span> &nbsp; &nbsp;@Html.DropDownList("PageRangeCount", new SelectList(ViewBag.BookPageCountList, "PageRangeCount", "PageRangeCount"), new { @class = "btn btn - default dropdown- toggle", value = @ViewBag.CountNumber })

</div>



@if (Model != null)
{
    if (Model.Count() > 0)
    {

        <div class="hr hr-18 dotted hr-double"></div>
        int nsno = 1;
        <div class="table-header">
            @*Records Found (@Model.Count())*@
            Over All Books
            <div style="float:right;">
                <button class="btn btn-info btn-xs" type="submit" onclick="location.href='@Url.Action("OverallBooksExcelReport", "ALibrary")'">
                    <i class="ace-icon fa fa-share bigger-180"></i>
                </button>
            </div>
        </div>
          
                <table class="table table-hover table-bordered table-striped nowrap dynamic-table" style="table-layout:fixed !important;">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("SNo")
                            </th>
                            <th>
                                @Html.DisplayName("Accession Number")
                            </th>
                            <th>
                                @Html.DisplayName("Book Name")
                            </th>
                            <th>
                                @Html.DisplayName("Book Category")
                            </th>
                            <th>
                                @Html.DisplayName("Author")
                            </th>
                            <th>
                                @Html.DisplayName("Publisher")
                            </th>
                            <th>
                                @Html.DisplayName("Year of Publish")
                            </th>
                            <th>
                                @Html.DisplayName("Edition")
                            </th>
                            <th>
                                @Html.DisplayName("Vendor Name")
                            </th>
                            <th>
                                @Html.DisplayName("Invoice Number")
                            </th>
                            <th>
                                @Html.DisplayName("Date Of Purchase")
                            </th>
                            <th>
                                @Html.DisplayName("No Of Pages")
                            </th>
                            <th>
                                @Html.DisplayName("Price")
                            </th>
                            <th>
                                @Html.DisplayName("Remarks")
                            </th>
                            @*<th>
                                    @Html.DisplayName("Status Date")
                                </th>*@
                            <th>
                                @Html.DisplayName("Book Status")
                            </th>
                            <th>
                                @Html.DisplayName("Book Issued To")
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                            <tr >
                                <td >
                                    @(nsno++)
                                </td>
                                <td>
                                    @item.BookCode
                                </td>
                                <td>
                                    @item.BookName
                                </td>
                                <td>
                                    @item.BookCategoryName
                                </td>
                                <td>
                                    @item.Author
                                </td>
                                <td>
                                    @item.Publication
                                </td>
                                <td>
                                    @item.YearOfPublicationStatus
                                </td>

                                <td>
                                    @item.Edition
                                </td>
                                <td>
                                    @item.vendor
                                </td>
                                <td>
                                    @item.InvoiceNumberStatus
                                </td>
                                @if (@item.BookPurchaseDate != default(DateTime))
                                {
                                    <td>
                                        @item.BookPurchaseDate.ToString("dd-MMM-yyyy")
                                    </td>

                                }
                                else
                                {
                                    <td></td>
                                }

                                <td>
                                    @item.NumberOfPages
                                </td>
                                <td>
                                    @item.price
                                </td>
                                <td>
                                    @item.remarks
                                </td>
                                @*<td>
                                        @item.ReplaceDate
                                    </td>*@
                                <td>
                                    @item.BookAvailabilityStatus
                                </td>
                                <td>
                                    @item.BookIssuedToName
                                </td>
                            </tr>

                        }

                        @*<input type="hidden" id="BookCategoryId" name="nBookCategoryId" value="@Model.FirstOrDefault().BookCategoryId" />*@
                    </tbody>
                </table>
    }
    else
    {
        <span style="color: red;"><b>No records to display</b></span>
    }
}
@Html.Action("DataTableScripts", "Base")


<script>

    $('#btnExcel').click(function () {
        $.ajax({
            url: '/ALibrary/OverallBooksExcelReport',
        })
    })

</script>
