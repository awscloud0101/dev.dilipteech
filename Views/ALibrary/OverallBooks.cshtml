            "paging": false,
            "scrollY": 200,
            "scrollX": true,

        });
    });
    $("#PageRangeCount").change(function () {

        var CountNumber = $('#PageRangeCount').val();

        window.location.href = '/ALibrary/OverallBooks?CountNumber=' + CountNumber;
    })
