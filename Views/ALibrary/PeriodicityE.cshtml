@model AsteriskBrowserAL.Periodicity
@{
    ViewBag.Title = "PeriodicityE";
}
<!-- #section:basics/content.breadcrumbs -->
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Library
        </li>
        <li class="active">Periodicity</li>
    </ol>
    <!-- /section:basics/content.breadcrumbs -->
</section>

<section class="content">

    <br />
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("PeriodicityE", "ALibrary", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                @Html.ValidationSummary(true)
                <span style="color: red;" id="valPeriodicity">@Html.ValidationMessage("Periodicity")</span>
                <div class="page-header">
                    <br />
                    <h1>
                        Periodicity
                        <small style="float:right;">
                            @Html.ActionLink("Back To Details", "Periodicity")
                        </small>
                    </h1>
                </div>

                    <!-- form start -->
                <form class="form-horizontal" role="form">

                    <input type="hidden" name="PeriodicityId" value="@Model.PeriodicityId" />
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right " for="form-field-1">@Html.Label("Name")</label>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Name, new { @required = "required", autocomplete = "off", @class = "form-control col-sm-5 textlength", placeholder = "Author Name", @id = "AuthorName" })
                        </div>
                        <div class="col-sm-3" style="display:none;" id="vName">
                            <label style="color:red;font-weight:bold;"> Required </label>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right " for="form-field-1">@Html.Label("Short Description")</label>

                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.ShortDescription, new { @required = "required", autocomplete = "off", @class = "form-control col-sm-5 textlength", placeholder = "Short Description", @id = "ShortName" })
                        </div>
                        <div class="col-sm-3" style="display:none;" id="vShortName">
                            <label style="color:red;font-weight:bold;"> Required </label>
                        </div>
                    </div>
                    <div class="hr hr-18 dotted hr-double"></div>
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-success btn-sm" onclick="return submitForm()" type="submit">
                            <i class="ace-icon fa fa-check bigger-50"></i>
                            Save
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-sm" type="reset">
                            <i class="ace-icon fa fa-undo bigger-50"></i>
                            Reset
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
    <input type="hidden" id="count" name="count" value="0" />
</section>

<script>
    $('#Name').focus(function () {
        $('#valPeriodicity').hide()
    })
    $('#ShortDescription').focus(function () {
        $('#valPeriodicity').hide()
    })
</script>