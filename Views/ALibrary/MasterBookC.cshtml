@model AsteriskBrowserAL.MasterBook
@{
    ViewBag.Title = "Master Books";
}

@section BreadCrumb{
    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-graduation-cap"></i>
            Academics
        </li>
        <li>
            <i class=""></i>
            Library
        </li>
        <li class="active">Master Book</li>
    </ul><!-- /.breadcrumb -->
}



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("MasterBookC", "ALibrary", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @*@Html.HiddenFor(Model => Model.BookCategory)*@
                @Html.HiddenFor(Model => Model.MasterBookId)
                <input type="hidden" id="BookCategory" , name="BookCategory" value="@ViewBag.BookCategoryId" />
                <div class="box">
                    <span style="color:red;font-weight:bold;" id="ValMasterBook">@Html.ValidationMessage("MasterBook")</span>

                    <div class="page-header">

                        <h1>
                            Master Book
                            <small style="float:right;font-weight:bold;">
                                @Html.ActionLink("Back To Details", "MasterBook", new { BookCategoryId = @ViewBag.BookCategoryId })
                            </small>
                        </h1>
                    </div><!-- /.page-header -->
                    <!-- form start -->
                    <form class="form-horizontal" role="form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="box-body">

                            @*<div> <span id="required" style="color:red;">Enter Book Name and Description </span></div>*@
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Book Name")</label>

                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.BookName, new { @class = "form-control", placeholder = " Book Name", @id = "MasterBookName", @maxLength = "30", @onchange = "removeError();" })
                                </div>

                                <div class="col-sm-3" style="display:none;" id="MBName">
                                    <label style="color:red;font-weight:bold;"> Required </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Book Location")</label>

                                <div class="col-sm-3">
                                    
                                    @Html.DropDownList("BookLocationId", null, "--- Select ---", new { @class = "form-control", id = "BookLocationId", @onchange = "removeError();" })
                                </div>

                                <div class="col-sm-3" style="display:none;" id="MBLocation">
                                    <label style="color:red;font-weight:bold;"> Required </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.Label("Other Details")</label>

                                <div class="col-sm-3">
                                    @Html.TextBoxFor(model => model.OtherDetails, new { @class = "form-control", placeholder = "Other Details", @id = "OtherDetails", @maxLength = "30", @onchange = "removeError();" })
                                </div>

                                <div class="col-sm-3" style="display:none;" id="MBOtherdetails">
                                    <label style="color:red;font-weight:bold;"> Required </label>
                                </div>
                            </div>
                        </div>


                        <div class="hr hr-18 dotted hr-double"></div>
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-success btn-sm" id="submit" @*onclick="return submitForm();" type="submit"*@>
                                <i class="ace-icon fa fa-check bigger-50"></i>
                                Save
                            </button>
                            &nbsp; &nbsp; &nbsp;
                            <button class="btn btn-sm" type="reset" id="reset" @*onclick="return resetBookCategory();"*@>
                                <i class="ace-icon fa fa-undo bigger-50">
                                </i>
                                Reset
                            </button>
                        </div>
                    </form>
                </div>
            }
        </div>

    </div>
    <input type="hidden" id="count" name="count" value="0" />
</section>
<script>

    $('#submit').click(function () {
        var valid = true;
        var masterbook = $('#MasterBookName').val();
        //var masterbookLocation = $('#BookLocationId').val();
        //var mbothaerdetails = $('#OtherDetails').val();
        if (masterbook == "" || masterbook == null || masterbook == undefined) {
            $('#MBName').show();
            valid = false;
        }
        //if (masterbookLocation == "" || masterbookLocation == null || masterbookLocation == undefined || masterbookLocation==0) {
        //    $('#MBLocation').show();
        //    valid = false;
        //}
        //if (mbothaerdetails == "" || mbothaerdetails == null || mbothaerdetails == undefined) {
        //    $('#MBOtherdetails').show();
        //    valid = false;
        //}
        return valid
    });

    $('#MasterBookName').focus(function () {
        $('#MBName').hide();
        $('#ValMasterBook').hide();
    })
    $('#MasterBookLocation').focus(function () {
        $('#MBLocation').hide();
        $('#ValMasterBook').hide();
    })
    $('#OtherDetails').focus(function () {
        $('#MBOtherdetails').hide();
        $('#ValMasterBook').hide();
    })

    $('#reset').click(function () {
        $('#MBName').hide();
        $('#MBLocation').hide();
        $('#MBOtherdetails').hide();
        $('#OtherDetails').val('');
        $('#MasterBookLocation').val('');
        $('#MasterBookName').val('');
    })
    $("#MasterBookName").keypress(function (e) {
        debugger
        var TemplateName = $('#MasterBookName').val();

        if (e.which == 32) {
            if (TemplateName.length == "") {
                return false;
            }
        }

    });
    $("#OtherDetails").keypress(function (e) {
        debugger
        var otherdetails = $('#OtherDetails').val();
        if (e.which == 32) {
            if (otherdetails.length == "") {
                return false;
            }
        }
    });

</script>