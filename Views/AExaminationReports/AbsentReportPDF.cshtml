@model List<AsteriskBrowserAL.Models.ExaminationResultsData>

@{
    Layout = null;
    int sno = 1;
}

<style>
    table {
        page-break-after: auto;
    }

    tr {
        page-break-inside: avoid;
        page-break-after: auto;
    }

    td {
        page-break-inside: avoid;
        page-break-after: auto;
    }

    thead {
        display: table-header-group;
    }

    tfoot {
        display: table-footer-group;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <table class="table tbhover table-striped table-bordered dynamic-table" style="font-size:18px;border-collapse:collapse;width:100%" border="1">
            <thead>
                <tr>
                    <td colspan="8">
                        <div class="row">
                            <div style="margin-left:0em;font-size:19px;font-weight:bold;margin-top:1em;">
                                <table width="100%">
                                    <tr>
                                        <td align="center" style="width:33px;font-weight:bold">
                                            <span style="font-size:32px;font-weight:bold">@Model.FirstOrDefault().InstituteName</span><br />
                                        </td>
                                    </tr>
                                    @*<tr>
                                        <td align="center" style="width:33px;font-weight:bold">
                                            <span style="font-size:28px;font-weight:bold">@Model.FirstOrDefault().InstituteName</span><br />
                                        </td>
                                    </tr>*@

                                </table>
                            </div>
                            <div style="margin-left:0em;font-size:19px;font-weight:bold;margin-top:1em;">
                                <table width="100%">
                                    <tr>
                                        <td align="left" style="width:33px;font-weight:bold">Section : @Model.FirstOrDefault().SectionName </td>
                                        <td align="center" style="width:33px;font-weight:bold">TestName :@Model.FirstOrDefault().ExamName </td>
                                        <td align="right" style="width:33px;font-weight:bold"> Test Date : @Model.FirstOrDefault().ExaminationDate </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr style="margin-top:1em">
                    <th>
                        @Html.DisplayName("SNo")
                    </th>
                    <th>
                        @Html.DisplayName("Branch")
                    </th>
                    <th>
                        @Html.DisplayName("Admission Number")
                    </th>
                    <th>
                        @Html.DisplayName("Student Name")
                    </th>
                    <th>
                        @Html.DisplayName("Class")
                    </th>
                    <th>
                        @Html.DisplayName("Exam Name")
                    </th>
                    <th>
                        @Html.DisplayName("Exam Date")
                    </th>
                    <th>
                        @Html.DisplayName("Status")
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(sno++)
                        </td>
                        <td>
                            @item.BranchName
                        </td>

                        <td>
                            @item.AdmissionNumber
                        </td>

                        <td>
                            @item.StudentName
                        </td>

                        <td>
                            @item.SectionName
                        </td>

                        <td>
                            @item.ExamName
                        </td>

                        <td>
                            @item.ExaminationDate
                        </td>
                        <td>
                            @if (item.IsAbsent == true)
                            {
                                @Html.DisplayName("Absent")
                            }
                            else
                            {
                                @Html.DisplayName(" ")
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>