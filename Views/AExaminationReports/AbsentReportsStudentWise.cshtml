<script type="text/javascript">
    $(document).ready(function () {

        $('#divDownload').hide();
        $('#divUpload').hide();
        $('#divWidgetBody').hide();

        //LoadClassDropdown();
    });

    $(".select2").select2();

    function LoadStudentDropdown() {
        debugger
        var DateRange = $("#daterange").val();
        var CboBranch = $("#CboBranch").val();
        $.ajax({
            url: '/AExaminationReports/LoadStudentDropDown',
            data: { DateRange: DateRange, nSubId: CboBranch },
            success: function (result) {
                debugger
                var ClassNumberItems = $("#StudentId")
                ClassNumberItems.children().remove();
                ClassNumberItems.append($("<option>").val("null").text("--- Select ---"))
                $.each(result, function (e, record) {
                    ClassNumberItems.append($("<option>").val(record.StudentId).text(record.StudentName))
                });

                $("#StudentId").append(ClassNumberItems);
                //var SelClassNumber = $("#selClassNumber").val();
                //if (SelClassNumber > 0 && SelClassNumber != "") {
                //    document.getElementById("Sectionid").value = SelClassNumber;
                //    GetExaminations();
                //}
            },
            async: false
        })
    }

    $('#StudentId').change(function () {
        $('#SubjectId').empty();

        var StudentId = $('#StudentId').val();

        if (StudentId < 1) {
            $('#MissingReceiptReportDetails').html('');
            $('#SubjectId').html('');
        }
        else {
            GetSubjects();
            $('#ExaminationResults').html("");
        }
    });

    function GetSubjects() {
        debugger
        var StudentId = $('#StudentId').val();
        var CboBranch = $("#CboBranch").val();
        if (StudentId > 0) {
            $.ajax({

                url: '/AExaminationReports/GetSubjectsByStudent',
                data: { StudentId: StudentId, nSubId: CboBranch },
                success: function (data) {

                    var ExaminationItems = $('#SubjectId');

                    ExaminationItems.children().remove();

                    ExaminationItems.append($("<option>").val("null").text("--- Select ---"));
                    ExaminationItems.append($("<option>").val("0").text(" All"));

                    $.each(data, function (i, record) {

                        ExaminationItems.append($("<option>").val(record.SubjectId).text(record.SubjectName));

                    });

                    $('#SubjectId').append(ExaminationItems);

                    //var ExaminationItems = $('#selExamId').val();
                    //if (ExaminationItems > 0 && ExaminationItems != "") {
                    //    document.getElementById("ExaminationId").value = ExaminationItems;
                    //    GetData();
                    //}
                },
                aync: false
            });
        }
    }

    var status = 0;
    var DisplayValidation = "";

    $('#SubscriptionId').change(function () {
        $('#MissingReceiptReportDetails').html('');

    })

    $('#daterange').change(function () {
        $('#MissingReceiptReportDetails').html('');
        LoadStudentDropdown();

    })

    $('#DivisionId').change(function () {
        debugger
        var DivisionId = $('#DivisionId').val();
        $('#TbSectionWiseReport').html('');
        $('#CboBranch').html('');


        if (DivisionId != 0) {
            LoadBrancheDropdown()
        }
        else {
            var BranchItems = $('#CboBranch');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));

            var ClassItems = $('#CboClassNumber');
            ClassItems.children().remove();
            ClassItems.append($("<option>").val(0).text(""));

        }
    });

    function LoadBrancheDropdown() {
        debugger
        var DivisionId = $('#DivisionId').val();
        $.ajax({
            url: '/Common/GetBranchesByDivision',
            data: { DivisionId: DivisionId, IsAll:false },
            success: function (data) {
                var BranchItems = $('#CboBranch');

                BranchItems.children().remove();

               // BranchItems.append($("<option>").val("0").text("--- Select ---"));

                $.each(data, function (i, record) {
                    if (record.IsCentral != true) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    }
                });

                $('#CboBranch').append(BranchItems);
            },
            aync: false
        });
    }

    $('#CboBranch').change(function () {
        //LoadClassDropdown();
        $('#TbSectionWiseReport').html('');
        $('#MissingReceiptReportDetails').html('');
        $('#daterange').html('');
        $(".select2").select2("val", "");
        $('#StudentId').children().remove();
        $('#SubjectId').html('');
    })

    function GetData() {
        debugger
        var DivisionId = $('#DivisionId').val();
        var BranchId = $('#CboBranch').val();
        var StudentId = $('#StudentId').val();
        var SubjectId = $('#SubjectId').val();
        var IsCentral = $('#IsCentral').val();
        var daterange = $('#daterange').val();

        var isValid = true;
        var Message = "Please fill the mandatory fields :  ";

        if (IsCentral == "value") {
            IsCentral = true;
            if (DivisionId == "null" || DivisionId <= 0 && DivisionId != -1) {
                Message += "Division";
                isValid = false;
            }

            if (BranchId == "null" || BranchId <= 0 && BranchId != -1) {
                if (!isValid)
                    Message += ",";

                Message += " Branch";
                isValid = false;
            }

        }

        if (StudentId == "" || StudentId == null || StudentId == "null") {
            if (!isValid)
                Message += ",";

            Message += " Student";
            isValid = false;
        }

        if (SubjectId == "" || SubjectId == null || SubjectId == "null") {
            if (!isValid)
                Message += ",";

            Message += " Subject";
            isValid = false;
        }
       
        if (daterange == null || daterange == undefined || daterange == "") {
            if (!isValid)
                Message += ",";

            Message += " Date Range";
            isValid = false;
        }

        if (!isValid) {
            document.getElementById("Validation").innerHTML = Message;
            return;
        }

        document.getElementById("Validation").innerHTML = "";

        $.ajax({
            url: '/AExaminationReports/GetAbsentReportStudentWise',
            data: { DivisionId: DivisionId, nBranchId: BranchId, StudentId: StudentId, SubjectId: SubjectId, daterange: daterange },
            beforeSend: function () {
                $('#imagemodal').show();
            },
            success: function (data) {
                debugger
                $('#imagemodal').hide();
                $('#MissingReceiptReportDetails').html(data);
            }
        }).done(function () {
            $('#imagemodal').hide();
        });

    }

    function Validations() {
        var branchId = $('#SubscriptionId').val();
        var daterange = $('#daterange').val();
        var Class = $('#Sectionid').val();
        var Exam = $('#ExaminationId').val();

        var isvalid = true;

        var ValidationString = "Please Select ";
        if (branchId < 0 || branchId == "") {
            ValidationString += "Branch,"
            isvalid = false
        }
        if (Class == "" || Class == null) {
            ValidationString += "Class,"
            isvalid = false
        }

        if (Exam == "" || Exam == null) {
            ValidationString += "Exam,"
            isvalid = false
        }
        if (isvalid == false) {
            document.getElementById("Validation").innerHTML = ValidationString;
            return;
        }
        return isvalid;
    }


  
</script>



