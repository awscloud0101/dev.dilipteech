@model AsteriskBrowserAL.Models.PendingBooksData
@{
    ViewBag.Title = "Individual Dispatch Report";
}

@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Reports
        </li>
        <li class="active">Pending Stock Report</li>
    </ul><!-- /.breadcrumb -->
}




@Html.Action("DatePickerScripts", "Base")

<section class="content">
    <br />

    <div class="row">
        <div class=col-xs-12>
            @using (Html.BeginForm("PendingBooksReport", "SReports", FormMethod.Post))
            {
                if (null != Model)
                {
                    <input type="hidden" id="IsCentral" value="@Model.IsCentral" name="IsCentral" />
                    <span style="color:red;font-weight:bold" id="Validation"></span>
                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                Pending Stock Report
                            </h5>

                            <div class="widget-toolbar no-border">
                                <div class="inline dropdown-hover">
                                    <div class="inline action-buttons">
                                        <a class="P2" id="View" name="View" onclick="return submitForm();"><span class="btn btn-info btn-minier">View Data</span></a>
                                    </div>
                                    @*<button id="View" name="View" class="btn btn-sm btn-primary" onclick="return submitForm();">View Data</button>*@

                                </div>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->

                        <div class="widget-body">
                            <div class="widget-main">

                                @if (Model.IsCentral)
                                {
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <label class="col-xs-4">Division</label>
                                                <div class="col-xs-6">
                                                    @Html.DropDownListFor(model => model.DivisionId, new SelectList(Model.lstDivision, "DivisionId", "DivisionName"), new { @class = "form-control", id = "DivisionId" })
                                                </div>
                                            </div>

                                            <div class="col-xs-6">
                                                <label class="col-xs-4">Branch</label>
                                                <div class="col-xs-6">
                                                    <select id="BranchId" name="SubscriptionId" style="width:243px;" class="form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                }

                                <div class="row">

                                    <div class="col-xs-12">

                                        <div class="col-xs-6">
                                            <label class="col-xs-4">Date Range</label>
                                            <div class="col-xs-6">
                                                <div class="input-group">
                                                    <input type="text" class="form-control pull-right" id="daterange" name="DateRange" autocomplete="off" />
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }


                <div id="PendingBooks"></div>
            }
        </div>
    </div>

</section>
@Html.Action("DatePickerScripts","Base")
<script type="text/javascript">

    var DisplayValidation = "";

    $('#DivisionId').change(function () {

        var DivisionId = $('#DivisionId').val();

        if (DivisionId != 0) {
            $.ajax({

                url: '/Common/GetBranchesByDivisionId',
                data: { DivisionId: DivisionId },
                success: function (data) {

                    var BranchItems = $('#BranchId');

                    BranchItems.children().remove();

                    BranchItems.append($("<option>").val("null").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });

                    $('#BranchId').append(BranchItems);
                },
                aync: false
            });
        }
    });


    function submitForm() {
        debugger
        DisplayValidation = "";
        DisplayValidation = "Please fill the mandatory fields : ";

        var Validation = ValidateIndividualDispatch();

        if (Validation == false) {

            document.getElementById("Validation").innerHTML = DisplayValidation;
        }
        else {
            document.getElementById("Validation").innerHTML = "";
            var IsCentral = $('#IsCentral').val();

            if (IsCentral == "value")
                IsCentral = "true";

            $.ajax({

                url: '/SReports/GetPendingBooksByDateRang',
                data: { DivisionId: $('#DivisionId').val(), BranchId: $('#BranchId').val(), Date: $('#daterange').val(), IsCentral: IsCentral },
                beforeSend: function () {
                    $('#imagemodal').show();
                },
                success: function (data) {
                    $('#imagemodal').hide();


                    $('#PendingBooks').html(data);
                }
            }).done(function () {
                $('#imagemodal').hide();
            });
        }
    }


    function ValidateIndividualDispatch() {

        var valid = true;

        var IsCentral = $('#IsCentral').val();

        if (IsCentral == "value") {
            var Division = $('#DivisionId').val();

            if (Division == 0) {
                valid = false;
                DisplayValidation += "Division, ";
            }

            var BranchId = $('#BranchId').val();
            if (BranchId == null || BranchId == "null" || BranchId == 0) {
                valid = false;
                DisplayValidation += "Branch, ";
            }
        }

        var dtFromDate = $('#daterange').val();
        if (dtFromDate == "") {
            valid = false;
            DisplayValidation += "Date, ";
        }

      

        return valid;
    };

</script>





