@model AsteriskBrowserAL.Models.StockReportData

@{
    ViewBag.Title = "Stock Report Lot Wise";
}



@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-list"></i>
            Stores
        </li>
        <li>
            <i class=""></i>
            Reports
        </li>
        <li class="active">StockReportLotWise</li>
    </ul><!-- /.breadcrumb -->
}





<section class="content">
    <br />
    <div class="row">
        <div class=col-xs-12>
            @using (Html.BeginForm("ExcelStockReportLotWise", "SReports", FormMethod.Post))
            {
                if (null != Model)
                {
                    <div class="widget-box">
                        <div class="widget-header widget-header-flat widget-header-small">
                            <h5 class="widget-title">
                                Stock Report
                            </h5>
                            <div class="widget-toolbar no-border">
                                <div class="inline dropdown-hover">
                                </div>
                            </div>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <label class="col-xs-4">Lot Number</label>
                                            <div class="col-xs-6">
                                                @if (null != Model.lstLots)
                                                {
                                                    @Html.DropDownListFor(model => model.LotNumber, new SelectList(Model.lstLots, "SelLotNumber", "LotNumber"), "--- Select ---", new { @class = "form-control", id = "LotNumber" })
                                                }
                                                else
                                                {
                                                    <select class="form-control"></select>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                }

                <div id="LotDetails"></div>
            }
        </div>

                    </div>

</section>

<script>

    $('#LotNumber').change(function () {
        var LotNumber = $('#LotNumber').val();
        if (LotNumber != "")
        {
            GetData();
        }
        else
        {
            $('#LotDetails').html("");
        }
    });

    function GetData()
    {
        $.ajax({

            url: '/SReports/GetStockReportLotWise',
            data: { LotNumber: $('#LotNumber').val() },
            beforeSend: function () {
                $('#imagemodal').show();
            },
            success: function (data) {
                $('#LotDetails').html(data);
            }
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

    $('#New').click(function () {

        var CategoryId = $('#CategoryId').val();

        if(CategoryId < 1)
        {
            document.getElementById("Validation").innerHTML = "Please select category"
        }
        else
        {
            window.location.href = "/SMasterData/SubCategoryC?CategoryId=" + CategoryId
        }

    });


</script>



