<script type="text/javascript">

    $(document).ready(function () {

        document.getElementById("dtDate").style.display = "none";
      //  document.getElementById("dtEmpty").style.display = "inline";
        
        var IsCentral = $('#IsCentral').val();

        if (IsCentral != "value") {
            LoadClassNumbers();
        }

    });

    $('#TillDate').change(function () {

        if (document.getElementById('TillDate').checked) {
            TillDate = true;
            document.getElementById("dtDate").style.display = "inline";
         //   document.getElementById("dtEmpty").style.display = "none";
        }
        else {
            TillDate = false;
            document.getElementById("dtDate").style.display = "none";
            //document.getElementById("dtEmpty").style.display = "inline";
        }
    });

    $('#OutStanding').change(function () {

        if (document.getElementById('OutStanding').checked) {
            TillDate = true;

            document.getElementById("dtDate").style.display = "none";
         //   document.getElementById("dtEmpty").style.display = "inline";
        }
        else {
            TillDate = false;

            document.getElementById("dtDate").style.display = "inline";
            //document.getElementById("dtEmpty").style.display = "none";
        }
    });

    $('#DivisionId').change(function () {
        var DivisionId = $('#DivisionId').val();

        if (DivisionId != 0) {
            $.ajax({
                url: '/Common/GetBranchesByDivisionId',
                data: { DivisionId: DivisionId },
                success: function (data) {
                    var BranchItems = $('#CboBranch');

                    BranchItems.children().remove();

                    BranchItems.append($("<option>").val("0").text("--- Select ---"));

                    $.each(data, function (i, record) {
                        if (record.IsCentral != true) {
                            BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                        }
                    });

                    $('#CboBranch').append(BranchItems);
                },
                aync: false
            });
        }
        else {
            var BranchItems = $('#CboBranch');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));

            var ClassItems = $('#CboClassNumber');
            ClassItems.children().remove();
            ClassItems.append($("<option>").val(0).text(""));

        }
    });

    $('#CboBranch').change(function () {
        var BranchId = $('#CboBranch').val();

        if (BranchId != 0) {
            LoadClassNumbers();
        }
        else {
            var BranchItems = $('#CboClassNumber');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));
        }
    });

    function LoadClassNumbers() {

        $.ajax({
            url: '/FReports/GetClasses',
            success: function (data) {
                var ClassItems = $('#CboClassNumber');
                ClassItems.children().remove();
                ClassItems.append($("<option>").val("null").text("--- Select ---"));
                ClassItems.append($("<option>").val("-1").text("Except Alumni"));

                $.each(data, function (i, record) {
                    ClassItems.append($("<option>").val(record.ClassNumber).text(record.ClassNumberDisplay));
                });

                $('#CboClassNumber').append(ClassItems);
            },
            aync: false
        });

    }


    $('#btnViewData').click(function () {
        var DivisionId = $('#DivisionId').val();
        var SubscriptionId = $('#CboBranch').val();
        var Class = $('#CboClassNumber').val();
        var Less = $('#Less').val();
        var Percentage = $('#Percentage').val();
        var Overall = true;
        var Studentstype = 0;
        var TillDate = 1;
        var IsHostel = 0;

        if (document.getElementById('OutStanding').checked) {
            TillDate = 1;
        }

        if (document.getElementById('TillDate').checked) {
            TillDate = 2;
        }

        if (document.getElementById('All').checked) {
            Studentstype = 0;
        }

        if (document.getElementById('Active').checked) {
            Studentstype = 1;
        }

        if (document.getElementById('InActive').checked) {
            Studentstype = 2;
        }
        
        if (document.getElementById('AllStudents').checked) {
            IsHostel = 0;
        }
        if (document.getElementById('Hostel').checked) {
            IsHostel = 1;
        }

        if (document.getElementById('DayScholar').checked) {
            IsHostel = 2;
        }

        var isValid = true;
        var Message = "Please fill the mandatory fields :  ";
        var Date = "";
        var IsCentral = $('#IsCentral').val();


        //var TillDate = $('#Date').val();

        if (IsCentral == "value") {
            IsCentral = true;
            if (DivisionId == "null" || DivisionId <= 0 && DivisionId != -1) {
                Message += "Division";
                isValid = false;

            }

            if (SubscriptionId == "null" || SubscriptionId <= 0 && SubscriptionId != -1) {
                if (!isValid)
                    Message += ",";

                Message += " Branch";
                isValid = false;
            }

        }

        if (TillDate == 2) {
            var Date = $('#Date').val();
            if (Date == "" || Date == undefined) {

                if (!isValid)
                    Message += ",";

                Message += " Date";
                isValid = false;
            }
        }

        if (Class < -1 || Class == "null") {

            if (!isValid)
                Message += ",";

            Message += " Class";
            isValid = false;
        }

        if (!isValid) {
            document.getElementById("Validation").innerHTML = Message;
            return;
        }

        document.getElementById("Validation").innerHTML = "";
        $('#imagemodal').show();

        $.ajax
            ({
                error: function (jqXHR, textStatus, errorThrown) {

                    $('#imagemodal').hide();
                },
                url: '/FReports/GetFeeDueReportBySubscriptionid/',
                data: { DivisionId: DivisionId, SubscriptionId: SubscriptionId, IsCentral: IsCentral, ClassNumber: Class, IsoverAll: Overall, Studentstype: Studentstype, TillDate: TillDate, Date: Date, IsHostel: IsHostel, Less: Less,Percentage:Percentage },
                success: function (data) {

                    $('#imagemodal').hide();
                    $('#TbFeeDueReport').html('');
                    $('#TbFeeDueReport').html(data);
                }

            }).done(function () {
                $('#imagemodal').hide();
            });

    });

</script>
