    function submitForm() {
        DisplayValidation = "";
        DisplayValidation = "Please fill the mandatory fileds : ";

        var Validation = ValidateFundsWithDrawal();

        if (Validation == false) {

            document.getElementById("Validation").innerHTML = DisplayValidation;
        }
        else {
            document.getElementById("Validation").innerHTML = "";

            $.ajax({

                url: '/FReports/FundsWithdrawalPartialViewReport',
                data: { DevisionId: $('#DivisionId').val(), BranchId: $('#BranchId').val(), FromDate: $('#FromDate').val(), ToDate: $('#ToDate').val() },
                beforeSend: function () {
                    $('#imagemodal').show();
                },
                success: function (data) {
                    $('#imagemodal').hide();
                    $('#FundWithdrawalReportDIV').html(data);
                }
            }).done(function () {
                $('#imagemodal').hide();
            });
        }
    }

    function ValidateFundsWithDrawal() {
        var IsCentral = $("#IsCentral").val();

        var valid = true;
        var Division = $('#DivisionId').val();
        if (IsCentral == "True") {
            if (Division == 0) {
                valid = false;
                DisplayValidation += "Division, ";
            }

            var BranchId = $('#BranchId').val();
            if (BranchId == null || BranchId == "null" || BranchId == 0) {
                valid = false;
                DisplayValidation += "Branch, ";
            }
        }


        var dtFromDate = $('#FromDate').val();
        if (dtFromDate == "") {
            valid = false;
            DisplayValidation += "From Date, ";
        }

        var dtToDate = $('#ToDate').val();
        if (dtToDate == "") {
            valid = false;
            DisplayValidation += "To Date, ";
        }

        return valid;

    };

