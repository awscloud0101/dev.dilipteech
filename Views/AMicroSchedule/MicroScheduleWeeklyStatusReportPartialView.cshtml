                                            }
                                            else if (d.SyllabusStatus == 1)
                                            {
                                                color = "bgClass1";
                                            }
                                            else if (d.SyllabusStatus == 2)
                                            {
                                                color = "bgClass2";
                                            }

                                            <div class="MyDiv @color">
                                                @d.SubjectDisplay<br />@pd.TutorDisplay
                                            </div>
                                        }
                                    }

                                </td>
                                <td>
                                    @if (null != pd.lstSundayTutorsWithSubject && pd.lstSundayTutorsWithSubject.Count > 0)
                                    {
                                        foreach (var d in pd.lstSundayTutorsWithSubject)
                                        {
                                            string color = "";
                                            if (d.SyllabusStatus == 0)
                                            {
                                                color = "bgClass";
                                            }
                                            else if (d.SyllabusStatus == 1)
                                            {
                                                color = "bgClass1";
                                            }
                                            else if (d.SyllabusStatus == 2)
                                            {
                                                color = "bgClass2";
                                            }

                                            <div class="MyDiv @color">
                                                @d.SubjectDisplay<br />@pd.TutorDisplay
                                            </div>
                                        }
                                    }
                                </td>
                            </tr>
                        }

                    }
                }

            }
            @*@Html.Action("DataTableScripts", "Base", new { IsPaging = false })*@
        </tbody>
    </table>
</div>





