@model AsteriskBrowserAL.Models.FinanceIncomeViewData

<body>
    <div id="mydiv" style="display:none">
        @if (null != Model)
        {
            <input type="hidden" id="CategoryId" value="@Model.CategoryId" />

            <div class="row" style="width:100%">
                <br />
                <div class="col-xs-12">
                    <img class="col-xs-11" id="avatar" width="50" height="43" src="@Model.Institute.InstituteLogo" style="margin-bottom:-1.5em;" />
                    <b style="font-weight:bold; margin-left:0.3em; font-size:22px; font-family:'Segoe UI'">@Model.Institute.InstituteAddress</b>
                </div>
                <div style="margin-left:4.7em;font-size:13px;font-family:'Segoe UI'"><b>@ViewBag.InstituteAddres</b></div>
                <br />

                <table style="border-top:1px solid #000000;height:10px; border-bottom:1px solid #000000;">
                    <tr>
                        <td rowspan="2" style="font-family:'Segoe UI';font-size:13px;width:220px">
                            <b>Date</b> <span style="font-family:'Segoe UI';font-size:13px;">@Model.TransactionDate.Value.ToString("dd-MMM-yyyy")</span>
                        </td>
                        <td style="font-family:'Segoe UI';font-size:13px;width:260px;border-right:1px solid #000000;text-align:center" rowspan="2">
                            <b>RECEIPT</b>
                        </td>
                        <td style="font-family:'Segoe UI';width:170px;font-size:13px"><b style="margin-right:2.8em;">Receipt #</b> <span style="font-size:13px;">@Model.Receipt</span></td>
                    </tr>
                </table>

                <br />

                <div>
                    <table width="98%">
                        <tr>
                            <td>
                                <span style="font-family:'Segoe UI';font-size:13px;">Title : </span>
                            </td>
                            <td align="center">
                                <b>@Model.Title</b>
                            </td>
                        </tr>

                        <tr style="margin-top:30px">
                            <td>
                                <span style="font-family:'Segoe UI';font-size:13px;">Description  : </span>
                            </td>
                            <td align="center">
                                <b>@Model.Description</b>
                            </td>
                        </tr>

                        <tr style="margin-top:30px">
                            <td>
                                <span style="font-family:'Segoe UI';font-size:13px;">Amount  : </span>
                            </td>
                            <td align="center">
                                <b>@Model.Amount</b>
                            </td>
                        </tr>

                        <tr style="margin-top:30px">
                            <td>
                                <span style="font-family:'Segoe UI';font-size:13px;">Amount In Words  : </span>
                            </td>
                            <td align="center">
                                <b>@Model.AmountInWords</b>

                            </td>
                        </tr>

                        <tr style="margin-top:30px">
                            <td>
                                <span style="font-family:'Segoe UI';font-size:13px;">Payment Mode  : </span>

                            </td>
                            <td align="center">
                                <b>@Model.DisplayPaymentMode</b>

                            </td>
                        </tr>

                        <tr>
                            @if (@Model.PaymentMode > 1)
                            {
                                <td>
                                    <span style="font-family:'Segoe UI';font-size:13px;">Cheque No : </span>

                                </td>

                                <td align="center" style="border-bottom:dotted 1px;width:250px;">
                                    <b>@Model.ChequeNo</b>

                                </td>

                                <td>
                                    <span style="font-family:'Segoe UI';font-size:13px;">Bank Name : </span>

                                </td>
                                <td align="center" style="border-bottom:dotted 1px;width:250px;">
                                    <b>@Model.BankName</b>

                                </td>
                            }
                        </tr>
                        <tr>
                            @if (@Model.PaymentMode > 1)
                            {
                                <td>
                                    <span style="font-family:'Segoe UI';font-size:13px;">Cheque No : </span>

                                </td>

                                <td align="center" style="border-bottom:dotted 1px;width:250px;">
                                    <b>@Model.ChequeNo</b>

                                </td>

                                <td>
                                    <span style="font-family:'Segoe UI';font-size:13px;">Bank Name : </span>

                                </td>
                                <td align="center" style="border-bottom:dotted 1px;width:250px;">
                                    <b>@Model.BankName</b>

                                </td>
                            }
                        </tr>

                    </table>


                </div>

                <br />
                <br />

                <table>
                    <tr>
                        <td style="font-family:'Segoe UI';font-size:13px;">
                            (Note :  System generated print doesn't required signature)
                        </td>
                    </tr>
                </table>

                <br />
                <table></table>

            </div>

        }


    </div>
</body>

<script type="text/javascript">


    $(document).ready(function () {
        PrintElem('#mydiv');
    });

    function PrintElem(elem) {
        Popup($(elem).html());
    }

    function Popup(data) {
        var mywindow = window.open('', 'my div', 'height=300,width=600');
        mywindow.document.write('<p></p>');
        mywindow.document.write(data);
        mywindow.document.write('<p></p>');

        mywindow.document.close();
        mywindow.focus();

        mywindow.print();
        mywindow.close();

        var CategoryId = $('#CategoryId').val();

        window.location.href = "/FOperations/MiscellaneousFee?CategoryId=" + CategoryId;

        return true;
    }
</script>

