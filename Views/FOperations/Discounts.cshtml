    $("#ClassId").change(function () {
        var ClassNumber = $("#ClassId").val();
        $("#Student").val("");
        $("#SectionId").html("");

        $("#SearchDiv").html("")
        if (ClassNumber > 0) {
            GetSectionDropDown();



        }

    })



    function GetSectionDropDown() {
        var ClassNumber = $("#ClassId").val();
        var BranchId = $("#BranchId").val();
        var SelSectionId = $("#SelSectionId").val();
        var IsCentral = $("#IsCentral").val()
        if (IsCentral == "False") {
            BranchId = 0
        }
        $.ajax({
            url: '/AFrontOffice/GetSectionDropDownByClassNumber',
            data: { nClassNumber: ClassNumber, SubscriptionId: BranchId },
            success: function (Data) {
                var SectionDRP = $('#SectionId')
                SectionDRP.children().remove();
                SectionDRP.append($("<option>").val("").text("--Select--"))
                $.each(Data, function (i, record) {
                    SectionDRP.append($("<option>").val(record.SectionId).text(record.SectionCode));
                });
                $('#SectionId').append(SectionDRP);
                if (SelSectionId > 0) {
                    document.getElementById("SectionId").value = SelSectionId;
                    // GetStudentData()
                    LoadAcademicYear()
                }
            }
        })
    }


    $("#SectionId").change(function () {
        $("#SearchDiv").html("")
        $("#CboAcademicYear").html("")
        var SectionId = $("#SectionId").val();
        $("#Student").val("");
        if (SectionId > 0){
            LoadAcademicYear();
        }
    })


    function GetStudentData() {
        var ClassId = $("#ClassId").val();
        var SectionId = $("#SectionId").val();
        var BranchId = $("#BranchId").val();
        var AcademicYear = $("#CboAcademicYear").val();
        var Student = "";
        var IsCentral = $("#IsCentral").val()
        if (IsCentral == "False") {
            BranchId = 0
        }
        $("#SearchDiv").html("")
        if (SectionId > 0 && BranchId >= 0 && AcademicYear > 0) {
            $("#imageData").show();
            $.ajax({
                url: "/FOperations/GetStudentsForDiscounts",
                data: { StudentName: Student, ClassId: ClassId, SectionId: SectionId, BranchId: BranchId, AcademicYear : AcademicYear },
                success: function (result) {
                    $("#imageData").hide();
                    $("#SearchDiv").html(result)
                }
            });
        }

    }
    window.onload = OnloadData();
</script>
