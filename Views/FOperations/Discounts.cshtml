<section class="content">
   


    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Discounts", "FOperations", FormMethod.Post))
            {
                <div class="table-header">
                    <span style="font-family:calibri;">Concession</span>
                    </div>
                    <div class="widget-box">

           


                        <div class="widget-body">
                            <div class="widget-main">
                                <input type="hidden" id="IsCentral" value="@Model.IsCentral.ToString()" />
                                @if (Model.IsCentral == true)
                                {
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Division</label>
