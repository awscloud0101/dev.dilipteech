@model AsteriskBrowserAL.Models.BranchTransferViewModel

@{
    ViewBag.Title = "BlockResultsRelease";
}

<link href="~/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
<!-- CSS -->
<style>
    .ui-widget-header, .ui-state-default, ui-button {
        background: #3c8dbc;
        border: 1px solid #3c8dbc;
        color: #3c8dbc;
        font-weight: normal;
    }
</style>
@section BreadCrumb{

    <ul class="breadcrumb">
        <li>
            <i class="menu-icon fa fa-money"></i>
            Finance
        </li>
        <li>
            <i class=""></i>
            Operations
        </li>
        <li class="active">
            Block Release
        </li>
    </ul><!-- /.breadcrumb -->
}

<section class="content">

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-xs-12">
                <span style="color:red;font-weight:bold" id="Validation"></span>



                <div class="table-header">
                    <span style="font-family:calibri;">Block Release</span>
                    <div style="float:right;margin-right:10px;">
                        <a class="P2" onclick="GetData()" id="btnViewData2" value="View Data"><span class="btncustom">View Data</span></a>
                    </div>

                </div>



                <div class="widget-box">
            

                    <input type="hidden" value="@Model.IsCentral" id="IsCentral" />

                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="row">
                                @if (Model.IsCentral)
                                {
                                    <div class="col-sm-12">
                                        <div class="col-xs-6">
                                            <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Division</label>
                                            <div class="col-sm-6">
                                                <select id="CboDivision" class="form-control" onchange="LoadBranchCombo()"></select>
                                            </div>
                                        </div>

                                        <div class="col-xs-6">
                                            <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Branch</label>
                                            <div class="col-sm-6">
                                                <select id="CboBranch" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                 
                                }
                                else
                                {
                                    <input type="hidden" id="CboBranch" name="CboBranch" value="@Model.SubscriptionId" />
                                }


                                <div class="col-sm-12">
                                    <div class="col-xs-6">
                             
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-1">Status</label>
                                        <div class="col-sm-6">
                                            <select id="CboStatus" class="form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="box-body table-responsive no-padding" id="dvApproveCheckPenalty">
                </div>

                 
            </div>
        </div>
    }
</section>
<script type="text/javascript">
    $('#ActionDescription').focusin(function () {
        $('#ActionDescriptionNull').hide();
    });

    function ONLOADDATA() {
        var IsCentral = $('#IsCentral').val();

        if (IsCentral == "value") {
            LoadDivisionCombo();
        }

        LoadStatusCombo();

    }
    window.onload = ONLOADDATA();
    function LoadBranchCombo() {
        $('#dvApproveCheckPenalty').html('');
        var DivisionId = $('#CboDivision').val();
        if (DivisionId >= 0) {
            $.ajax({
                url: '/Common/GetBranchesByDivision',
                data: { DivisionId: DivisionId },
                success: function (data) {
                    var BranchItems = $('#CboBranch');
                    BranchItems.children().remove();

                    $.each(data, function (i, record) {
                        BranchItems.append($("<option>").val(record.SubscriptionId).text(record.Institute));
                    });

                    $('#CboBranch').append(BranchItems);
                },
                aync: false
            });
        }
        else {
            var BranchItems = $('#CboBranch');
            BranchItems.children().remove();
            BranchItems.append($("<option>").val(0).text(""));
        }
    }

    function LoadStatusCombo() {
        var StatusItems = $('#CboStatus');
        StatusItems.children().remove();
        StatusItems.append($("<option>").val("-1").text("--- Select ---"));
        StatusItems.append($("<option>").val("0").text("Pending"));
        StatusItems.append($("<option>").val("1").text("Approved"));
        StatusItems.append($("<option>").val("2").text("Rejected"));
        StatusItems.append($("<option>").val("3").text("All"));
        $('#CboStatus').append(StatusItems);
    }

    function LoadDivisionCombo() {
        $('#dvApproveCheckPenalty').html('');
        $.ajax({
            url: '/Common/GetDivisions',
            data: { IsAll: true },
            success: function (data) {
                var BranchItems = $('#CboDivision');
                BranchItems.children().remove();
                $.each(data, function (i, record) {
                    BranchItems.append($("<option>").val(record.DivisionId).text(record.DivisionName));
                });
                $('#CboDivision').append(BranchItems);
            },
            aync: false
        });
    }

    function GetData() {
        var DivisionId = $('#CboDivision').val();
        var SubscriptionId = $('#CboBranch').val();
        var Status = $('#CboStatus').val();
        var IsCentral = $('#IsCentral').val();

        $('#dvApproveCheckPenalty').html('');

        var isValid = true;
        var Message = "Please fill the mandatory fields :  ";

        if (IsCentral == "value") {
            if (DivisionId < 0) {
                Message += "Division";
                isValid = false;
            }

            if (SubscriptionId == "null" || SubscriptionId < 0) {
                if (!isValid)
                    Message += ",";

                Message += " Branch";
                isValid = false;
            }
        }
        else
            DivisionId = 0;

        if (Status < 0) {
            if (!isValid)
                Message += ",";

            Message += " Status";
            isValid = false;
        }

        if (!isValid) {
            document.getElementById("Validation").innerHTML = Message;
            return;
        }
        document.getElementById("Validation").innerHTML = "";
        $('#imagemodal').show();
        $.ajax({
            url: '/FOperations/GetChequePenaltyHistory/',
            data: { DivisionId: DivisionId, SubscriptionId: SubscriptionId, StatusId: Status },
            success: function (data) {
                $('#imagemodal').hide();
                $('#dvApproveCheckPenalty').html(data);
            }
        });
    }

    function SaveStatus(Status, ChequePenaltyId, SubscriptionId) {
        debugger
        $('#imagemodal').show();
        $.ajax({
            url: '/FOperations/SaveChequePenaltyHistory/',
            data: { Status: Status, ChequePenaltyId: ChequePenaltyId, SubscriptionId: SubscriptionId },
            success: function (data) {
                debugger
                var DivisionId = $('#CboDivision').val();
                var SubscriptionId = $('#CboBranch').val();
                var Status = $('#CboStatus').val();
                $.ajax({
                    url: '/FOperations/GetChequePenaltyHistory/',
                    data: { DivisionId: DivisionId, SubscriptionId: SubscriptionId, StatusId: Status },
                    success: function (data) {
                        $('#imagemodal').hide();
                        $('#dvApproveCheckPenalty').html(data);
                    }
                });
            },
            aync: false
        }).done(function () {
            $('#imagemodal').hide();
        });
    }

</script>
