    $('td #KitSoldQuantity').keyup(function () {

        var KitSoldQty = $(this).val();

        var SelRowIndex = $(this).closest('tr').index();
        if (KitSoldQty > 0) {
            var KitPrice = $(this).closest('tr').find('#Payable').val();

            $('#mytab1').find('tr:eq(' + SelRowIndex + ')').find('td:eq(6) input').val(parseInt(KitSoldQty) * parseInt(KitPrice));
        }
        else {
            $('#mytab1').find('tr:eq(' + SelRowIndex + ')').find('td:eq(6) input').val(0);
        }

        var TotPrice = 0;

        $('#mytab1').find('tr').each(function () {
            var row = $(this);

            var KitSoldQuantity = row.find('#KitSoldQuantity').val();

            if (KitSoldQuantity > 0) {
                var TPrice = row.find('#DebitAmount').val();
                TotPrice = parseInt(TotPrice) + parseInt(TPrice);
            }
        });

        $('#TotalCheckedAmount').val(TotPrice);
    });

