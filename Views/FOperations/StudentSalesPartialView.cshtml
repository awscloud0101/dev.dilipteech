    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    $('td input[name="KitId"]').click(function () {
        var TransferId = $(this).closest('tr').find('#TransferId').val();
        document.getElementById("CheckedVal").innerHTML = "";

        var Price = $(this).closest('tr').find('#Price').val();

        if (parseInt(Price) < 1) {
            $('input[name=KitId]').attr('checked', false);
            document.getElementById("CheckedVal").innerHTML = "Price should not be zero";
        }

        $('#SelTransferId').val(TransferId);
    });

