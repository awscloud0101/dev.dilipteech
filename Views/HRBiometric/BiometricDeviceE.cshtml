</section>

<script type="text/javascript">
    function ValidateBank() {
        document.getElementById("count").value = "1";

        //var StartNumber = document.getElementById("StartNumber").value;
        var BiometricDeviceId = document.getElementById("BiometricDeviceId").value;
        var SubscriptionId = document.getElementById("SubscriptionId").value;


        validate = true;

        //if (StartNumber == "") {
        //    document.getElementById("startNumber").style.display = "inline";
        //    validate = false;
        //} else {
        //    document.getElementById("startNumber").style.display = "none";
        //}

        if (BiometricDeviceId == "") {
            document.getElementById("biometricDeviceId").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("biometricDeviceId").style.display = "none";
        }
        if (SubscriptionId == 0) {
            document.getElementById("subscriptionId").style.display = "inline";
            validate = false;
        } else {
            document.getElementById("subscriptionId").style.display = "none";
        }

        return validate;
    };

    function submitForm() {
        var validatestatus = ValidateBank();
        if (validatestatus == false) {
            return false;
        } else {
            return true;
        }
    };


    function removeError() {

        var count = document.getElementById("count").value;
        // var StartNumber = document.getElementById("StartNumber").value;
        var BiometricDeviceId = document.getElementById("BiometricDeviceId").value;
        var SubscriptionId = document.getElementById("SubscriptionId").value;



        if (count != 0) {
            if (BiometricDeviceId != "") {
                document.getElementById("biometricDeviceId").style.display = "none";
            } else {
                document.getElementById("biometricDeviceId").style.display = "inline";
            }
            if (SubscriptionId != 0) {
                document.getElementById("subscriptionId").style.display = "none";
            } else {
                document.getElementById("subscriptionId").style.display = "inline";
            }
            //if (StartNumber != "") {
            //    document.getElementById("startNumber").style.display = "none";
            //} else {
            //    document.getElementById("startNumber").style.display = "inline";
            //}

        }
    };

    //$('#StartNumber').click(function () {
    //    document.getElementById('startNumber').style.display = "none"
    //})
    $('#BiometricDeviceId').click(function () {
        document.getElementById('biometricDeviceId').style.display = "none"
    })

</script>







