@model IEnumerable<AsteriskBrowserAL.Staff>
<div class="hr hr-18 dotted hr-double"></div>

@if (null != Model)
{
    if (Model.Count() > 0)
    {

        <div class="table-header">
            Registered Staff - Records Found (@Model.Count())
        </div>
    <table class="table tbhover table-striped table-bordered dynamic-table">
        <tbody>
            <tr>
                <th>
                    @Html.DisplayName("Employee Number")
                </th>
                <th>
                    @Html.DisplayName("FirstName")
                </th>
                <th>
                    @Html.DisplayName("Joining Date")
                </th>

                <th>
                    @Html.DisplayName("Mobile Number")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @if (item.JoiningDate.HasValue)
                        {
                            @item.JoiningDate.Value.ToString("dd-MMM-yyy")
                        }


                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Complete Registration", "RegisterStaffCR", new { id = item.StaffId })
                    </td>
                    @*<td>
                            @Html.ActionLink("Details", "StaffDetailsD", new { id = item.StaffId })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>

       
    }
    else
    {
        <span style="color:red;font-weight:bold">Data not available</span>
    }

}

@Html.Action("DataTableScripts", "Base")
