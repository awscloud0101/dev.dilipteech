@model List<AsteriskBrowserAL.Models.StaffData>
@{
    int sno = 1;
}


<style>
    .red {
        color: red;
    }

    .hideScrolling {
        overflow: hidden;
        height: 450px;
    }

        .hideScrolling:hover {
            overflow: auto;
        }
</style>

@if (null != Model)
{
    if (Model.Count() > 0)
    {
        <div class="box">
           

                <div class="table-header">
                    Records Found (@Model.Count)
                    
                    <button class="btncustom P2" type="submit" name="button" id="Save" value="Save"  style="float:right;margin-right:10px;margin-top:2px;">
                        save
                    </button>
                </div>
          
                    <div class="overflowscroll">

                        <div class="box-body table-responsive no-padding">
                            <table class="table tbhover table-striped table-bordered dynamic-table" id="mytab1" style="font-size:14px;">
                                <thead>
                                    <tr>
                                        <th>
                                            S.No.
                                        </th>
                                        <th>
                                            <input type="checkbox" id="Selectall" />   @Html.DisplayName("Select Is Roaming")
                                        </th>

                                        @*
                        <th style="min-width:139px">
                            @Html.DisplayName("Branch Name")
                        </th>*@
                                        <th>
                                            @Html.DisplayName("STaff Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Employee Number")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr>
                                            @Html.Hidden("StaffList.Index", (@i))
                                            @Html.Hidden("StaffList[" + (@i) + "].StaffId", Model.ElementAt(i).StaffId)
                                            @Html.Hidden("StaffList[" + (@i) + "].SubscriptionId", Model.ElementAt(i).SubscriptionId)
                                            <td>
                                                @(sno++)
                                            </td>
                                            <td>

                                                @Html.CheckBox("StaffList[" + (@i) + "].IsRoamingStaff", Model.ElementAt(i).IsRoamingStaff, new { @id = "Check" })
                                            </td>

                                            <td>
                                                @Model.ElementAt(i).DisplayName
                                            </td>
                                            <td>
                                                @Model.ElementAt(i).EmployeeNumber
                                            </td>

                                        </tr>

                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                
        </div>
    }
    else
    {
        <span style="color:red;font-weight:bold"> Data not available</span>
    }

}
@Html.Action("DataTableScripts", "Base")

<script>

    $('#Selectall').change(function () {
        if ($(this).prop('checked')) {
            $('tbody tr td #Check').each(function () {
                $(this).prop('checked', true);
            });
        } else {
            $('tbody tr td #Check').each(function () {
                $(this).prop('checked', false);
            });
        }
    });



</script>